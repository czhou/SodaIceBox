<soda>
	<!-- Bug 38391: double quotes in label of dropdown list could not be saved -->
	<puts text="Test: Bug38391.xml starting." />

	<!-- Create new DropDown with quotes in label -->
	<csv file="{@global.scriptsdir}/dev/Bug38391.csv" var="Bug38391">
		<link id="admin_link" />
		<link text="Dropdown Editor" href="./index.php?module=ModuleBuilder&action=index&type=dropdowns" />
		<link text="industry_dom" />
		<textfield id="drop_name" set="{@Bug38391.drop_name}" />
		<textfield id="drop_value" set="{@Bug38391.drop_value}" />
		<button id="dropdownaddbtn" />
		<wait timeout="3" />	
		<button id="saveBtn" />
	
		<!-- Verify expected result -->
		<link text="industry_dom" />
		<wait timeout="3" />
		<browser assert="{@Bug38391.drop_name}" />
	
		<!-- Delete test data -->
		<li id="{@Bug38391.drop_name}">
			<image src="/delete_inline/" click="true" />
		</li>
		<button id="saveBtn" alert="true" />
		<link text="industry_dom" />
		<wait timeout="3" />
		<browser assertnot="{@Bug38391.drop_name}" />
	</csv>
	
	<puts text="Test: Bug38391.xml finished." />
</soda>