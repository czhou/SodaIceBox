<soda>
	<!-- Bug42938: The join on the calls dashlet doesnt check for deleted records. -->
	<puts text="Test: Bug42938.xml starting." />
	
	<!-- Create new Call -->
	<link id="moduleTab_Calls" />
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
	</div>
	<link text="Log Call" />
	<timestamp />
	
	<csv file="{@global.scriptsdir}/dev/Bug42938.csv" var="Bug42938">
		<textfield id="name" set="{@Bug42938.name} {@user.name} {@stamp}" />
		<textfield id="date_start_date" set="{@Bug42938.date_start_date}" />
		<select id="date_start_hours" set="{@Bug42938.date_start_hours}" />
		<select id="date_start_minutes" set="{@Bug42938.date_start_minutes}" />
		<textfield id="duration_hours" set="{@Bug42938.duration_hours}" />
		<select id="duration_minutes" set="{@Bug42938.duration_minutes}" />
		<select id="direction" set="{@Bug42938.direction}" />
		<select id="status" set="{@Bug42938.status}" />
		<checkbox name="reminder_checked" set="{@Bug42938.reminder_checked}" />
		<textfield id="description" set="{@Bug42938.description}" />
		<button value="Save" />
		
		<browser assert="{@Bug42938.name} {@user.name} {@stamp}" />
		
		
		
		<!-- Check that Call appear at Calls dashlet at Home page -->
		<link id="moduleTab_Home" />
		
		<div id="pageContainer">
			<link text="{@Bug42938.name} {@user.name} {@stamp}" click="false" exists="true" />
		</div>
		
		<link text="{@Bug42938.name} {@user.name} {@stamp}" />
		
		<!-- Delete self from invitees -->
		<div id="list_subpanel_users">
			<link text="rem" alert="true" />
		</div>
		
		<!-- Check that Call don't appear at Calls dashlet at Home page -->
		<link text="Home" />
		<div id="pageContainer">
			<link text="{@Bug42938.name} {@user.name} {@stamp}" click="false" exists="false" />
		</div>
	</csv>
	
	<!-- Remove test data -->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<puts text="Test: Bug42938.xml finished." />
</soda>