<soda>
	<!-- Case 11923: Create one-time revenue line item (using offering fields) for an existing opportunity -->
	<puts text="Test: Case11923.xml starting." />
    <script file="{@global.scriptsdir}/modules/lib/OppIBM_Create_FullForm_Lib.xml" />
	
	<!-- Create Revenue Line Item -->
	<button id="opportunities_ibm_revenuelineitems_create_button" />
		
	<textfield id="level30-input" set="" />
	<textfield id="level30-input" append="Learning" />
	<wait timeout="3" />
	<li text="Learning" click="true" />
	<wait timeout="3" />
	<textfield id="level10-input" assert="IBM Global Services" />
	<textfield id="level15-input" assert="Managed Business Process Services (MBPS)" />
	<textfield id="level20-input" assert="GS - MBPS/Human Resources" />
	
	<textfield id="level_search-input" set="" />
	<textfield id="level_search-input" append="level" jscriptevent="onkeyup" />
	<wait timeout="3" />
	<li text="Level 30: Tivoli Service Level Advisor" click="true" />
	<wait timeout="3" />
	<textfield id="level10-input" assert="Software" />
	<textfield id="level15-input" assert="Tivoli Systems" />
	<textfield id="level20-input" assert="Software: Tivoli Automation" />
	<textfield id="level30-input" assert="Tivoli Service Level Advisor" />
	<textfield id="level40-input" assert="" />
	<textfield id="revenue_amount" set="123" />
	
	<button value="Save" />
	
	<browser assert="Revenue Line Items" />
	
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Client_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	
    <puts text="Test: Case11923.xml finished." />
</soda>