<soda>
	<puts text="Test: Bug44557, 'User who created a meeting is invited even if he is not in the invited list' starting." />
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />
    <link text="Admin" />
	<link text="Password Management" />
    <timestamp />
	<csv file="{@global.scriptsdir}/modules/lib/SugarInit_Lib.csv"
	var="init">
		<textfield name="passwordsetting_minpwdlength" set="{@init.min}" />
		<checkbox id="passwordsetting_onenumber" set="false" />
		<checkbox id="passwordsetting_onelower" set="false" />
		<checkbox id="passwordsetting_onespecial" set="false" />
		<checkbox id="SystemGeneratedPassword_checkbox" set="false" />
		<wait timeout="2" />
		<button id="btn_save" />
		<!--Create a new normal user-->
		<browser url="{@global.url}/
			index.php?module=Users&action=EditView&return_module=Users&return_action=DetailView" />
		<!--link text="Create New User" /-->
		<browser assert="Users" />
		<wait timeout="2" />
		<textfield name="sugar_user_name" set="{@init.last_name}" />
		<textfield id="last_name" set="{@init.last_name}" />
		<textfield id="Users0emailAddress0" set="{@init.email}" />
		<link href="#tab2" />
		<wait timeout="2" />
		<textfield id="new_password" set="{@init.pass}" jscriptevent="onkeyup" />
		<textfield id="confirm_pwd" set="{@init.pass}" jscriptevent="onkeyup" />
		<button id="Save" />
        <puts text="Log out and Log in as normal user" />    
    </csv>  
    <link id="moduleTab_Meetings" />
    <link text="Schedule Meeting" />
    <puts text="Creating Meeting" />
	<link href="index.php?module=Activities&amp;action=index" />
	<link text="Schedule Meeting" />
	<csv file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.csv" var="meeting_record">
		<textfield id="name" set="{@meeting_record.name} {@user.name} {@stamp}" />
		<textfield id="location" set="{@meeting_record.location}" />
		<textfield id="description" set="{@meeting_record.description}" />
		<select id="status" set="{@meeting_record.status}" />
		<textfield id="date_start_date" set="{@meeting_record.date_start_date}" />
		<select id="date_start_hours" set="{@meeting_record.date_start_hours}" />
		<select id="date_start_minutes" set="{@meeting_record.date_start_minutes}" />
		<textfield name="duration_hours" set="{@meeting_record.duration_hours}" />
		<select name="duration_minutes" set="{@meeting_record.duration_minutes}" />
		<checkbox name="reminder_checked" set="{@meeting_record.reminder_checked}" />
            <puts text="Removing self from the invitees" />
            <table id="schedulerTable">
			<link text="rem" />
            </table>
            <puts text="Finding invitee" />
            <textfield name="search_last_name" set="{@init.last_name}" />
            <button value="Search" />
            <wait timeout="2" />
            <div id="list_div_win">
                <button value="Add" />
            </div>
            <wait timeout="1" />        
		<button value="Send Invites" />              
		<div id="list_subpanel_users" assertnot="{@user.name}" />
		<form name="DetailView">
			<hidden name="record" var="pre_meeting_id" />
		</form>
		<var var="pre_meeting_name" set="{@meeting_record.name} {@user.name} {@stamp}" />
	</csv>
    <!--Delete created Meeting -->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<!--Delete created normal user-->
    <link text="Admin" />
	<wait timeout="1" />
	<link text="User Management" />
	<wait timeout="1" />
	<link text="{@init.last_name}" />
    <wait timeout="2" />
	<button value="Delete" />
	<wait timeout="1" />
	<button text="OK" />
	<wait timeout="1" />
	<button value="Cancel" />
</soda>