<soda>
	<!-- Case 13288: Verify custom placeholder links at admin screen for Business Admin role -->
	<puts text="Test: Case13288.xml starting." />
	<timestamp />
	
	<!-- Create new Bussiness Admin -->
	<script file="{@global.scriptsdir}/modules/lib/UserIBM_Create_Lib.xml" />
	<link text="Admin" />
	<link id="roles_management" />
	<link text="/Business Administrator/" />
	<button id="acl_roles_users_select_button" />
	<csv file="{@global.scriptsdir}/modules/lib/UserIBM_Create_Lib.csv" var="usercr" />
	<button id="search_form_clear" />
	<textfield id="email_advanced" set="{@usercr.email}" />
	<button id="search_form_submit" />
	<link text="{@usercr.email}" />
	<div id="list_subpanel_users">
		<browser assert="{@usercr.email}" />
	</div>
	
	<!-- Login as Business Admin -->
	<link text="Log Out" />
	<textfield id="user_name" set="{@usercr.last_name}" />
	<textfield id="user_password" set="{@usercr.pass}" />
	<button id="login_button" />
	<button id="next_tab_finish" required="false" />
	<button value="/Finish/" required="false" />
	<link text="Admin" />
	
	<!-- Verify custom links -->
	<link text="Manage solution catalog" click="false" exists="true" />
	<link text="Approval and deployment" click="false" exists="true" />
	<link text="Manage restricted clients" click="false" exists="true" />
	<link text="Custom Call Log templates" click="false" exists="true" />
	<link text="RLI Product Module" click="false" exists="true" />
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />
	<script file="{@global.scriptsdir}/modules/lib/UserIBM_Delete_Lib.xml" />
	
	<puts text="Test: Case13288.xml finished." />
</soda>