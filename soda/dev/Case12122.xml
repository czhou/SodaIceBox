<soda>
	<!-- Case 12122: User removes detail line item via the opportunity view when multiple detail line item exist.-->
	<puts text="Test: Case12122.xml starting." />
    <script file="{@global.scriptsdir}/modules/lib/OppIBM_Create_FullForm_Lib.xml" />
	
	<!-- Open Opportunity for edit and and new revenue line item -->
	<script file="{@global.scriptsdir}/modules/lib/IBMaddRLI.xml" />
	
	<!-- Verify that amount calculated correct -->
	<csv file="{@global.scriptsdir}/dev/Case12122.csv" var="Case12122" />
	<div id="LBL_OPP_MAIN">
		<browser assert="12,456.00" />
		<browser assert="30%" />
	</div>
	
	<!-- Click "Rem" and cancel: Verify that amount value not changed -->
	<link text="rem" alert="false" />
	<wait timeout="3" />
	<div id="LBL_OPP_MAIN">
		<browser assert="12,456.00" />
		<browser assert="30%" />
	</div>
	
	<!-- Click "Rem" and confirm: Verify that amount value changed -->
	<link text="rem" alert="true" />
	<wait timeout="3" />
	<div id="LBL_OPP_MAIN">
		<browser assert="12,345.00" />
		<browser assert="25%" />
	</div>
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Client_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
    <puts text="Test: 12122.xml finished." />
</soda>