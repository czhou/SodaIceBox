<soda>
	<!-- Bug 38347: Relationship Between Call and Related Record is Not Re-Associated Once Relationship is Removed -->
	<puts text="Test: Bug38347.xml starting." />
    
	<csv file="{@global.scriptsdir}/dev/Bug38347.csv" var="Bug38347">
		<!-- Create contact -->
		<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />
		
		<!-- Schedule Call -->
		<link id="moduleTab_Calls" />
		<link text="Log Call" />
		<textfield id="name" set="{@Bug38347.call_name} {@stamp}" />
		<select id="parent_type" set="Contact" />
		
		<!-- Relate to contact -->
		<button id="btn_parent_name" />    
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
		<button value="Save" />
		
		<!-- Open the related record and remove the related Call -->
		<div id="Calls_detailview_tabs">
			<link class="tabDetailViewDFLink" />
		</div>
		<div id="list_subpanel_activities">
			<link text="/rem/" alert="true" />
		</div>
	
		<!-- Go back to the Call Record and re-relate the Call -->
		<link id="moduleTab_Calls" />
		<link text="{@Bug38347.call_name} {@stamp}" />
		<div id="list_subpanel_contacts">
			<link text="{@pre_contact_first_name} {@pre_contact_last_name}" click="false" exist="false" />
		</div>
		<button id="edit_button" />
		<button id="btn_parent_name" />
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
		<button value="Save" />
		
		<!-- Verify expected result -->
		<div id="list_subpanel_contacts">
			<link text="{@pre_contact_first_name} {@pre_contact_last_name}" click="false" exist="true" />
		</div>
		
		<!-- Delete test data -->
		<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
		<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	</csv>
	
    <puts text="Test: Bug38347.xml finished." />
</soda>
    