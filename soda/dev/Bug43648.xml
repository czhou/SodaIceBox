<soda>
	<!-- Bug 43648: You can assign records to inactive users using the quicksearch feature in the user selection field -->
	<puts text="Test: Bug43648.xml starting." />
	<csv file="{@global.scriptsdir}/dev/Bug43648.csv" var="Bug43648">
		<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
		<!-- Create inactive user -->
		<link id="admin_link" />
		<link href="./index.php?module=Users&action=index" />
		<link text="Create New User" />
		<textfield name="sugar_user_name" set="{@Bug43648.first_name}{@stamp}" />
		<textfield name="first_name" set="{@Bug43648.first_name}{@stamp}" />
		<textfield id="last_name" set="{@Bug43648.last_name}{@stamp}" />
		<select name="status" set="{@Bug43648.status}" />
		<textfield id="Users0emailAddress0" set="{@stamp}{@Bug43648.email}" />
		<button id="Save" />
		
		<!-- Create account and assign to inactive user -->
		<link id="moduleTab_Accounts" />
		<wait timeout="5" />
		<link text="{@account_record.name} {@user.name} {@stamp}" />
		<button id="edit_button" />
		<link id="tab2" />
		<textfield id="assigned_user_name" set="{@Bug43648.first_name}{@stamp} {@Bug43648.last_name}{@stamp}" />
		<button id="SAVE" />
		
		<!-- Verify expected result -->
		<link id="tab2" />
		<div id="Accounts_detailview_tabs">
			<browser assertnot="{@Bug43648.first_name}{@stamp} {@Bug43648.last_name}{@stamp}" />
		</div>
		
		<!-- Delete test data -->
		<link id="admin_link" />
		<link href="./index.php?module=Users&action=index" />
		<wait timeout="3" />
		<link text="{@stamp}{@Bug43648.email}" />
		<button value="Delete" />
		<wait timeout="3" />
		<button value="OK" />
		<button value="Cancel" />
		<div id="content">
			<browser assertnot="{@Bug43648.first_name}{@stamp} {@Bug43648.last_name}{@stamp}" />
		</div>
		
		<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	</csv>
	<puts text="Test: Bug43648.xml finished." />
</soda>