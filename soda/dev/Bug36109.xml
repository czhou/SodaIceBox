<soda>
<!-- PLEASE NOTE: This Soda test follows the steps in the bug description to reproduce the problem  -->

	<puts text='--------Bug 36109 Started--------'/>
	<puts text='-- Can not set the Percentage in Tax --'/>

	<!-- Login -->
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />

	<!-- Setup variables for testing -->
	<timestamp />
	<var var="base" set="Bug 36109 SODA TEST {@stamp}" />
	<var var="task" set="{@base}: Task" />

	<!-- Change Decimal Symbol to use a dot ('.') as seperator -->
	<div id="globalLinks">
		<link text="Admin" />
	</div>
	<div class="screen">
		<link text="Locale" />
	</div>
	<textfield name="default_number_grouping_seperator" set="`" />
	<textfield name="default_decimal_seperator" set="." />
	<button value="/Save/" />
	
	<!-- Try to change Tax Rates -->
	<div id="globalLinks">
		<link text="Admin" />
	</div>
	<div class="screen">
		<link text="Tax Rates" />
	</div>
	<button id="btn_create" />
	<textfield name="name" set="Bug36109" />

	<textfield name="value" set="6.25000" />
	<button value="/Save/" />
	<textfield name="value" assert="6.25000" />
	
	<textfield name="value" set="6,25000" />
	<button value="/Save/" />
	<textfield name="value" assert="6.25000" />

	<!-- Change Decimal Symbol to use a comma (',') as seperator -->
	<div id="globalLinks">
		<link text="Admin" />
	</div>
	<div class="screen">
		<link text="Locale" />
	</div>
	<textfield name="default_number_grouping_seperator" set="`" />
	<textfield name="default_decimal_seperator" set="," />
	<button value="/Save/" />
	
	<!-- Try to change Tax Rates -->
	<div id="globalLinks">
		<link text="Admin" />
	</div>
	<div class="screen">
		<link text="Tax Rates" />
	</div>
	
	<link text="Bug36109" />
	
	<textfield name="value" set="6,25000" />
	<button value="/Save/" />
	<textfield name="value" assert="6,25000" />
	
	<textfield name="value" set="6.25000" />
	<button value="/Save/" />
	<textfield name="value" assert="6,25000" />



	<puts text='--------Bug 36109 Finished--------'/>
</soda>
