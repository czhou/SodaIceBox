<soda>
	<!-- Case 12125: User is not Opportunity Owner and/or Line Item Owner and attempts to remove a detail line item via the opportunity view -->
	<puts text="Test: Case12125.xml starting." />
    	<script file="{@global.scriptsdir}/modules/lib/OppIBM_Create_FullForm_Lib.xml" />
	
	<!-- Create and log in as different user -->
	<script file="{@global.scriptsdir}/modules/lib/UserIBM_Create_lib.xml" />
	<link id="logout_link" />
	<textfield id="user_name" set="{@usercr.last_name}" />
	<textfield id="user_password" set="{@usercr.pass}" />
	<button id="login_button" /> 
	
	<!-- Skip not required startup wizard -->
	<button id="next_tab_personalinfo" required="false" />
	<button id="next_tab_locale" required="false" />
	<button id="next_tab_finish" required="false" />
	<button value="/Finish/" required="false" />
	
	<!-- Go to Opportunities and open it in detail view -->
	<link id="moduleTab_Opportunities" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />
	<image src="/edit/" click="true" />
	<button id="Opportunities_subpanel_full_form_button" />
	<button id="CANCEL_HEADER" alert="true" />
	
	<!-- Verify if user not able to remove RLI -->
	<div id="list_subpanel_opportun_revenuelineitems">
		<link text="rem" alert="true" />
	</div>
	<div id="Opportunities_detailview_tabs">
		<browser assert="{@pre_opp_descr}" />
		<browser assert="12,345.00" />
		<browser assert="25%" />
	</div>
	
	<!-- Login as Admin and delete test data -->
	<csv file="{@global.scriptsdir}/csvs/users.csv" var="user" />
	<textfield id="user_name" set="{@user.name}" default="admin" />
	<textfield id="user_password" set="{@user.password}" default="admin" />
	<button id="login_button" />
	
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Client_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/UserIBM_Delete_lib.xml" />
    	<puts text="Test: 12125.xml finished." />
</soda>