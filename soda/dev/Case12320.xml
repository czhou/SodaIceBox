	<!-- Verify that the Documents subpanel appears on Opportunity detail view -->
    <script file="{@global.scriptsdir}/modules/lib/OppIBM_Create_FullForm_Lib.xml" />
	
	<div id="subpanel_title_documents" exists="true" />
	<div id="subpanel_title_leads" exists="false" />
	<div id="subpanel_title_quotes" exists="false" />
	<div id="subpanel_title_campaigns" exists="false" />
	<div id="subpanel_title_cases" exists="false" />
	<div id="subpanel_title_targets" exists="false" />
	<div id="subpanel_title_prospectlists" exists="false" />
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Client_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Case12320.xml finished." />
</soda>