<soda>
	<!-- Bug 44872: Cannot Save Call Record Using Type Ahead -->
	<puts text="Test: Bug44872.xml starting." />
	
	<!-- Create relationship -->
	<link id="admin_link" />
	<link text="Studio" />
	<div id="mbtabs">
        <link text="Campaigns" />
		<link text="Relationships" />
		<button value="Add Relationship" />
		<select id="relationship_type_field" set="one-to-one" />
		<select id="rhs_mod_field" set="Calls" />
		<button name="saverelbtn" />
		<wait timeout="10" />
		<browser assert="campaigns_calls*" />
	</div>
	
	<!-- Create campaign -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />
	
	<!-- Create Call -->
	<link id="moduleTab_Calls" />
	<link text="Log Call" />
	<csv file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.csv" var="call_record">
		<textfield id="name" set="{@call_record.name} {@user.name} {@stamp}" />
		<textfield id="date_start_date" set="{@call_record.date_start_date}" />
		<select id="date_start_hours" set="{@call_record.date_start_hours}" />
		<select id="date_start_minutes" set="{@call_record.date_start_minutes}" />
		<textfield name="duration_hours" set="{@call_record.duration_hours}" />
		<select name="duration_minutes" set="{@call_record.duration_minutes}" />
		<select id="status" set="{@call_record.status}" />
		<textfield id="campaigns_calls_name" set="{@Campaign_New_Record.name}" jscriptevent="onkeyup" />
		<wait timeout="2" />
		<div id="EditView_campaigns_calls_name_results">
			<li text="{@Campaign_New_Record.name} {@user.name} {@stamp}" click="true" />
		</div>
		<button value="Save" />
		
		<!-- Verify expected result -->
		<wait timeout="2" />
		<button value="Save" exists="false" click="false" />
	</csv>
	
	<!-- Delete test data -->
	<link id="admin_link" />
	<link text="Studio" />
	<div id="mbtabs">
		<link text="Campaigns" />
		<link text="Relationships" />
		<wait timeout="10" />
		<!-- Click on 'campaigns_calls*' -->
		<javascript>
			YUI().use('node-event-simulate', function(Y) {
				var trs = Y.all('#relGrid table tr');
				for(i in trs._nodes){
					var text = trs._nodes[i].firstChild.firstChild.firstChild;
					if(text) {
					var str = text.wholeText;
					if(str == 'campaigns_calls*'){
						Y.one(trs._nodes[i]).simulate("mouseover");
						Y.one(trs._nodes[i]).simulate("click");
						}
					}
				}
			});
		</javascript>
		<button name="deleterelbtn" />
	</div>
	<div id="sugarMsgWindow">
		<button text="Yes" />
	</div>
	<wait timeout="10" />
	<!-- Verify if relationship was deleted -->
	<div id="mbtabs">
		<browser assertnot="campaigns_calls*" />
  	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	
	<puts text="Test: Bug44872.xml finished." />
</soda>