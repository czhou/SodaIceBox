<soda>
	<!-- Bug 38901: Additional Details Section Shows Database Value for Dropdown Fields -->
	<puts text="Test: Bug38901.xml starting." />
	
	<!-- Create new DropDown -->
	<csv file="{@global.scriptsdir}/dev/Bug38901.csv" var="Bug38901" />
	<link id="admin_link" />
	<link text="Dropdown Editor" href="./index.php?module=ModuleBuilder&action=index&type=dropdowns" />
	<link text="industry_dom" />
	<textfield id="drop_name" set="{@Bug38901.drop_name}"/>
	<textfield id="drop_value" set="{@Bug38901.drop_value}"/>
	<button id="dropdownaddbtn"/>
	<wait timeout="3" />
	<li id="{@Bug38901.drop_name}" click="false" exists="true" />
	<button id="saveBtn"/>
	<wait timeout="3" />
	
	<!-- Create new account with DropDown -->
	<link id="moduleTab_Accounts" />
	<link text="Create Account" />
	<textfield id="name" set="{@Bug38901.acc_name}"/>
	<select id="industry" set="{@Bug38901.drop_name}"/>
	<button id="SAVE"/>
	
	<!-- Verify expected result -->
	<link id="moduleTab_Accounts" />
	<image src="/info_inline.png/" jscriptevent="onmouseover" />
	<wait timeout="2" />
	<browser assert="{@Bug38901.drop_value}" />
	
	<!-- Delete test data -->
	<link id="admin_link" />
	<link text="Dropdown Editor" href="./index.php?module=ModuleBuilder&action=index&type=dropdowns" />
	<link text="industry_dom" />
	<li id="{@Bug38901.drop_name}">
		<image src="/delete_inline/" click="true"/>
	</li>
	<button id="saveBtn" alert="true" />
	<wait timeout="3" />
	<link text="industry_dom" />
	<browser assertnot="{@Bug38901.drop_name}" />
	
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Bug38901.xml finished." />
</soda>