<soda>
	<!-- Bug 44870: Deleted Campaign Is Not Removed From campaign_id Column in Accounts & Contacts Tables  -->
	<puts text="Test: Bug44870.xml starting." />
	
	<!-- Setup variables for testing -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />
	<!-- {@Campaign_Name} -->
	
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<!-- {@pre_account_name} -->
	<button id="edit_button" />
	<button id="btn_campaign_name" />
	<link text="{@Campaign_Name}" />
	<button id="SAVE" />
	<div id="Accounts_detailview_tabs">
		<browser assert="{@Campaign_Name}" />
	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />
	<!-- {@pre_contact_first_name} {@pre_contact_last_name} -->
	
	<button id="edit_button" />
	<button id="btn_campaign_name" />
	<link text="{@Campaign_Name}" />
	<button id="SAVE_HEADER" />
	<div id="Contacts_detailview_tabs">
		<browser assert="{@Campaign_Name}" />
	</div>
	
	<!-- Delete campaign -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	
	<!-- Testing Contacts -->
	<link id="moduleTab_Contacts" />
	<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	<button id="edit_button" />
	<button id="SAVE_HEADER" />
	<button id="SAVE_HEADER" exists="false" />
		
	<!-- Testing Accounts -->
	<link id="moduleTab_Accounts" alert="true" />
	<link text="{@pre_account_name}" />
	<button id="edit_button" />
	<button id="SAVE" />
	<button id="SAVE" exists="false" />
	
	<link id="moduleTab_Accounts" alert="true" />
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />	
	
	<puts text="Test: Bug44870.xml finished." />
</soda>