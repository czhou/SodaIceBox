<soda>
<!-- PLEASE NOTE: This Soda test follows the steps to reproduce the problem in the bug description -->

	<puts text='--------Bug 43164 Started--------'/>
	<puts text='-- Work flow errors out --'/>

	<!-- Login -->
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />

	<!-- Setup variables for testing -->
	<timestamp />
	<var var="base" set="Bug 43164 SODA TEST {@stamp}" />
	<var var="workflow" set="{@base}: Workflow" />
	<var var="phone" set="Phone {@base}" />
	<var var="street" set="Street {@base}" />
	<var var="city" set="City {@base}" />
	<var var="contact" set="Contact {@base}" />


	<!-- Create a new Workflow for Opportunities -->

	<div id="globalLinks">
		<link text="Admin" />
	</div>
	<link text="Workflow Management" />

	<link id="moduleTab_WorkFlow" />
	<link text="Create Workflow Definition" />

	<textfield name="name" set="{@workflow}" />
	<select name="type" set="Time" />
	<select name="base_module" set="Opportunities" />

	<button value="/Save/" />

	<!-- Skipping creation of first good condition per the bug scenario as this doesn't seem to make a difference -->

	<!-- Create incomplete condition, try save, and then cancel out -->
	<button value="/Create/" />
	<radio value="compare_any_time" set="true"/>
	<button id="save" alert="true" />
	<button value="/Cancel/" />

	<!-- Refresh page to pick up the incorrectly inserted incomplete condition if it exists -->
	<browser action="refresh" />

	<!-- Verify that there is no stale trigger condition on the page -->
 	<browser assertnot="does not change for" />

	<puts text='--------Bug 43164 Finished--------'/>
</soda>
