<soda>
<!-- PLEASE NOTE: This Soda test follows the steps in the bug description to reproduce the problem  -->

	<puts text='--------Bug 35036 Started--------'/>
	<puts text='-- Can not set the Percentage in Tax --'/>

	<!-- Login -->
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />

	<!-- Setup variables for testing -->
	<timestamp />
	<var var="base" set="Bug 35036 SODA TEST {@stamp}" />
	<var var="task" set="{@base}: Task" />

	<!-- Create test account -->
	<link text="Leads" />
	<link text="Create" />
	<textfield id="last_name" set="Test Contact" />
	<textfield id="Leads0emailAddress0" set="test@test.mail" />
	<button value="/Save/" />

	<!-- Sent email -->
	<link text="test@test.mail" />
	<textfield id="emailSubject0" set="Test subj" />
	<textfield id="htmleditor0" set="Test message" />
	<button value="/Send/" />
	<browser send_keys="{ENTER}" />
	<button value="/Ok/" />
	
	<!-- Checke status -->
	<browser assert="Sent" />
	
	
	<!-- Read email -->
	<link text="Leads" />
	<link text="Emails" />
	<div text="Test subj" click="true" />

	<!-- Checke status one more time-->
	<link text="Leads" />
	<link text="Test Contact" />
	<browser assert="Sent" />
	
	<!-- remove test data -->
	<button value="/Delete/" />
	<browser send_keys="{ENTER}" />

	<link text="Emails" />
	<div text="Test subj" click="true" />
	<button value="/Delete/" />
	<browser send_keys="{ENTER}" />

	<puts text='--------Bug 35036 Finished--------'/>
</soda>
