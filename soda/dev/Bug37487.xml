<soda>
	<!-- Bug 37487: Cannot Select 'Type' Value When Creating Workflow and Condition on Contracts Module -->
	<puts text="Test: Bug37487.xml starting." />
	<script file="{@global.scriptsdir}/modules/lib/ContractType_Create_Lib.xml" />
	
	<!-- Create new workflow -->
	<csv file="{@global.scriptsdir}/dev/Bug37487.csv" var="Bug37487">
		<link id="admin_link" />
		<link text="Workflow Management" />
		<link text="Create Workflow Definition" />
		<textfield name="name" set="{@Bug37487.name} {@stamp}" />
		<select name="base_module" set="{@Bug37487.base_module}" />
		<button value="/Save/" />
		
		<!-- Create condition -->
		<button index="4" />
		<radio id="type0" click="true" />
		
		<!-- Select field -->
		<link id="href_compare_specific_1" timeout="2" />
		<select id="selector" set="type" />
		<button value="Save" />
		<button id="next" timeout="1" />
		
		<!-- Specify new "Type" value -->
		<link id="href_future_trigger" />
		
		<!-- Verify expected result -->
		<browser assert="{@ContractType_Create_Lib.name} {@stamp}" /> 
		<button id="save" />
		<wait timeout="1" />
		<button id="save" />
	</csv>
	
	<!-- Remove test data -->
	<script file="{@global.scriptsdir}/modules/lib/ContractType_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Workflow_Delete_Lib.xml" />
	<puts text="Test: Bug37487.xml finished." />
</soda>