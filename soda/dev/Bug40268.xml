<soda>
	<!-- Bug40268: This Soda test follows the steps in the bug description to 
		 reproduce the issue with the parent_name field   -->

	<puts text="Test: Bug40268.xml starting." />

	<csv file="{@global.scriptsdir}/dev/Bug40268.csv" var="Bug40268" >
		<!-- Create new Package -->
		<timestamp />
		<link id="admin_link" />
		<link text="Module Builder" />
		<link id="newPackageLink" />
		<form id="CreatePackage">
			<textfield name="name" set="Package{@Bug40268.bug}{@stamp}" />
			<textfield name="key" set="{@Bug40268.bug}{@stamp}" />
			<button name="savebtn" />
		</form>
		<wait timeout="10"/>
		
		<!-- Create new Module -->
		<table id="new_module">
			<link text="New Module" />
		</table>

		<form name="CreateModule">
			<textfield name="name" set="Module{@Bug40268.bug}{@stamp}" />
			<textfield name="label" set="Module{@Bug40268.bug}{@stamp}" />
			<tr id="factory_modules">
				<link text="company" />
			</tr>
			<button name="savebtn" />
		</form>
		<wait timeout="3" />
		
		<!-- Add new field -->
		<form name="CreateModule">
			<button name="viewfieldsbtn" />
		</form>
		<div id="studiofields">
			<button value="Add Field" />
		</div>
		
		<textfield id="field_name_id" set="{@Bug40268.reserved_word}" jscriptevent="onchange" />
		<textfield id="label_value_id" set="{@Bug40268.reserved_word}" />
		
		<!-- Verify expected result -->
		<form id="popup_form_id">
			<button name="fsavebtn" />
			<span class="required" assert="Invalid Value: Reserved Keyword" />
		</form>
		
		<!-- Remove test data -->
		<button name="cancelbtn" />
		<div id="mbtabs">
			<link text="Package{@Bug40268.bug}{@stamp}" />
		</div>
		<button name="deletebtn" alert="true" />
		<wait timeout="5" />
		<browser assert="Package{@Bug40268.bug}{@stamp} was deleted" />	
	</csv>
	
	<puts text="Test: Bug40268.xml finished." />
</soda>