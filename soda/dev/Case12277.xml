<soda>
	<!-- Case 12277: Display history log for deleted Revenue Line Items -->
	<puts text="Test: Case12277.xml starting." />
    <script file="{@global.scriptsdir}/modules/lib/OppIBM_Create_FullForm_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/IBMaddRLI.xml" />
	
	<!-- Edit RLI -->
	<csv file="{@global.scriptsdir}/dev/Case12277.csv" var="Case12277" />
	<link text="edit" />
	<select id="probability" set="{@Case12277.probability}" />
	<textfield id="revenue_amount" set="{@Case12277.revenue_amount}" />
	<button id="SAVE_FOOTER" />
	
	<!-- Verify that changes are displayed in history log -->
	<button id="btn_view_change_log" />
	<browser assert="{@Case12277.probability}" />
	<browser assert="{@Case12277.revenue_amount}" />
	<!-- Close pop-up -->
	<javascript>
		window.close();
	</javascript>
	
	<!-- Remove RLI and verify if changes are still displayed in history log -->
	<link text="rem" alert="true" />
	<button id="btn_view_change_log" />
	<browser assert="{@Case12277.probability}" />
	<browser assert="{@Case12277.revenue_amount}" />
	<javascript>
		window.close();
	</javascript>
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Client_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Case12277.xml finished." />
</soda>