<soda>
	<!-- Case 12120: Allow users the ability to copy an Opportunity with fields pre populated on the copy -->
	<puts text="Test: Case12120.xml starting." />
    <script file="{@global.scriptsdir}/modules/lib/OppIBM_Create_FullForm_Lib.xml" />
	<!-- Open opportunity in detail view and verify that Probability /Amount / Decision Date are blanked /Default -->
	<csv file="{@global.scriptsdir}/dev/Case12120.csv" var="Case12120"/>
	<button id="duplicate_button" />
	<textfield id="offering_1-input" assert="{@Case12120.offering}" />
	<textfield id="revenue_amount_1" assert="{@Case12120.revenue_amount}"/>
	<select id="probability_1" assert="{@Case12120.probability}" />
	<textfield id="decision_date_1" assert="{@Case12120.decision_date}" />
	<!-- Save opportunity, verify if pop-up appeared and add required fields -->
	<button value="Save" />
	<div id="dctitle">
		<textfield id="offering_template-input" set="le" />
		<wait timeout="3" />
		<li text="{@Case12120.revenue_amount_template}" click="true" />
		<textfield id="revenue_amount_template" set="{@Case12120.revenue_amount_template}" />
		<textfield id="decision_date_template" set="{@Case12120.decision_date_template}" />
		<button value="true" />
	</div>
	
	<!-- Verify that changes applied
		FOR FUTURE: add amount verification-->
	<div id="detailpanel_1">
		<browser assert="{@Case12120.probability}%" />
		<browser assert="{@Case12120.decision_date_template}" />
	</div>
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Client_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
    <puts text="Test: 12120.xml finished." />
</soda>