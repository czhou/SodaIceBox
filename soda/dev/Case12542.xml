<soda>
	<!-- Case 12542: Contact create through Full form - display duplicates list in popup -->
	<puts text="Test: Case12542.xml starting." />
	
	<!-- Create contact with unique Name and Email -->
	<script file="{@global.scriptsdir}/modules/lib/ContactIBM_Create_Lib.xml" />
	
	<!-- Verify if it was created successfully -->
	<link text="View Contacts" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />
	<div class="listViewBody">
		<link text="{@pre_IBMcontact_email}" exists="true" click="false" />
	</div>
	
	<!-- Create new contact with duplicated name\email -->
	<link text="Create Contact" />
	<form id="EditView">
		<textfield name="first_name" set="{@pre_IBMcontact_first_name}" />
		<textfield id="last_name" set="{@pre_IBMcontact_last_name}" />
		<textfield id="phone_work" set="+1 234 891321" />
		<textfield id="Contacts0emailAddress0" set="{@pre_IBMcontact_email}" />
		<textfield id="phone_mobile" click="true" />
		<wait timeout="2" />
		<textfield id="phone_mobile" set="+1 234 891321" />
		<button value="Save" />
	</form>
	
	<!-- Verify if pop-up with diplicates appeared and contain similar contact -->
	<div id="dlg">
		<browser assert="{@pre_IBMcontact_first_name} {@pre_IBMcontact_last_name}" />
		<browser assert="{@pre_IBMcontact_email}" />
		
	<!-- Click Cancel and verify if changes not saved --> 
		<button value="Cancel" />
	</div>
	
	<div class="moduleTitle">
		<browser assert="/Create/" />
	</div>
	<form id="EditView">
		<textfield name="first_name" assert="{@pre_IBMcontact_first_name}" />
		<textfield id="last_name" assert="{@pre_IBMcontact_last_name}" />
		<textfield id="Contacts0emailAddress0" assert="{@pre_IBMcontact_email}" />
		<button value="Save" />
	</form>
	
	<!-- Confirm creation and verify if duplicate was created successfully -->
	<div id="dlg">
		<browser assert="{@pre_IBMcontact_first_name} {@pre_IBMcontact_last_name}" />
		<browser assert="{@pre_IBMcontact_email}" />
		<button value="Confirm Create" />
	</div>
	
	<link text="View Contacts" />
	<button id="search_form_clear" />
	<textfield id="email_basic" set="{@pre_IBMcontact_email}" />
	<button id="search_form_submit" />
	<form id="MassUpdate">
		<browser assert="{@pre_IBMcontact_first_name} {@pre_IBMcontact_last_name}" />
		<browser assert="+1 234 891321" />
	</form>
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />

	<puts text="Test: Case12542.xml finished." />
</soda>