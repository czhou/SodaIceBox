<soda>
	<!-- Bug 39536: This Soda test follows the steps in the bug description to 
		 reproduce the issue with dublicates -->
	<puts text="Test: Bug39536.xml starting." />
	
	<timestamp />
	<csv file="{@global.scriptsdir}/dev/Bug39536.csv" var="Bug39536">
		<!-- Create new contact -->
		<link id="moduleTab_Contacts" />
		<link text="Create Contact" />
		<textfield id="last_name" set="{@Bug39536.lastname} {@stamp}" />
		<button id="SAVE_HEADER" />

		<!-- Create duplicated contact -->
		<link text="Create Contact" />
		<textfield id="last_name" set="{@Bug39536.lastname} {@stamp}" />
		<button id="SAVE_HEADER" />
		<wait timeout="3" />
		<button value="/Save/" />
		
		<!-- Find duplicates by First and Last name -->
		<button id="merge_duplicate_button" />
		<button value="/Next Step >/" />
		<table class="list view">
			<link text="{@Bug39536.lastname} {@stamp}" click='false' exists='true' />
		</table>
		
		<!-- Find duplicates by Last name -->
		<link text="{@Bug39536.lastname} {@stamp}" />
		<button id="merge_duplicate_button" />
		<span id="filter_first_name">
			<image alt="Remove" click="true" />
		</span>
		<button value="/Next Step >/" />
		
		<!-- Verify expected result -->
		<table class="list view">
			<link text="{@Bug39536.lastname} {@stamp}" click='false' exists='true' />
		</table>
	</csv>
	
	<!-- Delete test data -->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	
	<puts text="Test: Bug39536.xml finished." />
</soda>