<soda>
	<!-- Some character sequences are mangled by Sugar -->
	<puts text="Test: Bug43872.xml starting." />
	
	<csv file="{@global.scriptsdir}/dev/Bug43872.csv" var="Bug43872">
		
		<!-- Create note -->
		<link id="moduleTab_Notes" />
		<link text="Create Note or Attachment" />
		
		<textfield id="name" set="{@Bug43872.name}" />
		<textfield id="description" set="{@Bug43872.description}" />
		<button id="SAVE_FOOTER" />
		
		<!-- Verify description is displayed as it was entered -->
		<browser assert="{@Bug43872.description}" />
		
		<!--Click to edit Note -->
		<button id="edit_button" />
		<wait timeout="2" />
		
		<!-- Verify description in edit view -->
		<browser assert="{@Bug43872.description}" />
		<button id="SAVE" />
		
		<!-- Remove note -->
		<button id="delete_button" alert="true" />
	</csv>
	
	<puts text="Bug43872.xml finished." />
</soda>
