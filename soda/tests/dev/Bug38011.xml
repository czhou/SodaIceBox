<soda>
	<!-- Module Name Does Not Show Properly on Display Filters / Show Display Columns Steps -->
	<puts text="Test: Bug38011.xml started." />

	<csv file="{@global.scriptsdir}/dev/Bug38011.csv" var="Bug38011">
		<link id="admin_link" />
		<link text="Rename Tabs" />

		<span id="slot1_value" click="true" />
		<textfield id="slot1_text" set="{@Bug38011.contacts_label}" />
		<textfield id="slot1_text" jscriptevent="onchange" />
		 
		<span id="slot2_value" click="true" />
		<textfield id="slot2_text" set="{@Bug38011.accounts_label}" />
		<textfield id="slot2_text" jscriptevent="onchange" />	
		
		<button name="Save" />
		
		<!-- Go to reports creating page -->
		<link id="moduleTab_Reports" />
		<link text="Create Report" />
		
		<wait timeout="6" />
		<image name="rowsColsImg" click="true" />
		
		<wait timeout="6" />
		<div id="module_select_div">
			<link text="{@Bug38011.accounts_label}" />
		</div>
		
		<!-- verify that elements have new labels -->
		<link id="/ygtvlabelel/" text="{@Bug38011.accounts_label}" exist="true" />
		<link id="/ygtvlabelel/" text="{@Bug38011.contacts_label}" exist="true" />
		
		<!-- clear test modifications -->
		<link id="admin_link" />
		<link text="Rename Tabs" />

		<span id="slot1_value" click="true" />
		<textfield id="slot1_text" set="Contacts" />
		<textfield id="slot1_text" jscriptevent="onchange" />
		<span id="slot2_value" click="true" />
		<textfield id="slot2_text" set="Accounts" />
		<textfield id="slot2_text" jscriptevent="onchange" />	
		<button name="Save" />
	</csv>
	
	<puts text="Test: Bug38011.xml finished." />
</soda>
