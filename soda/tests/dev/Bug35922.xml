<soda>
	<!-- Quick create form currency issue -->
	<puts text="Bug35922.xml starting." />
	
	<csv file="{@global.scriptsdir}/dev/Bug35922.csv" var="Bug35922">

		<!-- Create new Account -->
		<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
		
		<button id="accounts_opportunities_create_button" />	
		<wait condition="true">
			<div id="Default_Opportunities_Subpanel" />
		</wait>
		<wait timeout="3"  />
		
		<!-- Set primary amount value -->
		<select name="currency_id" set="{@Bug35922.currency1}" />		
		<textfield  id="amount" set="{@Bug35922.amount}" />

		<!-- Change currency -->
		<!-- <select name="currency_id" set="Euro : €" /> -->
		<javascript>
			var select = YAHOO.util.Selector.query('span#currency_id select')[0];
			select.options[1].selected = true;
			YAHOO.util.Selector.query('span#currency_id select')[0].onchange();
		</javascript>
		
		<!-- Verify that value changed -->
		<textfield id="amount" value="/{@Bug35922.amount}/" exists="false" />		

		<!-- Remove test account  -->
		<button id="delete_button" alert="true"/>
		
		<!-- Check currency conversion on Creata Opportunity page -->
		<link id="moduleTab_Opportunities" />
		<link text="Create Opportunity" />
		
		<!-- Set primary amount value -->
		<select name="currency_id" set="{@Bug35922.currency1}" />		
		<textfield  id="amount" set="{@Bug35922.amount}" />

		<!-- Change currency -->
		<!-- <select name="currency_id" set="Euro : €" /> -->
		<javascript>
			var select = YAHOO.util.Selector.query('span#currency_id select')[0];
			select.options[1].selected = true;
			YAHOO.util.Selector.query('span#currency_id select')[0].onchange();
		</javascript>
		
		<!-- Verify that value changed -->
		<textfield id="amount" value="/{@Bug35922.amount}/" exists="false" />
		
		<button id="CANCEL_HEADER" alert="true" />
	</csv>
    <puts text="Bug35922.xml finished."/>
</soda>
