<soda>
	<!-- Inconsitant calendar views for events spanning multiple days -->
	<puts text="Test: Bug37953.xml starting." />

	<link id="moduleTab_Meetings" />

	<csv file="{@global.scriptsdir}/dev/Bug37953.csv" var="Bug37953">
		
		<!-- todo: change locator to id -->
		<link text="Schedule Meeting" />
		
		<textfield id="name" set="{@Bug37953.meeting_name}" />
		
		<!-- todo: change locator to id -->
		<textfield name="duration_hours" set="{@Bug37953.meeting_duration_hours}" />
		
		<textfield id="date_start_date" set="{@Bug37953.meeting_start_date}" jscriptevent="onchange" jscriptevent="onblur" />
		
		<!-- todo: change locator to id -->
		<button value="Save" />
		
		<link id="moduleTab_Calendar" />
		<button value="/Year/" />
		<link text="{@Bug37953.month_name}" />
		
		<!-- bad solution: works only if calendar table has 35 cells -->
		<td class="weekEnd" index="10">
			<td text="/{@Bug37953.meeting_name}/" exists="true" />
		</td>
		
		<link text="/Next Month/" />
		
		<td class="weekEnd" index="1">
			<td text="/{@Bug37953.meeting_name}/" exists="true" />
		</td>
		
		<!-- delete meeting -->
		<link id="moduleTab_Meetings" />
		<link text="{@Bug37953.meeting_name}" />
		<button id="delete_button" alert="true" />
		<link text="{@Bug37953.meeting_name}" exists="false" />
	
	</csv>
	
	<puts text="Test: Bug37953.xml finished." />
</soda>