<soda>
	<!--  Duplicating workflow does not duplicate invitees for created activites. -->
	<puts text="Test: Bug44500 starting." />
	
	<csv file="{@global.scriptsdir}/dev/Bug44500.csv" var="Bug44500">
		<link id="admin_link" />
		
		<!-- todo: change locator to id -->
		<link text="Workflow Management" />
		
		<!-- todo: change locator to id -->
		<link text="Create" />
		
		<!-- todo: change locator to id -->
		<textfield name="name" set="{@Bug44500.workflow_name}" />
		
		<!-- todo: change locator to id -->
		<button value="/Save/" />
		
		<!-- create Actions -->
		<!-- todo: change locator to id -->
		<form id="ComponentView">
			<button name="New" />
		</form>
		
		<radio id="action_type2" click="true" />
		
		<wait timeout="2" />
		<tr id="lang_new">
			<link text="record" />
		</tr>
		<select id="selector" set="Call" />
		<button value="Save" />
		<button value="Next" />
		
		<link text="Subject" />
		<textfield name="field_0__field_value" set="Subject" />
		<button value="Save" />
		
		<link text="Duration Hours" />
		<textfield name="field_5__field_value" set="1" />
		<button value="Save" />
		
		<link text="Start Date" />
		<button value="Save" />
		
		<link text="Status" />
		<button value="Save" />
		
		<button value="/Save/" />
		
		<!-- Add Invitees -->
		<browser assert="Invitees" />
		<link text="Invitees" />
		<button value="/Create/" />
		<radio id="user_type4" click="true" />
		<link id="href_specific_user" />
		<select id="selector" set="{@Bug44500.invite_user_name}" />
		<button value="Save" />
		<button value="Save" />
		<browser assert="Send alert to the following recipient" />
		
		<!-- Duplicating workflow  -->
		<link text="Return to Workflow Definition" />
		
		<!-- todo: change locator to id -->
		<button value="/Duplicate/" />
		<textfield name="name" set="{@Bug44500.workflow_name} copy" />
		<button value="/Save/" />
		
		<browser assert="Invitees" />
		<link text="Invitees" />
		<browser assert="Send alert to the following recipient" />
		
		<table class="list view">
			<td text="/{@Bug44500.invite_user_name}/" exists="true" />
		</table>
		
		<!-- deleting test data -->
		<script file="{@global.scriptsdir}/modules/lib/Workflow_Delete_Lib.xml" />
	</csv>
	<puts text="Test: Bug44500 finished." />
</soda>