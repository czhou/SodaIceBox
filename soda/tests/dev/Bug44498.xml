<soda>
	<!-- Duplicating workflows does not copy over all condition data -->
	<puts text="Test: Bug44498 starting." />
	
	<csv file="{@global.scriptsdir}/dev/Bug44498.csv" var="Bug44498">
		<link id="admin_link" />
		<link text="Workflow Management" />
		<link text="Create" />
		<textfield name="name" set="{@Bug44498.workflow_name}" />
		<button value="/Save/" />
		
		<!-- create Conditions -->
		<button value="/Create/" index="1"/>
		
		<radio id="type0" click="true" />
		<wait timeout="1" />
		<tr id="lang_compare_specific">
			<link text="field" />
		</tr>

		<button value="Save" />
		<button id="next" />
		
		<checkbox id="mod_past_trigger" set="true" />
		
		<link id="href_future_trigger" />
		<textfield id="future_trigger__field_value" set="{@Bug44498.future_trigger_value}" />
		<button id="save" />
		
		<link id="href_past_trigger" />
		<textfield id="past_trigger__field_value" set="{@Bug44498.past_trigger_value}" />
		<button id="save" />
		
		<button id="save" />
		
		<!-- Duplicating workflow  -->
		<link text="Workflow Definitions" />
		<link text="{@Bug44498.workflow_name}" />
		<button value="/Duplicate/" />
		<textfield name="name" set="{@Bug44498.workflow_name} copy" />
		<!-- todo: change locator to id -->
		<button value="/Save/" />
		
		<link text="edit" />
		<browser assert="{@Bug44498.future_trigger_value}" />
		<browser assert="{@Bug44498.past_trigger_value}" />	
		<button id="save" />
			
		<!-- deleting test data -->
		<script file="{@global.scriptsdir}/modules/lib/Workflow_Delete_Lib.xml" />
	</csv>
	<puts text="Test: Bug44498 finished." />
</soda>