<soda>
	<!-- System Label for Custom Fields Does Not Localize if Label Is Lowercase -->
	<puts text="Test: Bug41245.xml starting." />

	<link id="admin_link" />
	<link text="Studio" />
	
	<div id="mbtabs">
		<link text="Accounts" />
	</div>

	<link text="Fields" />

	<csv file="{@global.scriptsdir}/dev/Bug41245.csv" var="Bug41245">
		<button value="/Add Field/" />
		
		<textfield id="field_name_id" set="{@Bug41245.field_name}" />
		<textfield id="label_value_id" set="{@Bug41245.display_label}" />
		<textfield id="label_key_id" set="{@Bug41245.system_label}" />
		
		<button value="/Save/" />
		
		<link text="{@Bug41245.field_name}_c" />
		<textfield id="label_value_id" assert="{@Bug41245.display_label}" />
		
		<textfield id="label_value_id" set="{@Bug41245.new_display_label}" />
		<button value="/Save/" />
		
		<link text="{@Bug41245.field_name}_c" />
		<textfield id="label_value_id" assert="{@Bug41245.new_display_label}" />
		<button value="/Delete/"  alert="true" />
	</csv>

	<puts text="Test: Bug41245.xml finished." />
</soda>
