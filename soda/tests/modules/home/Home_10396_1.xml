
<soda>
	<puts text="Test:home_10396_1 dashlet auto refresh every 30 seconds" />
	
	<link id="moduleTab_Home" />
	<browser assert="Add Sugar Dashlets" />
	<!--Add dashlet-->
	<link id="add_dashlets" />
	<wait timeout="5" />
	<div id="dashletsDialog_c">
		<browser assert="Find Sugar Dashlet" />
		<link text="My Accounts" />
		<wait timeout="5" />	
	</div>
	<div id="dashletsDialogHeader">
		<link index="1" />
	</div>
	<ul id="col_0_0">			
		<li index="1">
			<browser assert="My Accounts" />
			<browser assert="No Data" />
		</li>
	</ul>
	<div class="dashletToolSet" index="1">
		<link index="1" />
	</div>
	<div id="dlg_c">
		<select name="autoRefresh" set="Every 30 seconds" />
		<button value="Save" />
	</div>
	<csv file="{@global.scriptsdir}/csvs/home/Home_10396.csv" var="home10396">	
		
		<!--create account-->
		<div id="dcmenuContainer">
			<image id="dcMenu_Accounts_quick_create_icon" click="true" />
		</div>
		<form id="form_DCQuickCreate_Accounts">
			<textfield id="name" set="{@home10396.name} {@stamp}" />
			<textfield id="website" set="{@home10396.website}" />
			<textfield id="phone_office" set="{@home10396.phone_office}" />
			<textfield id="phone_fax" set="{@home10396.phone_fax}" />
			<textfield id="Accounts0emailAddress0" set="{@home10396.email}" />
			<button id="Accounts_dcmenu_save_button" />
			<wait timeout="5" />
		</form>	
		<wait timeout="30" />
		<ul id="col_0_0">			
			<li index="1">
				<browser assert="My Accounts" />
				<table class="list view">
					<link text="{@home10396.name} {@stamp}" click="false" />
					<browser assert="{@home10396.website}" />
					<browser assert="{@home10396.phone_office}" />
				</table>
			</li>
		</ul>	
		
	</csv>		
		
	<!-- delete dashlet -->
	<div class="dashletToolSet" index="1">
		<link index="3" alert="true" />
	</div>
		
	<!-- delete records-->	
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
		
	<puts text="Test: home_10396.xml finished." />
</soda>	
