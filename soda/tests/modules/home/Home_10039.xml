
<soda>
	<puts text="Test:home_10039 sort by account name on my open case dashlet" />
		
	<!--create case-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib_Full.xml" />
	<var var="account1" set="{@pre_account_name}" />
	<var var="case1" set="{@pre_case_name}" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib_Full.xml" />	
	<var var="account2" set="{@pre_account_name}" />
	<var var="case2" set="{@pre_case_name}" />	
		
	<!--check the my open case dashlet-->
	<link id="moduleTab_Home" />
	<browser assert="Add Sugar Dashlets" />
	<!--Add dashlet-->
	<link id="add_dashlets" />
	<wait timeout="5" />
	<div id="dashletsDialog_c">
		<browser assert="Find Sugar Dashlet" />
		<link text="My Open Cases" />
		<wait timeout="5" />	
	</div>
	<div id="dashletsDialogHeader">
		<link index="1" />
	</div>
	
	<!--add account name on layout-->
	<div class="dashletToolSet" index="1">
		<link index="1" />
		<wait timeout="3" />
	</div>
	<div id="dlg_c">
		<browser assert="My Open Cases : Options" />
		<select id="hide_tabs" set="Account Name" />
		<link id="chooser_display_tabs_left_arrow" click="true" />
		<select name="display_tabs[]" assert="Account Name" />
		<button value="Save" />
	</div>
	<ul id="col_0_0">			
		<li index="1">
			<browser assert="My Open Cases" />	
			<link text="Account Name" />
			<wait timeout="3" />	
			<table class="list view">
				<tr class="oddListRowS1">					
					<browser assert="{@case1}"  />
					<browser assert="{@account1}"  />				
				</tr>
				<tr class="evenListRowS1">					
					<browser assert="{@case2}" />					
					<browser assert="{@account2}"/>			
				</tr>
				<link text="Account Name" />	
				<wait timeout="3" />
				<tr class="oddListRowS1">					
					<browser assert="{@case2}" />					
					<browser assert="{@account2}"  />					
				</tr>
				<tr class="evenListRowS1">				
					<browser assert="{@case1}" />					
					<browser assert="{@account1}" />					
				</tr>
			</table>
		
		</li>
	</ul>
	
			
	<!-- delete dashlet -->
	<link id="moduleTab_Home" />
	<browser assert="Add Sugar Dashlets" />
	<div class="dashletToolSet" index="1">
		<link index="3" alert="true" />
	</div>
		
	<!-- delete records-->	
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	
	<puts text="Test: home_10039.xml finished." />
</soda>