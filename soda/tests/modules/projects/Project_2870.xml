
<soda>

	<puts text="Test Case 2870: Create Project Task -- Project Task Management_Verify that a project task can be created."/>

	<csv file="{@global.scriptsdir}/csvs/projects/Project_2870.csv" var="Project_2870">
		<!--Create task record-->
		<browser url="{@global.url}?module=ProjectTask&action=editview"/>
		<wait timeout="3"/>
		<textfield id="name" set="{@Project_2870.project_task_name}"/>
		<button value="Save"/>
		<wait timeout="3"/>
		
		<browser assert="Project Task: Home"/>
		
		<link text="{@Project_2870.project_task_name}" click="false"/>

		<!--Delete the project task created in this case-->
        	<link id="moduleTab_ProjectTask"/>
		<textfield id="name_basic" set="{@Project_2870.project_task_name}"/>
		<button id="search_form_submit"/>
	
		<link text="{@Project_2870.task_name}" click="false"/>	
		<checkbox id="massall" set="ture"/>
		<link id="actions_link" />
		<link text="Delete" alert="true" />
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</csv>

        <puts text="Test Case 2870 is finished!"/>
</soda>
