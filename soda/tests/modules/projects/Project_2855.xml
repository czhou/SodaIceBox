
<soda>

	<puts text="Test Case 2855: Delete Call -- Project Management_Verify that Call for Activities can be deleted for Project."/>

	<!--Search out the project record created in lib-->

	<csv file="{@global.scriptsdir}/csvs/projects/Project_2853.csv" var="Project_2853">
        	<link id="moduleTab_Project"/>
		<div class="moduleTitle">
			<link href="index.php?module=Project&action=index" click="false"/>
		</div>

		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@pre_project_name}"/>
		<browser assert="Resources"/>
		<!--Create call record-->
		<button id="Activities_logcall_button"/>
		<textfield id="name" set="{@Project_2853.call_name}"/>
		
		<button id="Calls_subpanel_save_button"/>
		<wait timeout="3"/>	
		
		<link text="{@Project_2853.call_name}" click="false"/>
		<div id="list_subpanel_activities">
			<link class="listViewTdToolsS1" click="true" index="2" alert="true"/>
		</div>
		<wait timeout="5"/>
		<link text="{@Project_2853.call_name}" exist="false" click="false"/>
		
		<!--Delete the call record created in this case-->
		<link id="moduleTab_Calls"/>
		<div class="moduleTitle">
			<link href="index.php?module=Calls&action=index" click="false"/>
		</div>
		<checkbox id="massall" click="true"/>
		<link id="actions_link"/>
		<link text="Delete" alert="true"/>
		<span class="pageNumbers" assert="(0 - 0 of 0)"/>
	</csv>

        <puts text="Test Case 2855 is finished!"/>
</soda>
