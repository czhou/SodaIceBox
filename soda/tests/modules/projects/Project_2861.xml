
<soda>

	<puts text="Test Case 2861: Edit Held Call -- Project Management_Verify that Held Call for History can be modified for Project."/>

	<!--Search out the project record created in lib-->
        <link id="moduleTab_Project"/>
	<div class="moduleTitle">
		<link href="index.php?module=Project&action=index" click="false"/>
	</div>

	<csv file="{@global.scriptsdir}/csvs/projects/Project_2861.csv" var="Project_2861">
		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@pre_project_name}"/>
		<browser assert="Resources"/>
		<!--Create call record-->
		<button id="Activities_logcall_button"/>
		<textfield id="name" set="{@Project_2861.call_name}"/>
		<select id="status" set="{@Project_2861.call_status}"/>
		
		<button id="Calls_subpanel_save_button"/>
		<wait timeout="3"/>	
		
		<link text="{@Project_2861.call_name}" click="false"/>
		<div id="list_subpanel_history">
			<link class="listViewTdToolsS1" index="1"/>
			<wait timeout="3"/>
		</div>

		<!-- Edit link displays QuickEdit now, so click Full Form. -->
		<button value="Full Form" />

		<browser assert="Overview"/>
		<textfield id="name" set="{@Project_2861.modified_call_name}"/>
		<button value="Save"/>
		<wait timeout="3"/>
	
		<link text="{@Project_2861.modified_call_name}"/>
		<button value="Delete" alert="true"/>
	</csv>

        <puts text="Test Case 2861 is finished!"/>
</soda>
