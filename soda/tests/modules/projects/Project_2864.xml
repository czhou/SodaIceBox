<soda>

	<puts text="Test Case 2864: Select Account -- Project Management_Verify that Account can be selected by clicking Account Name for Project."/>

	<!--Search out the project record created in lib-->
        <link id="moduleTab_Project"/>
	<div class="moduleTitle">
		<link href="index.php?module=Project&action=index" click="false"/>
	</div>

		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@pre_project_name}"/>
		<browser assert="Resources"/>
		<!--Select account record-->
		<button id="projects_accounts_select_button"/>
		<browser assert="Account Search"/>
		
		<textfield id="name_advanced" set="{@pre_account_name}"/>
		
		<button value="Search"/>
		
		<link text="{@pre_account_name}"/>
		<div id="list_subpanel_accounts">
			<link text="{@pre_account_name}" click="false"/>
			<link class="listViewTdToolsS1" index="2" click="true" alert="true"/>
		</div>
		<wait timeout="5"/>
		<link text="{@pre_account_name}" exist="false" click="false"/>

        <puts text="Test Case 2864 is finished!"/>
</soda>
