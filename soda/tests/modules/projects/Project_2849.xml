
<soda>

	<puts text="Test Case 2849: Edit Meeting -- Project Management_Verify that Meeting for Activities can be modified for Project."/>

	<!--Search out the project record created in lib-->
        <link id="moduleTab_Project"/>
	<div class="moduleTitle">
		<link href="index.php?module=Project&action=index" click="false"/>
	</div>

	<csv file="{@global.scriptsdir}/csvs/projects/Project_2849.csv" var="Project_2849">
		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@pre_project_name}"/>
		<browser assert="Resources"/>
		<!--Create Meeting record-->
		<button id="Activities_schedulemeeting_button"/>
		<textfield id="name" set="{@Project_2849.meeting_name}"/>
		
		<button id="Meetings_subpanel_save_button"/>
		<wait timeout="3"/>	
		
		<link text="{@Project_2849.meeting_name}" click="false"/>
		<div id="list_subpanel_activities">
			<link class="listViewTdToolsS1" index="1"/>
		</div>
		<wait timeout="3"/>
		<browser assert="Meeting Overview"/>
		<textfield id="name" set="{@Project_2849.modified_meeting_name}"/>
		<button value="Save"/>
		<wait timeout="3"/>
	
		<link text="{@Project_2849.modified_meeting_name}"/>
		<button value="Delete" alert="true"/>
		
	</csv>

        <puts text="Test Case 2849 is finished!"/>
</soda>
