
<soda>

	<puts text="Test Case 2850: Delete Meeting -- Project Management_Verify that Meeting for Activities can be deleted for Project."/>

	<!--Search out the project record created in lib-->
	<csv file="{@global.scriptsdir}/csvs/projects/Project_2847.csv" var="Project_2847">
        	<link id="moduleTab_Project"/>
		<div class="moduleTitle">
			<link href="index.php?module=Project&action=index" click="false"/>
		</div>

		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@pre_project_name}"/>
		<browser assert="Resources"/>
		<!--Create Meeting record-->
		<button id="Activities_schedulemeeting_button"/>
		<textfield id="name" set="{@Project_2847.meeting_name}"/>
		
		<button id="Meetings_subpanel_save_button"/>
		
		<link text="{@Project_2847.meeting_name}" click="false"/>

		<div id="subpanel_activities">
			<link class="listViewTdToolsS1" index="2" click="true" alert="true"/>
			<wait timeout="6"/>
			<link text="{@Project_2847.meeting_name}" exist="false" click="false"/>
		</div>

		<!--Delete meeting record created in this case-->
		<link id="moduleTab_Meetings"/>
		<div class="moduleTitle">
			<link href="index.php?module=Meetings&action=index"/>
		</div>
		<checkbox id="massall" click="true"/>
		<link id="actions_link"/>
		<link text="Delete" alert="ture"/>
	</csv>

        <puts text="Test Case 2850 is finished!"/>
</soda>
