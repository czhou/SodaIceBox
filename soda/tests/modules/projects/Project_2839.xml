<soda>

	<puts text="Test Case 2839: Edit Project -- Project Management_Verify that a project can be modified."/>

	<!--Search out the project record created in lib file-->
        <link id="moduleTab_Project"/>
	<div class="moduleTitle">
		<link href="index.php?module=Project&action=index" click="false"/>
	</div>

	<csv file="{@global.scriptsdir}/csvs/projects/Project_2839.csv" var="Project_2839">
		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@pre_project_name}"/>
		<browser assert="Resources"/>
		<button id="edit_button"/>
		<textfield id="name" set="{@Project_2839.project_name}"/>
		<button id="SAVE"/>
		<wait timeout="3"/>
		
		<browser assert="Resources"/>
		<browser assert="{@Project_2839.project_name}"/>
		
        	<link id="moduleTab_Project"/>
		<textfield id="name_basic" set="{@Project_2839.project_name}"/>
		<button id="search_form_submit"/>
	
		<link text="{@Project_2839.project_name}" click="false"/>	
		
		<!--Set the record modified in test case back-->
		<textfield id="name_basic" set="{@Project_2839.project_name}"/>
		<button id="search_form_submit"/>
		<link text="{@Project_2839.project_name}"/>
		<browser assert="Resources"/>
		<button id="edit_button"/>
		<textfield id="name" set="{@pre_project_name}"/>
		<button id="SAVE"/>
		<wait timeout="3"/>
		
        	<link id="moduleTab_Project"/>
		<textfield id="name_basic" set="{@pre_project_name}"/>
		<button id="search_form_submit"/>
	
		<link text="{@pre_project_name}" click="false"/>	
	</csv>

        <puts text="Test Case 2839 is finished!"/>
</soda>
