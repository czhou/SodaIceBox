<soda>

	<puts text="Test Case 4: Create Account - Quick _Verify that an account is quick created from "New Account" box."/>

	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0001.csv" var="account_record_0004">

		<image src="themes/Sugar/images/icon_Accounts_bar_32.png?s=540a66d553aee405a0aa0b87967d0ba3&c=1" click="ture"/>
		
		<div class="hd-center">
			<browser assert="Create Account"/>
		</div>

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@account_record_0004.assigned_user_name}" />
		<button value="Search" />
		<link text="{@account_record_0004.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@account_record_0004.team_name}" />
		<button value="Search" />
		<link text="{@account_record_0004.team_name}" />

		<form id="form_DCQuickCreate_Accounts">
			<textfield id="name" set="{@account_record_0004.name} {@user.name} {@stamp}" />

			<textfield id="website" set="{@account_record_0004.website}" />

			<button id="Accounts_dcmenu_save_button"/>
		</form>

		<link id="moduleTab_Accounts" />
		<div class="moduleTitle">
			<link href="index.php?module=Accounts&amp;action=index" click="false" />
		</div>
		<textfield id="name_basic" set="{@account_record_0004.name} {@user.name} {@stamp}" />
		<button id="search_form_submit" />
		<table class="list view">
			<link text="{@account_record_0004.name} {@user.name} {@stamp}" click="false"/>
		</table>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Accounts_0004.xml finished." />
</soda>
