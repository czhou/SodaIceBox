	<!--Create a product record in product subpanel-->
	<button name="accounts_bugs_create_button" />
	<button id="Bugs_subpanel_save_button"/>
	<browser assert="Missing required field: Subject"/>
	<button id="Bugs_subpanel_cancel_button" alert="true"/>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0270.xml finsihed." />
