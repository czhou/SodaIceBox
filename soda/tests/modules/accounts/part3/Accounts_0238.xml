<soda>
	<puts text="Test: Accounts_0238.xml started." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Accounts&amp;action=index" 
         click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" clear="true" />
	<button id="search_form_submit" />
   <wait timeout="2" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Create bug Organization-->
	<browser assert="{@pre_account_name}" />
	<button name="Activities_createtask_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0032.csv" 
      var="activity_record_0238">
		<form id="form_SubpanelQuickCreate_Tasks">
			<select id="priority" set="{@activity_record_0238.priority}" />
			<select id="status" set="{@activity_record_0238.status}" />
			<textfield id="description" 
            set="{@activity_record_0238.description}" />
			<!--Due Date-->
			<textfield id="date_due_date" 
            set="{@activity_record_0238.date_due_date}" />
			<select id="date_due_hours" 
            set="{@activity_record_0238.date_due_hours}" />
			<select id="date_due_minutes" 
            set="{@activity_record_0238.date_due_minutes}" />
			<select id="date_due_meridiem" 
            set="{@activity_record_0238.date_due_meridiem}" required="false" />

			<!--Start Date-->
			<select id="date_start_hours" 
            set="{@activity_record_0238.date_start_hours}" />
			<select id="date_start_minutes" 
            set="{@activity_record_0238.date_start_minutes}" />
			<select id="date_start_meridiem" required="false"
            set="{@activity_record_0238.date_start_meridiem}" />
		</form>
		<button id="Tasks_subpanel_save_button" />
	</csv>

	<browser assert="Missing required field: Subject" />
	<link id="moduleTab_Accounts" alert="true" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Accounts&amp;action=index" 
         click="false" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0238.xml finished." />
</soda>

