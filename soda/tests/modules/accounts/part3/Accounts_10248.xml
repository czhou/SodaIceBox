<soda>
	<!--
		Actions:
			a)    Login Sugar CRM as a valid user
			b)    Go to a module exist list view and has records on list view
			c)    Check “Created Date” doesn’t appear in list view by default
		Results:
			List view sort by “Created Date” descending by default
			and "Created Date" column doesn't appear in list view
	-->
	<puts text="Test: Accounts_10248.xml starting." />

	<!-- Create Four Accounts -->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account1_name" set="{@pre_account_name}" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account2_name" set="{@pre_account_name}" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account3_name" set="{@pre_account_name}" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account4_name" set="{@pre_account_name}" />		
	
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>


	<!-- Look for pagination column header -->
	<row class="pagination" assertnot="/.*Created Date.*/" />

	<!-- ensure that the new Accounts appear in the correct order -->
	<row class="oddListRowS1" index="1" assert="/.*{@account4_name}.*/" />
	<row class="evenListRowS1" index="1" assert="/.*{@account3_name}.*/" />
	<row class="oddListRowS1" index="2" assert="/.*{@account2_name}.*/" />
	<row class="evenListRowS1" index="2" assert="/.*{@account1_name}.*/" />


	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Accounts_10248.xml finished." />
</soda>
