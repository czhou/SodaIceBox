
<soda>
	<puts text="Test: Accounts_0019.xml starting." />

	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<csv file="{@global.scriptsdir}/export/Accounts.csv" var="account_record_0019">

		<link text="Import Clients" />


		<!--Step1-->
		<div class="moduleTitle">
			<browser assert="Step 1: Upload Import File" />
		</div>

		<select id="custom_enclosure" set='Double Quote (")' />
		<button id="gonext" />
		<wait timeout="5" />

		<!--Step2-->
		<div class="moduleTitle">
			<browser assert="Step 2: Confirm Import File Properties" />
		</div>

		<filefield name="userfile" set="{@global.scriptsdir}/export/Accounts.csv" />
		<button id="gonext" />
		<wait timeout="5" />

		<!--Step3-->
		<div class="moduleTitle">
			<browser assert="Step 3: Confirm Fields and Import" />
		</div>

		<button id="importnow" />
		<wait timeout="10" />
		<div class="moduleTitle">
			<browser assert="Results" />
		</div>


		<!--Search the record to assert import successfully -->
		<link id="moduleTab_Accounts" />
		<div class="moduleTitle">
			<link href="index.php?module=Accounts&amp;action=index" click="false" />
		</div>

		<textfield id="name_basic" set="{@account_record_0019.name}" />
		<button id="search_form_submit" />
		<table class="list view">
			<link text="{@account_record_0019.name}" />
		</table>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0019.xml finished." />
</soda>
