
<soda>
	<!--  Accounts_0299.xml: Account Detail - Projects sub-panel - Remove Relationship_Verify that removing project record related to this account is canceled. -->
	<puts text="Test: Accounts_0299.xml starting." />
	
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	
	<link text="{@account_record.name} {@user.name} {@stamp}" />
	<button name="projects_accounts_create_button" />
	<wait timeout="3" />

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0053.csv" var="project">
		<textfield id="name" set="{@project.name}" />
		<textfield id="estimated_start_date" set="{@project.estimated_start_date}" />
		<textfield id="estimated_end_date" set="{@project.estimated_end_date}" />
		<button id="Project_subpanel_save_button" />
		<wait timeout="6"/>
		<browser assert="{@project.name}" />

		<div id="list_subpanel_project">
			<link class="listViewTdToolsS1" alert="false"/>
			<wait timeout="5"/>
		</div>
		<browser assert="{@project.name}" />
	</csv>

	<!-- Clean up: Delete test data. -->	
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Project_Delete_Lib.xml" />
	
	<puts text="Test: Accounts_0299.xml finished." />
</soda>
