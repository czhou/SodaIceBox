<soda>
	<!--
		Account Detail - Quotes subpanel: error message "Missing required 
      field: Quote Subject" is displayed when creating a related new "Quotes" 
      with mandatory fields blank.
	-->
	<puts text="Test: Accounts_0233.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Accounts&amp;action=index" 
         click="false" />
	</div>

	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>
	<wait timeout="3" />

	<!--Go to its detail view-->
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Accounts&amp;action=index" 
         click="false" />
		<browser assert="{@pre_account_name}" />
	</div>

	<!--
      Create a quote in Quotes Subpanel, and don"t fill in all mandatory 
      fields
   -->

	<div id="list_subpanel_quotes">
		<button name="Quotes_create_button" />
	</div>

	<browser assert="Quotes" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0233.csv" 
      var="quote_record_0233">
		<textfield id="purchase_order_num" 
         set="{@quote_record_0233.purchase_order_num}" />
		<select id="payment_terms" set="{@quote_record_0233.payment_terms}" />
		<select id="quote_stage" set="{@quote_record_0233.quote_stage}" />
		<textfield id="date_quote_expected_closed" 
         set="{@quote_record_0233.date_quote_expected_closed}" />
		<textfield id="original_po_date" 
         set="{@quote_record_0233.original_po_date}" />
		<textfield name="description" set="{@quote_record_0233.description}" />
		<button value="Save" />
		<browser assert="Missing required field: Quote Subject" />
	</csv>

	<button value="Cancel" alert="true" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0233.xml finished." />
</soda>

