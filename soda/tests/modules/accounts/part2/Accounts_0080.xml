<soda>
	<puts text="Test: Accounts_0080.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Accounts&amp;action=index" 
         click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" clear="true" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Create Member Organization & click "Full Form"-->
	<browser assert="{@pre_account_name}" />
	<button name="member_accounts_create_button" />


   <!--
      You may notice, though I don't think anyone ever will, that I do the
      user & team search's before going into the full form mode.  This is
      because of how the product interacts with webdriver.  I don't think this
      is a webdriver bug, but I can't prove it is a product bug yet.
   -->

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0001.csv" 
      var="member_record_0080">
		<!--user select-->
		<button id="btn_assigned_user_name" />
      <attach title="SugarCRM">
         <browser assert="User Search" />
         <textfield name="last_name_advanced" 
            set="{@member_record_0080.assigned_user_name}" />
         <button id="search_form_submit" />
         <wait timeout="2" />
         <link text="{@member_record_0080.assigned_user_name}" />
      </attach>

		<!--teams select-->
		<button id="teamSelect" />
      <wait timeout="1" />
   
      <attach title="SugarCRM">
         <browser assert="Team Search" />
         <textfield name="name" set="{@member_record_0080.team_name}" />
         <button value="Search" />
         <link text="{@member_record_0080.team_name}" />
         <wait timeout="2" />
      </attach>
      <wait timeout="1" />
	   <button id="Accounts_subpanel_full_form_button" />

		<textfield id="name" 
         set="{@member_record_0080.name} {@user.name} {@stamp}" />
		<textfield id="website" set="{@member_record_0080.website}" />
		<textfield id="ticker_symbol" set="{@member_record_0080.ticker_symbol}" />
		<textfield id="ownership" set="{@member_record_0080.ownership}" />
		<select id="industry" set="{@member_record_0080.industry}" />
		<select id="account_type" set="{@member_record_0080.account_type}" />
		<textfield id="phone_office" set="{@member_record_0080.phone_office}" />
		<textfield id="phone_fax" set="{@member_record_0080.phone_fax}" />
		<textfield id="employees" set="{@member_record_0080.employees}" />
		<textfield id="rating" set="{@member_record_0080.rating}" />
		<textfield id="sic_code" set="{@member_record_0080.sic_code}" />
		<textfield id="annual_revenue" 
         set="{@member_record_0080.annual_revenue}" />
		<textfield id="billing_address_street" 
         set="{@member_record_0080.billing_address_street}" />
		<textfield id="billing_address_city" 
         set="{@member_record_0080.billing_address_city}" />
		<textfield id="billing_address_state" 
         set="{@member_record_0080.billing_address_state}" />
		<textfield id="billing_address_postalcode" 
         set="{@member_record_0080.billing_address_postalcode}" />
		<textfield id="billing_address_country" 
         set="{@member_record_0080.billing_address_country}" />
		<textfield id="shipping_address_street" 
         set="{@member_record_0080.shipping_address_street}" />
		<textfield id="shipping_address_city" 
         set="{@member_record_0080.shipping_address_city}" />
		<textfield id="shipping_address_state" 
         set="{@member_record_0080.shipping_address_state}" />
		<textfield id="shipping_address_postalcode" 
         set="{@member_record_0080.shipping_address_postalcode}" />
		<textfield id="shipping_address_country" 
         set="{@member_record_0080.shipping_address_country}" />
		<textfield id="Accounts0emailAddress0" 
         set="{@member_record_0080.emailAddress0}" />
		<textfield id="description" set="{@member_record_0080.description}" />


		<!--click "Cancel"-->
		<button value="Cancel" alert="true" />

		<div id="list_subpanel_accounts">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</div>
	</csv>

	<!--Delete a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0080.xml finished." />
</soda>

