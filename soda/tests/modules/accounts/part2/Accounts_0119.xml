<soda>
	<!--
		Edit_Verify that lead record related to this account can be edited by clicking
		"edit" icon.
	-->

	<puts text="Test: Accounts_0119.xml started." />

	<!--Create one account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Create one lead-->
	<button id="account_leads_create_button" />
	<form id="form_SubpanelQuickCreate_Leads">
		<textfield id="last_name" set="LeadsForAccounts_0119" />
	</form>
	<button id="Leads_subpanel_save_button" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />
	<!--click "edit" icon-->
	<div id="list_subpanel_leads">
		<table class="list view">
			<link text="LeadsForAccounts_0119" click="false" />
		</table>
		<link class="listViewTdToolsS1" index="1" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0119.csv" var="lead_record_0119">

		<textfield id="refered_by" set="{@lead_record_0119.refered_by}" />
		<textfield id="first_name" set="{@lead_record_0119.first_name} {@stamp}" />
		<textfield id="last_name" set="{@lead_record_0119.last_name}" />
		<textfield id="title" set="{@lead_record_0119.title}" />
		<textfield id="phone_work" set="{@lead_record_0119.phone_work}" />
		<textfield id="phone_mobile" set="{@lead_record_0119.phone_mobile}" />
		<textfield id="phone_fax" set="{@lead_record_0119.phone_fax}" />
		<textfield id="department" set="{@lead_record_0119.department}" />

		<select id="lead_source" set="{@lead_record_0119.lead_source}" />
		<select id="status" set="{@lead_record_0119.status}" />
		<checkbox id="do_not_call" set="{@lead_record_0119.do_not_call}" />
		<button value="Save" />
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />

	<puts text="Test: Accounts_0119.xml finished." />
</soda>
