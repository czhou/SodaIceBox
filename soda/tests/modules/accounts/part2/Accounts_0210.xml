<soda>
	<puts text="Test: Accounts_0210.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Accounts&amp;action=index" 
         click="false" />
	</div>
	<wait timeout="3" />

	<textfield id="name_basic" set="{@pre_account_name}" clear="true" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create Activities Subpanel-->
	<button name="Activities_createtask_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0032.csv" 
      var="activity_record_0210">
		
      <form id="form_SubpanelQuickCreate_Tasks">
			<textfield id="name" clear="true"
            set="{@activity_record_0210.name} {@user.name} {@stamp}" />
			<select id="priority" set="{@activity_record_0210.priority}" />
			<select id="status" set="{@activity_record_0210.status}" />
			<textfield id="description" 
            set="{@activity_record_0210.description}" />
			<!--Due Date-->
			<textfield id="date_due_date" 
            set="{@activity_record_0210.date_due_date}" />
			<select id="date_due_hours" 
            set="{@activity_record_0210.date_due_hours}" />
			<select id="date_due_minutes" 
            set="{@activity_record_0210.date_due_minutes}" />
			<select id="date_due_meridiem" 
            set="{@activity_record_0210.date_due_meridiem}" required="false" />
			<!--Start Date-->
			<textfield id="date_start_date" 
            set="{@activity_record_0210.date_start_date}" />
			<select id="date_start_hours" 
            set="{@activity_record_0210.date_start_hours}" />
			<select id="date_start_minutes" 
            set="{@activity_record_0210.date_start_minutes}" />
			<select id="date_start_meridiem" required="false"
            set="{@activity_record_0210.date_start_meridiem}" />
		</form>

		<!--user select-->
		<button id="btn_assigned_user_name" />
      <wait timeout="2" />
      <attach title="SugarCRM">
         <browser assert="User Search" />
         <textfield name="last_name_advanced" clear="true"
            set="{@activity_record_0210.assigned_user_name}" />
         <button value="Search" />
         <wait timeout="2" />
         <link text="{@activity_record_0210.assigned_user_name}" />
      </attach>
      <wait timeout="2" />

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Tasks_team_name_table">
			<button value="Select" />
		</table>

      <wait timeout="2" />
      <attach title="SugarCRM">
         <browser assert="Team Search" />
         <textfield name="name" set="{@activity_record_0210.team_name}" />
         <button value="Search" />
         <link text="{@activity_record_0210.team_name}" />
         <wait timeout="2" />
      </attach>

		<button id="Tasks_subpanel_cancel_button" alert="true" />

		<!--Verify the task record created in subpanel-->
		<div id="list_subpanel_activities">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</div>
	</csv>

	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0210.xml finished." />
</soda>
