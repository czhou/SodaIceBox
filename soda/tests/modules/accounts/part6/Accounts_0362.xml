
<soda>
	<puts text="Test Case 362: Account Detail - Activities sub-panel - Create Task_Verify that creating a task in full form on 'ACTIVITIES' sub-panel is canceled."/>

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />

	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0358.csv" var="activity_record_0358">
		<button name="Activities_createtask_button" />
		<wait timeout="3" />
		<button id="Tasks_subpanel_full_form_button" />
		<textfield id="name" set="{@activity_record_0358.task_name}"/>
		<select id="status" set="{@activity_record_0358.task_status}"/>
		<button id="CANCEL" alert="true" />

		<wait timeout="10"/>
		<div id="subpanel_activities">
			<browser assertnot="{@activity_record_0358.task_name}"/>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0362.xml finished" />
</soda>
