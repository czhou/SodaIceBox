
<soda>
	<puts text="Test Case 359: Account Detail - Activities sub-panel - Create Task_Verify that a completed task is created for an related account record in full form from 'ACTIVITIES' sub-panel."/>

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />

	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0359.csv" var="activity_record_0359">
		<button name="Activities_createtask_button" />
		<button id="Tasks_subpanel_full_form_button" />
		<textfield id="name" set="{@activity_record_0359.task_name}"/>
		<select id="status" set="{@activity_record_0359.task_status}"/>
		<button value="Save" />

		<wait timeout="10"/>
		<div id="list_subpanel_history">
			<browser assert="{@activity_record_0359.task_name}"/>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0359.xml finished" />
</soda>
