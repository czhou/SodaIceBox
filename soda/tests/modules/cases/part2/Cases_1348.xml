<soda>
	<!-- Create Task_Verify that task for case is not created in "Activities" sub-panel when using "Cancel" function -->
	<puts text="Test: Cases_1348.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create a task-->
	<div id="list_subpanel_activities">
		<button value="  Create Task  " />
	</div>

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1348.csv" var="Case_1348">
		<div id="form_SubpanelQuickCreate_Tasks_tabs">
			<textfield id="name" set="{@Case_1348.name} {@user.name} {@stamp}" />
		</div>
		<button id="Tasks_subpanel_cancel_button" alert="true" />
		<wait timeout="10" />

		<!--verify the Task was not created-->
		<div id="list_subpanel_activities">
			<table class="list view">
				<span class="pageNumbers" assert="(0 - 0 of 0)" />
			</table>
		</div>
	</csv>	

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1348.xml finished." />
</soda>
