
<soda>
	<!-- Create Archived Email: Verify that archived email can be created for case in "History" sub-panel. -->
	<puts text="Test: Cases_1271.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />
	<timestamp />

	<!-- Create a case and go to its DetailView. -->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<!--create a note-->
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1271.csv" var="Case_1271">
		<button id="ArchiveEmail_button" />

		<!--set data-->
		<textfield name="date_start" set="{@Case_1271.email_date}" />
		<textfield name="time_start" set="{@Case_1271.email_time}" />
		<textfield id="subjectfield" set="{@Case_1271.email_subject}" />
		<button id="SAVE_HEADER" />

		<!--verify the create note-->
		<div id="list_subpanel_history">
			<table class="list view">
				<link text="{@Case_1271.email_subject}" click="true" />
			</table>
		</div>
		
		<button value="    Delete    " alert="true" />
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1271.xml finished." />
</soda>
