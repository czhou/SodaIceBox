<soda>
    <puts text='--------Knowledge Base_8017: knowledge Base Admin_Create new tag--------'/>
    <timestamp/>
    <link id='moduleTab_KBDocuments'/>
    <browser assert='Knowledge Base'/>
    <link text='Administer Knowledge Base'/>
    <browser assert='Knowledge Base Admin'/>
    <select id='action_id' set='Create New Tag'/>
    <browser assert='Select the parent tag from tree'/>
    <csv file='{@global.scriptsdir}/csvs/knowledgebase/KnowledgeBase_8017.csv' var='KnowledgeBase_8017'>
        <div id='ygtv1'>
            <link text='Tags'/>
        </div>
        <textfield id='tag_new' set='{@KnowledgeBase_8017.tag} {@user.name} {@stamp}'/>
        <button id='tag_save'/>
        <link text='{@KnowledgeBase_8017.tag} {@user.name} {@stamp}(0)' click='false'/>
    </csv>
    <var var="KB_tag" set="{@KnowledgeBase_8017.tag} {@user.name} {@stamp}(0)" />
    <!--Delete the record-->
    <script file='{@global.scriptsdir}/modules/lib/KnowledgeBase_Deletetag_Lib.xml'/>
      
    <puts text='--------Knowledge Base_8017: Finished--------'/>
</soda>
