<soda>
        <puts text='--------Knowledge Base_8012: search_approve_by--------'/>
        
        <link id='moduleTab_KBDocuments'/>
        <browser assert='Knowledge Base'/>
        
        <!--Create records-->
        <csv file='{@global.scriptsdir}/csvs/knowledgebase/KnowledgeBase_80121.csv' var='knowledgebase_80121'>
            <link text='Create Article'/>
            <browser assert='Create'/>
            <!--Author select-->
            <button name='btn_author'/>
            <browser assert='User Search'/>                        
            <textfield name='last_name_advanced' set='{@knowledgebase_80121.author}'/>                        
            <button value='Search'/>
            <link text='{@knowledgebase_80121.author}'/>
            
            <!--Approve select-->
            <button name='btn_approver'/>
            <browser assert='User Search'/>                        
            <textfield name='last_name_advanced' set='{@knowledgebase_80121.approve}'/>                        
            <button value='Search'/>
            <link text='{@knowledgebase_80121.approve}'/>
        
            <!--Teams select-->
            <image id='remove_team_name_collection_0' click='true'/>
            <table id='EditView_team_name_table'>
                <button value='Select'/>
            </table>
            <browser assert='Team Search'/>
            <textfield name='name' set='{@knowledgebase_80121.team}'/> 
            <button value='Search'/>
            <link text='{@knowledgebase_80121.team}'/>
            <radio id='primary_team_name_collection_0' set='true'/>

            <!--Select tags-->
            <button name='btn_tags'/>
            <link id='ygtvlabelel2'/>

            <!--Article body-->
            <link id='body_html_code'/>
            <textfield id='htmlSource' set='{@knowledgebase_80121.body}'/>
            <button value='Update'/>

            <form id='EditView'>
                <textfield name='kbdocument_name' set='{@knowledgebase_80121.name}'/>
                <textfield name='kbdocument_revision_number' set='{@knowledgebase_80121.revision}'/>
                <button value='Save'/>
            </form>
            <browser assert='{@knowledgebase_80121.name}'/>            
        </csv>
        
        <!--Search by approve-->
        <csv file='{@global.scriptsdir}/csvs/knowledgebase/KnowledgeBase_80122.csv' var='knowledgebase_80122'>
            <link text='View Articles'/>
            <link id='advanced_tab_link'/>
            <button id='clearForm'/>
            
            <!--Approve select-->
            <button name='btn_user'/>
            <browser assert='User Search'/>                        
            <textfield name='last_name_advanced' set='{@knowledgebase_80122.search}'/>                        
            <button value='Search'/>
            <link text='{@knowledgebase_80122.search}'/>
            
            <button id='fts_search_ADV'/>
            <table class='list view'>
                <span class='pageNumbers' assert='(1 - 1 of 1)'/>
                <link text='{@knowledgebase_80122.name}' click='false'/>
            </table>
            
        </csv>
        
        <!--Delete the record-->
        <script file='{@global.scriptsdir}/modules/lib/KnowledgeBase_Delete_Lib.xml'/>
        
        
        <puts text='--------Knowledge Base_8012: Finished--------'/>
</soda>
