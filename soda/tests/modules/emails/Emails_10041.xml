<soda>
	<puts text="Test: Emails_10041.xml starting." />
	
	<link href='index.php?module=Emails&amp;action=index' />

	<wait timeout="4" /> <!-- give the email UI time to load -->
	
	<link text="Create Email Template" />

	<csv file="{@global.scriptsdir}/csvs/emails/email_10041.csv"
	var="user_info" />
	
	<csv file="{@global.scriptsdir}/modules/lib/EmailTemplate_Create_Lib.csv"
	var="New_EmailTemplate">
		<textfield name="name"
		set="{@New_EmailTemplate.name} {@user.name} {@stamp}" />
		<textfield name="description" set="{@New_EmailTemplate.description}" />
		<button name="btn_author" />
		<wait timeout="4" />
		<var var="user_name" set="{@user_info.uname}" />
		<link text="{@user_name}" />
	</csv>
	
	
	
	<button value="Save" />

	<div class="detail view">
			<row index="4">
				<cell index="4" assert="{@user_name}" />
			</row>
	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/EmailTemplate_Delete_Lib.xml" />
	
	<puts text="Test: Emails_10041.xml finished." />
	
</soda>
