ï»¿<soda>
	<!-- Check the default Mail Account setting for composing new email -->
	<puts text="Test: Emails_9672.xml starting." />
	<script file="{@global.scriptsdir}/modules/lib/Emails_Acct_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Emails_OutGoing_Create_Lib.xml" />
	<link id="moduleTab_Emails" />
	<button id="settingsButton" />
	<wait timeout="3" />
	<link text="Mail Accounts" />
	<div id="outboundAccountsTable">
		<image
			src="index.php?entryPoint=getImage&amp;themeName=Sugar&amp;imageName=edit_inline.gif"
			click="true" />
	</div>
	<wait timeout="3" />
	<textfield id="mail_smtpuser" set="sugarqa5@gmail.com" />
	<form id="outboundEmailForm">
		<button value="   Done   " />
	</form>

	<div id="inboundAccountsTable">
		<image
			src="index.php?entryPoint=getImage&amp;themeName=Sugar&amp;imageName=edit_inline.gif"
			click="true" />
	</div>
	<select id="outbound_email"
		set="{@EmailOutGoing.mail_name} - {@EmailOutGoing.mail_smtpserver}" />
  <wait timeout="5" />
	<button id="saveButton" />
	<wait timeout="40" />
	<div id="settingsDialog">
		<button value="   Done   " alert="true" />
	</div>
	<link id="moduleTab_Emails" />
	<wait timeout="3" />
	<button id="composeButton" />
	<textfield id="addressTO1" set="eyang@sugarcrm.com" />
	<textfield id="emailSubject1" set="testmail" />
	<table id="composeHeaderTable1">
		<button index="1" alert="true" />
	</table>
	<wait timeout="15" />
	<browser assert="Error Sending Email" />
	<browser
		assert="The outbound mail server selected for the mail account you are using is invalid" />
  <wait timeout="10" />
	<div id="sugarMsgWindow">
		<button text="OK" />
	</div>
	<wait timeout="3" />
	<script file="{@global.scriptsdir}/modules/lib/Emails_Acct_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Emails_OutGoing_Delete_Lib.xml" />
	
	<puts text="Test: Emails_9672.xml finished." />
</soda> 
