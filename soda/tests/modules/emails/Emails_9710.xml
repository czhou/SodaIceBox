<soad>
	<!-- Disable users to use the system outgoing mail account for outbound email -->
	<puts text="Test: Emails_9710.xml starting." />

	<!--goto my account-->
	<link text="Admin" />
	<link text="Email Settings" />
	<wait timeout="2" />
	<browser assert="Outgoing Mail Configuration" />
	<checkbox name="notify_allow_default_outbound" set="false" />
	
	<csv file="{@global.scriptsdir}/modules/lib/Email_Setting_Lib.csv" var="email_record_9710">
		<table class="edit view">
			<browser assertnot="{@email_record_9710.notify_fromaddress}" />
			<browser assert="SMTP Mail Server:" />
			<browser assert="Gmail" />
		</table>
	</csv>
	<button value=" Save " alert="true"/>
	
	<!--Nav to emails module-->
	<link id="moduleTab_Emails" />
        <wait timeout="5"/>
	<button id="settingsButton" />
        <wait timeout="5"/>
	<div id="settingsDialog">
		<link text="Mail Accounts" />
	</div>

	<browser assert="Gmail" />
	<browser assert="Warning: Missing username and password for outgoing mail account." />
	<div id="settingsDialog">
		<link text="Close" />
	</div>
	<button id="composeButton" alert="true" />
	<!--
	<div id="sugarMsgWindow">
		<button text="OK" />
	</div>
	-->

	<link text="Admin" />
	<wait timeout="2"/>
	<link text="Email Settings" />
	<wait timeout="2" />
	<browser assert="Outgoing Mail Configuration" />
	<checkbox name="notify_allow_default_outbound" set="true" />
	<button value=" Save " alert="true"/>

	<puts text="Test: Emails_9710.xml finished." />
</soda>
