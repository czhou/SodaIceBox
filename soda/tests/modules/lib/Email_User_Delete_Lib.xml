
<soda>
	<puts text="Lib: Email_User_Delete_Lib.xml starting." />

	<!--goto Admin-->
	<div id="globalLinks">
		<link text="Admin" />
	</div>
	<!--click "User Management"-->
	<link href="./index.php?module=Users&amp;action=index" />
	<browser assert="Users" />

	<!--search first created email user-->
	<csv file="{@global.scriptsdir}/modules/lib/Email_User_Create_Lib.csv" var="EmailUC_Delete" />

	<link text="Advanced Search" required="false" timeout="3" />
	<div id="Usersadvanced_searchSearchForm">
		<button value="Clear" />
		<textfield id="user_name_advanced" set="{@EmailUC_Delete.user1_last_name}" />
		<button value="Search" />
	</div>
	<table class="list view">
		<browser assert="{@EmailUC_Delete.user1_last_name}" />
		<link text="{@EmailUC_Delete.user1_last_name}" click="true" />
		<wait timeout="5" />
	</table>

	<!--delete the user-->
	<browser assert="User Profile" />	
	<button value="Delete" />
	<div id="Confirm " >
		<button value="OK" />
	</div>
	<wait timeout="3" />
	<browser assert="Reassign Records" />
	<form id="EditView" >
		<button value="Cancel" />
	</form>

	<!--check the user deleted-->
	<link text="Basic Search" required="false" timeout="3" />
	<form name="search_form">
		<button value="Clear" />
		<textfield id="search_name_basic" set="{@EmailUC_Delete.user1_last_name}" />
		<button value="Search" />
	</form>
	<table class="list view">
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</table>

	<!--search second created email user-->
	<link text="Advanced Search" required="false" timeout="3" />
	<div id="Usersadvanced_searchSearchForm">
		<button value="Clear" />
		<textfield id="user_name_advanced" set="{@EmailUC_Delete.user2_last_name}" />
		<button value="Search" />
	</div>
	<table class="list view">
		<browser assert="{@EmailUC_Delete.user2_last_name}" />
		<link text="{@EmailUC_Delete.user2_last_name}" click="true" />
		<wait timeout="5" />
	</table>

	<!--delete the user-->
	<browser assert="User Profile" />	
	<button value="Delete" />
	<div id="Confirm " >
		<button value="OK" />
	</div>
	<wait timeout="3" />
	<browser assert="Reassign Records" />
	<form id="EditView" >
		<button value="Cancel" />
	</form>

	<!--check the user deleted-->
	<link text="Basic Search" required="false" timeout="3" />
	<form name="search_form">
		<button value="Clear" />
		<textfield id="search_name_basic" set="{@EmailUC_Delete.user2_last_name}" />
		<button value="Search" />
	</form>
	<table class="list view">
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</table>
	<form name="search_form">
		<button value="Clear" />
		<button value="Search" />
	</form>
	<puts text="Lib: Email_User_Delete_Lib.xml finished." />
</soda>
