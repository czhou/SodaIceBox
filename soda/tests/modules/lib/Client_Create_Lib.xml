<soda>
	<puts text="Lib: Client_Create_Lib.xml starting." />

	<!-- Create new Client -->
	<csv file="{@global.scriptsdir}/dev/Client_Create_Lib.csv" var="client_record">
	
		<timestamp />
		<link id="moduleTab_Accounts" />
		<wait condition="true">		
			<link text="Create Client" />
		</wait>
	
		<link text="Create Client" />
		<browser assert="Create" />

		<form id="EditView">
			<textfield id="name" set="{@client_record.name} {@user.name} {@stamp}" />
			<select id="industry" set="{@client_record.industry}" />
			<select id="account_type" set="{@client_record.account_type}" />
			<textfield id="website" set="{@client_record.website}" />
			<textfield id="phone_office" set="{@client_record.phone_office}" />
			<textfield id="phone_fax" set="{@client_record.phone_fax}" />

			<textfield id="Accounts0emailAddress0" set="{@stamp}{@client_record.emailAddress0}" />
			<textfield id="description" set="{@client_record.description}" />
			<textfield id="description" set="{@client_record.description}" />
			<button value="Save" />
		</form>
		<wait timeout="3" />
		<browser assert="{@client_record.name} {@user.name} {@stamp}" />

		<!-- Save the client id & name -->
		<form name="DetailView">
			<hidden name="record" var="pre_account_id" />
		</form>

		<var var="pre_client_name" set="{@client_record.name} {@user.name} {@stamp}" />
		<var var="pre_client_email" set="{@stamp}{@client_record.emailAddress0}" />
	</csv>

	<puts text="Lib: Client_Create_Lib.xml finished." />
</soda>