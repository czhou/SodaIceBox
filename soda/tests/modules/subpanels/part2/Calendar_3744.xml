
<soda>
	<!--
		Action:
			Verify that meeting record is displayed in "Activities" 
			sub-panel of "Bug" detail view page when scheduling a meeting.

	-->
	<puts text="Test: Calendar_3744.xml starting." />
	
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />
	<var var="bug1_name" set="{@pre_bug_name}" />

	<timestamp />
	<button id="Activities_schedulemeeting_button" />
	<var var="meeting1_name" set="Meeting_{@stamp}" />
	<textfield id="name" set="{@meeting1_name}" />
	<button id="Meetings_subpanel_save_button" />
	<wait timeout="10" />
	
	<div id="list_subpanel_activities">
		<browser assert="{@meeting1_name}" />
	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_3744.xml finished." />
</soda>
