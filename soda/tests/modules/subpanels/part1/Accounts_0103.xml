<soda>
	<!--
		Account Detail - Bugs subpanel - Remove Relationship: Verify that removing bug
		record related to this account can be canceled.
	-->
	<puts text="Test: Accounts_0103.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>

	<!--Go to its detail view-->
	<link text="Accounts" click="false" />
	<browser assert="{@pre_account_name}" />

	<!--Create a bug in Bugs Subpanel-->
	<button name="accounts_bugs_create_button" />
	<wait />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0103.csv" var="bug_record">
		<form id="form_SubpanelQuickCreate_Bugs">
			<select id="priority" set="{@bug_record.priority}" />
			<select id="source" set="{@bug_record.source}" />
			<select id="type" set="{@bug_record.type}" />
			<select id="product_category" set="{@bug_record.product_category}" />
			<textfield id="name" set="{@bug_record.name} {@user.name} {@stamp}" />
			<textfield id="description" set="{@bug_record.description}" />
		</form>

		<!--user select: use default value-->
		<!--teams select: use default value-->

		<!--click "Save"-->
		<button id="Bugs_subpanel_save_button" />
	</csv>

	<wait timeout="20" />
	<div id="list_subpanel_bugs">
		<table class="list view">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</table>
		<link index="1" class="listViewTdToolsS1" alert="false" />
		<browser assert="{@bug_record.name} {@user.name} {@stamp}" />
	</div>

	<!--Delete a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />
	<puts text="Test: Accounts_0103.xml finished." />
</soda>
