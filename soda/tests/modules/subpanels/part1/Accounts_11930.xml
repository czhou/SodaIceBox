
<soda>
	<!--
		Account Detail - Products sub-panel - Create_Verify that new products is
		created and check the account name
	-->
	<puts text="Test: Accounts_11930.xml starting." />

	<!--Create a account and a product catalog record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/ProductCatalog_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create product Subpanel -->
	<div id="list_subpanel_products">
		<button name="Products_create_button" />
	</div>
	<browser assert="Products" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_11930.csv" var="product_record_11930">
		<!--Select from pre-created product catalog and check account name after select-->
		<button value="Select"/>
		<link text="{@pre_ProductCatalog_name}"/>
		<textfield id="account_name" assert="{@pre_account_name}"/>

		<textfield id="quantity" set="{@product_record_11930.quantity}" />
		<textfield id="serial_number" set="{@product_record_11930.serial_number}" />
		<textfield id="asset_number" set="{@product_record_11930.asset_number}" />
		<textfield id="date_purchased" set="{@product_record_11930.date_purchased}" />
		<textfield id="date_support_starts" set="{@product_record_11930.date_support_starts}" />
		<textfield id="date_support_expires" set="{@product_record_11930.date_support_expires}" />
		<textfield id="cost_price" set="{@product_record_11930.cost_price}" />
		<textfield id="list_price" set="{@product_record_11930.list_price}" />
		<textfield id="discount_price" set="{@product_record_11930.discount_price}" />
		<textfield id="discount_amount" set="{@product_record_11930.discount_amount}" />
		<textfield id="book_value" set="{@product_record_11930.book_value}" />
		<textfield id="book_value_date" set="{@product_record_11930.book_value_date}" />
		<textfield id="website" set="{@product_record_11930.website}" />
		<textfield id="mft_part_num" set="{@product_record_11930.mft_part_num}" />
		<textfield id="vendor_part_num" set="{@product_record_11930.vendor_part_num}" />
		<textfield id="description" set="{@product_record_11930.description}" />
		<textfield id="support_name" set="{@product_record_11930.support_name}" />
		<textfield id="support_description" set="{@product_record_11930.support_description}" />
		<textfield id="weight" set="{@product_record_11930.weight}" />

		<select id="status" set="{@product_record_11930.status}" />
		<select name="currency_id" set="{@product_record_11930.currency_id}" />
		<checkbox id="discount_select" set="{@product_record_11930.discount_select}" />
		<select id="category_id" set="{@product_record_11930.category_id}" />
		<select id="tax_class" set="{@product_record_11930.tax_class}" />

		<button value="Save" />

		<!--back to product subpanel-->
		<div id="list_subpanel_products">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</div>

		<!--Save the subpanel task id & name-->
		<form name="DetailView">
			<hidden name="record" var="pre_product_subpanel_id" />
		</form>
		<var var="pre_product_subpanel_name" set="{@product_record_11930.name} {@user.name} {@stamp}" />
	</csv>
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Product_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/ProductCatalog_Create_Lib.xml" />
	<puts text="Test: Accounts_11930.xml finished." />

</soda>
            
            
            
