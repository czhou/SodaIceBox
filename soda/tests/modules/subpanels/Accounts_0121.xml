<soda>
	<!--
		Account Detail - Bugs sub-panel - Pagination_Verify that corresponding bug
		records' list view is displayed after clicking the pagination control link on
		"BUGS" sub-panel of an account record detail view.
	-->
	<puts text="Test: Accounts_0121.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--set to 2 items on list view-->
	<wait timeout="3" />
	<link text="Admin" />
	<link text="System Settings" />
	<textfield name="list_max_entries_per_subpanel" set="2" />
	<button value="  Save  " />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>

	<!--Go to its detail view-->
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
		<browser assert="{@pre_account_name}" />
	</div>
	<wait timeout="3" />
	<!--Create 6 bugs via the Subpanel-->
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0107.csv" var="case_record_0121">
		<button name="accounts_bugs_create_button" />
		<wait timeout="1" />
		<form id="form_SubpanelQuickCreate_Bugs">
			<textfield id="name" set="{@case_record_0121.name}" />
			<wait timeout="1" />
			<button id="Bugs_subpanel_save_button" />
			<wait timeout="5" />
		</form>
	</csv>

	<!--verify list_subpanel_activities-->
	<div id="list_subpanel_bugs">
		<table class="list view">
			<button name="listViewNextButton" />
		</table>
	</div>
	<div id="list_subpanel_bugs">
		<span class="pageNumbers" assert="(3 - 4 of 6)" />
	</div>
	<div id="list_subpanel_bugs">
		<table class="list view">
			<button name="listViewEndButton" />
		</table>
	</div>
	<div id="list_subpanel_bugs">
		<span class="pageNumbers" assert="(5 - 6 of 6)" />
	</div>
	<div id="list_subpanel_bugs">
		<table class="list view">
			<button name="listViewPrevButton" />
		</table>
	</div>
	<div id="list_subpanel_bugs">
		<span class="pageNumbers" assert="(3 - 4 of 6)" />
	</div>
	<div id="list_subpanel_bugs">
		<table class="list view">
			<button name="listViewStartButton" />
		</table>
	</div>
	<div id="list_subpanel_bugs">
		<span class="pageNumbers" assert="(1 - 2 of 6)" />
	</div>
	<div id="list_subpanel_bugs">
		<table class="list view">
			<button name="listViewEndButton" />
		</table>
	</div>
	<div id="list_subpanel_bugs">
		<span class="pageNumbers" assert="(5 - 6 of 6)" />
	</div>
	<div id="list_subpanel_bugs">
		<table class="list view">
			<button name="listViewStartButton" />
		</table>
	</div>
	<div id="list_subpanel_bugs">
		<span class="pageNumbers" assert="(1 - 2 of 6)" />
	</div>

	<!-- set list view to show 10 items -->
	<link text="Admin" />
	<link text="System Settings" />
	<textfield name="list_max_entries_per_subpanel" set="10" />
	<button value="  Save  " />

	<!--Run Delete XML-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Accounts_0121.xml finished" />
</soda>
