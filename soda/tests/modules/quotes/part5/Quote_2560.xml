
<soda>
	<!-- View Summary_Verify that "View Summary" can open summary view pop-up window 
		for Activities under "Quotes" sub-panel. -->
	<puts text="Test: Quote_2560.xml starting" />

	<!--Go to Quotes module and search out the quote record create in lib -->
	<link id="moduleTab_Quotes" />
	<browser assert="Quotes" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_Quote_name}" />
		<button id="search_form_submit" />
	</form>

	<!--Go to detail view -->
	<table class="list view">
		<link text="{@pre_Quote_name}" />
		<wait timeout="2" />
	</table>
	<div class="moduleTitle">
		<link href="index.php?module=Quotes&amp;action=index" click="false" />
		<browser assert="Quote Overview" />
	</div>
	

	<!--Press View Summary button and assert the pop-up window -->
	<button value="View Change Log" />
	<wait timeout="2" />
	<div class="moduleTitle">
		<browser assert="Change Log" />
	</div>
	
	<browser send_keys="Ctrl+W" />
	<wait timeout="1" />
	<attach title="/{@pre_Quote_name}/">
		<wait timeout="3" />
	</attach>
	
	<puts text="Test: Quote_2560.xml"/>
</soda>

