
<soda>
	<!-- Delete Call_Verify that " Schedule Call " can be successful deleted on the 
		" Case " sub-panel -->
	<puts text="Test: Quote_2586.xml starting" />

	<link href="index.php?module=Quotes&amp;action=index" />
	<link text="Basic Search" required="false" />
	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@pre_Quote_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<browser assert="{@pre_Quote_name}" />
		<link text="{@pre_Quote_name}" click="true" />
	</table>
	<table id="detailpanel_1">
		<browser assert="{@pre_Quote_name}" />
	</table>
	<csv file="{@global.scriptsdir}/csvs/quote/Quote_2586.csv" var="Quote_2586">
		<div id="list_subpanel_activities">
			<table class="list view">
				<button id="Activities_logcall_button" />
				<wait timeout="3" />
			</table>
		</div>

		<timestamp />
		<form id="form_SubpanelQuickCreate_Calls">
			<textfield id="name" set="{@Quote_2586.call_name} {@user.name} {@stamp}" />
			<textfield id="date_start_date" set="{@Quote_2586.call_date_start_date}" />
			<select id="date_start_hours" set="{@Quote_2586.call_date_start_hours}" />
			<select id="date_start_minutes" set="{@Quote_2586.call_date_start_minutes}" />

			<textfield name="duration_hours" set="{@Quote_2586.call_duration_hours}" />
			<select name="duration_minutes" set="{@Quote_2586.call_duration_minutes}" />

			<select id="direction" set="{@Quote_2586.call_direction}" />
			<select id="status" set="{@Quote_2586.call_status}" />

			<checkbox name="reminder_checked" set="{@Quote_2586.call_reminder_checked}" />
			<textfield id="description" set="{@Quote_2586.call_description}" />
			<button value="Save" />
			<wait timeout="5" />
		</form>

		<div id="list_subpanel_activities">
			<table class="list view">
				<link text="{@Quote_2586.call_name} {@user.name} {@stamp}" click="false" />
				<link class="listViewTdToolsS1" index="2" alert="true" />
				<wait timeout="5" />
				<link text="{@Quote_2586.call_name} {@user.name} {@stamp}" click="false"
					exist="false" />
			</table>
		</div>
	</csv>
	<!--Run Delete XML -->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />

	<puts text="Test: Quote_2586.xml finished" />
</soda>
