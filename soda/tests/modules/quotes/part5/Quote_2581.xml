<soda>
	<!-- Relationship-Detail Task_Verify that task can be successful deleted on the 
		" case " sub-panel. -->
	<puts text="Test: Quote_2581.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/quote/Quote_2581.csv" var="Quote_2581">
		<link href="index.php?module=Quotes&amp;action=index" />
		<link text="Basic Search" required="false" />
		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_Quote_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_Quote_name}" />
			<link text="{@pre_Quote_name}" click="true" />
		</table>
		<table id="detailpanel_1">
			<browser assert="{@pre_Quote_name}" />
		</table>
		<div id="list_subpanel_activities">
			<table class="list view">
				<button id="Activities_createtask_button" />
				<wait timeout="3" />
			</table>
		</div>
		<form id="form_SubpanelQuickCreate_Tasks">
			<button id="Tasks_subpanel_full_form_button" />
		</form>
		<timestamp />
		<form id="EditView">
			<textfield id="name" set="{@Quote_2581.task_name} {@user.name} {@stamp}" />
			<select id="priority" set="{@Quote_2581.task_priority}" />
			<select id="status" set="{@Quote_2581.task_status}" />
			<button value="Save" />
		</form>

		<div id="list_subpanel_activities">
			<table class="list view">
				<browser assert="{@Quote_2581.task_name} {@user.name} {@stamp}" />
				<link text="{@Quote_2581.task_name} {@user.name} {@stamp}" click="false" />
				<link class="listViewTdToolsS1" index="1" />
			</table>
		</div>

		<!-- Edit link displays QuickEdit now, so click Full Form. -->
		<button value="Full Form" />
		
		<form id="EditView">
			<textfield id="name" set="{@Quote_2581.task_name} {@user.name} {@stamp}" />
			<select id="priority" set="{@Quote_2581.task_priority}" />
			<select id="status" set="{@Quote_2581.task_status}" />
			<button value="Save" />
		</form>
		<div id="list_subpanel_activities">
			<table class="list view">
				<browser assert="{@Quote_2581.task_name} {@user.name} {@stamp}" />
				<link text="{@Quote_2581.task_name} {@user.name} {@stamp}" click="false" />
				<link class="listViewTdToolsS1" index="2" alert="true" />
				<wait timeout="5" />
				<link text="{@Quote_2581.task_name} {@user.name} {@stamp}" click="false"
					exist="false" />
			</table>
		</div>
	</csv>
	<!-- Clean up tasks created in this script -->
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />

	<puts text="Test: Quote_2581.xml finished" />
</soda>
