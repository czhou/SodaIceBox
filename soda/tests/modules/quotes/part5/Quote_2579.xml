
<soda>
	<!-- Relationship-Select Contracts_Verify that New Contracts related can be successful 
		select " on the Cobtracts. -->
	<puts text="Test: Quote_2579.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/quote/Quote_2579.csv" var="Quote_2579">
		<link href="index.php?module=Quotes&amp;action=index" />
		<link text="Basic Search" required="false" />
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_Quote_name}" />
		<button id="search_form_submit" />
		<table class="list view">
			<browser assert="{@pre_Quote_name}" />
			<link text="{@pre_Quote_name}" click="true" />
		</table>
		<table id="detailpanel_1">
			<browser assert="{@pre_Quote_name}" />
		</table>
		<div id="list_subpanel_contracts">
			<table class="list view">
				<button id="contracts_quotes_select_button" />
			</table>
		</div>

		<browser assert="Contract Search" />
		<textfield name="name_advanced" set="{@Contract_Create_Lib}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@Contract_Create_Lib}" />
		</table>

		<div id="list_subpanel_contracts">
			<table class="list view">
				<link text="{@Contract_Create_Lib}" click="false" />
				<link class="listViewTdToolsS1" index="1" />
			</table>
		</div>

		<!--Opportunity select -->
		<button id="btn_opportunity_name" />
		<browser assert="Opportunity Search" />
		<textfield name="name_advanced" set="{@pre_opp_name}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@pre_opp_name}" />
		</table>

		<!--Account select -->
		<button id="btn_account_name" />
		<browser assert="Account Search" />
		<textfield name="name_advanced" set="{@pre_account_name}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@pre_account_name}" />
		</table>

		<form id="EditView">
			<textfield name="name" set="{@Quote_2579.contract_name} {@user.name} {@stamp}" />
			<button value="Save" />
		</form>

		<div id="list_subpanel_contracts">
			<table class="list view">
				<link text="{@Quote_2579.contract_name} {@user.name} {@stamp}" />
			</table>
		</div>
		
		<!--Keep the value of gvar-->
		<var var="Contract_Create_Lib" set="{@Quote_2579.contract_name} {@user.name} {@stamp}"/>
	</csv>

	<puts text="Test: Quote_2579.xml finished" />
</soda>
