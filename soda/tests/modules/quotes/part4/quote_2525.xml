
<soda>
        <puts text="Test Case 2525: Edit Task for Quote_Verify that meeting detail information related to this Quote can be viewed successfully."/> 

        <!--Go to Quotes module and search out the quote record create in lib-->
        <link id='moduleTab_Quotes'/>
        <browser assert='Quotes'/>
        <form id='search_form'>
            <button id='search_form_clear'/>
            <textfield id='name_basic' set='{@pre_Quote_name}'/>
            <button id='search_form_submit'/>
        </form>

        <table class='list view'>
            <link text='{@pre_Quote_name}'/>
        </table>

        <!--Create a task in Activities subpanel.-->
        <browser assert="Overview"/>
        <button id="Activities_schedulemeeting_button"/>
        <wait timeout="2"/>
        <textfield id="name" set="New meeting record"/>
        <button id="Meetings_subpanel_save_button"/>
        <wait timeout="8"/>
        <browser assert="New meeting record"/>

        <!--Modify the task record-->
        <table class="list view">
                <link text="New meeting record"/>
        </table>
        <wait timeout="2"/>
	<browser assert="Overview"/>

        <!--Delete the note record created in this case.-->
        <link id="moduleTab_Meetings"/>
        <button id="search_form_clear"/>
        <textfield id="name_basic" set="New meeting record"/>
        <button id="search_form_submit"/>
        <checkbox id="massall" click="true"/>
        <link id="actions_link"/>
        <link text="Delete" alert="true"/>
        <span class="pageNumbers" assert="(0 - 0 of 0)" />
        <puts text="End Test Case: 2525"/>
</soda>

