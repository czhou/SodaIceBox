<soda>
        <puts text='Quote_2486:Create Quote_Verify that quote is not duplicated when using cancel function.'/>

	<!--Go to Quotes module and search out the quote record create in lib-->
        <link id='moduleTab_Quotes'/>
        <browser assert='Quotes'/>
        <form id='search_form'>
            <button id='search_form_clear'/>
            <textfield id='name_basic' set='{@pre_Quote_name}'/>
            <button id='search_form_submit'/>
        </form>

        <table class='list view'>
            <link text='{@pre_Quote_name}'/>
        </table>
	
	<!--Duplicte the quote and cancel the duplication in quote detail view-->
	<button id="duplicate_button"/>
	<wait timeout="2"/>
	<textfield id="name" set="Duplicated {@pre_Quote_name}"/>
	<button value="Cancel" alert="true"/>
	<wait timeout="2"/>

	<!--Go to Quotes module and search out the quote record dulicated above-->
        <link id='moduleTab_Quotes'/>
        <browser assert='Quotes'/>
        <form id='search_form'>
            <button id='search_form_clear'/>
            <textfield id='name_basic' set="Duplicated {@pre_Quote_name}"/>
            <button id='search_form_submit'/>
        </form>
	<link text="Duplicated {@pre_Quote_name}" exist="false"/>

    <puts text='Quote_2486.xml---Finished!'/>   
</soda>
