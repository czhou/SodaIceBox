
<soda>
	<!-- Quote_Contract_Subpanel_Cancel_inline_create_contract. -->
	<puts text="Test: Quote_8548.xml starting" />

	<csv file="{@global.scriptsdir}/csvs/quote/Quote_8548.csv" var="Quote_8548">
		<link href="index.php?module=Quotes&amp;action=index" />
		<textfield id="name_basic" set="{@pre_Quote_name}" />
		<button id="search_form_submit" />
		<table class="list view">
			<browser assert="{@pre_Quote_name}" />
			<link text="{@pre_Quote_name}" click="true" />
		</table>
		<table id="detailpanel_1">
			<browser assert="{@pre_Quote_name}" />
		</table>
		<div id="list_subpanel_contracts">
			<table class="list view">
				<button name="contracts_quotes_create_button" />
				<wait timeout="5" />
			</table>
		</div>

		<!--Opportunity select -->
		<button id="btn_opportunity_name" />
		<wait timeout="5" />
		<browser assert="Opportunity Search" />
		<textfield name="name_advanced" set="{@pre_opp_name}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@pre_opp_name}" />
			<wait timeout="2" />
		</table>

		<!--Account select -->
		<button id="btn_account_name" />
		<wait timeout="5" />
		<browser assert="Account Search" />
		<textfield name="name_advanced" set="{@pre_account_name}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@pre_account_name}" />
			<wait timeout="2" />
		</table>

		<form id="form_SubpanelEditView_Contracts">
			<textfield name="name" set="{@Quote_8548.contract_name} {@user.name} {@stamp}" />
			<select id="status" set="{@Quote_8548.contract_status}" />
			<button id="Contracts_subpanel_cancel_button" alert="true" />
			<wait timeout="5" />
		</form>

		<div id="list_subpanel_contracts">
			<table class="list view">
				<link text="{@Quote_8548.contract_name} {@user.name} {@stamp}" exist="false" />
			</table>
		</div>
	</csv>

	<puts text="Test: Quote_8548.xml finished" />
</soda>
