<soda>
	<!--
		Sort Account_Verify that account records can be sorted ASC/DESC by column
		titles on account list view.
	-->
	<puts text="Test: Accounts_0040.xml starting." />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_sort}" />
	<button id="search_form_submit" />
	<wait timeout="3" />
	<table class="list view">
		<link text="{@pre_account_sort}" />
	</table>
	<wait timeout="5" />
	<!--Go bug subpanel & click "Select"-->
	<button id="accounts_contacts_select_button" />
	<button value="Clear" />
	<button value="Search" />
	<checkbox id="massall" click="true" />
	<form id="MassUpdate">
		<button value="Select" />
	</form>
	<wait timeout="3" />
	<div id="list_subpanel_contacts">
		<link class="listViewThLinkS1" index="4" />
		<wait timeout="2" />
		<link class="listViewThLinkS1" index="1" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_asc}">
					<browser assert="{@Account_Contact_Subpanel.last_name}" />
				</tr>
			</table>
		</csv>
		<link class="listViewThLinkS1" index="1" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_desc}">
					<browser assert="{@Account_Contact_Subpanel.last_name}" />
				</tr>
			</table>
		</csv>
		
		<link class="listViewThLinkS1" index="2" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_asc}">
					<browser assert="{@Account_Contact_Subpanel.city}" />
				</tr>
			</table>
		</csv>
		<link class="listViewThLinkS1" index="2" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_desc}">
					<browser assert="{@Account_Contact_Subpanel.city}" />
				</tr>
			</table>
		</csv>
		
		<link class="listViewThLinkS1" index="3" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_asc}">
					<browser assert="{@Account_Contact_Subpanel.state}" />
				</tr>
			</table>
		</csv>
		<link class="listViewThLinkS1" index="3" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_desc}">
					<browser assert="{@Account_Contact_Subpanel.state}" />
				</tr>
			</table>
		</csv>

		<link class="listViewThLinkS1" index="4" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_asc}">
					<browser assert="{@Account_Contact_Subpanel.phone_office}" />
				</tr>
			</table>
		</csv>
		<link class="listViewThLinkS1" index="4" />
		<wait timeout="2" />
		<csv file="{@global.scriptsdir}/csvs/sorting/Contact_Listview.csv" 
		  var="Account_Contact_Subpanel">
			<table class="list view">
				<tr index="{@Account_Contact_Subpanel.sub_desc}">
					<browser assert="{@Account_Contact_Subpanel.phone_office}" />
				</tr>
			</table>
		</csv>
	</div>
	<puts text="Test: Accounts_0040.xml finished." />
</soda>
