<soda>
		<!--
				This test verifies the creation of an OM Revenue line item Software product with a Contract
				TYpe change, for a Software (SWG) Seller
		-->
		
		<!--	For IBM script creations, the dependencies of opportunity creation have
				been commented out until they have been written.
		-->

        <puts text="Test: Opportunity_12519.xml starting." />
		
		<!--	IBM - Commented out, next two lines, pending creation of the following script
				<script file="tests/modules/opportunities/part4/module_lib/setup-opportunity-part4.xml" />
				which crerates the seed data for the suite, including the @pre_opp_name variable.
				
        <script file='{@global.scriptsdir}/modules/lib/Opp_Create_Lib_NoDep.xml'/>
		<var var="pre_opp_name_a" set="{@pre_opp_name}" />
		-->
		
        <link id='moduleTab_Opportunities'/>
     
        <!-- <link text="Basic Search" required="false" /> -->
        <button id="search_form_clear" />
        
		<!--	To test the script prior to the create opportunity dependent scripts
				the opportunity variable name is hard coded, from an existing opportunity which
				needs to be manually created.
			
		-->
		
		<var var="pre_opp_name" set="OL-0S5YVIX" />  
			
		<textfield id="name_basic" set="{@pre_opp_name}"/>
   
        <button id="search_form_submit"/>
        
        <table class="list view">
            <browser assert="{@pre_opp_name}"/>
            <link text="{@pre_opp_name}" click="true"/>             
        </table>

		<button id="opportunities_ibm_revenuelineitems_create_button" />
             
        <csv file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.csv" var="opp_record">
		
			<textfield id="level_search-input" click="true" />
			<textfield id="level_search-input" set="a" /> 
			<textfield id="level_search-input" click="true" />
			<wait timeout="1" />
	  
			<li text="Level 15: Rational" click="true" />
			
			<wait timeout="3" />
			
			<select id="probability" set="{@opp_record.probability}" />
			<select id="roadmap_status" set="Solid" />
			
			<radio id='revenue_type' value='Signings'/>
			
			<wait timeout="3" />
			
			<radio id='license_type' value='Term'/>
			<wait timeout="1" />
			<select id="contract_subtype" set="Renewal" />
			<textfield id="revenue_amount" set="{@opp_record.amount}" />
			<textfield id="duration" set="10" />
						
			<button value="Save" />
			
			<!--Assert that the RLI created is valid -->
			
			<div id="list_subpanel_opportun_revenuelineitems">
				<link class="listViewTdToolsS1" index="1" />
			</div>
			
			<textfield id="level10-input" assert="Software" />
			<textfield id="level15-input" assert="Rational" />
			<select id="roadmap_status" assert="Solid" />
			<select id="contract_subtype" assert="Renewal" />
			<textfield id="revenue_amount" assert="{@opp_record.amount}" /> 
			<select id="probability" assert="{@opp_record.probability}" />
			<textfield id="duration" assert="10" />
			
		</csv>
		
       
        <puts text="Test: Opportunity_12519.xml finished."/>
		
</soda>
