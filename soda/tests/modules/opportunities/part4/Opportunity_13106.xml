<soda>
		<!--
				This test verifies that a valid Business Partner can be seacrhed and selected as 
				an Opportunity Owner
		-->
		
		<!--	For IBM script creations, the dependencies of opportunity creation have
				been commented out until they have been written.
		-->

        <puts text="Test: Opportunity_13106.xml starting." />
		
		<!--	IBM - Commented out, next two lines, pending creation of the following script
				<script file="tests/modules/opportunities/part4/module_lib/setup-opportunity-part4.xml" />
				which crerates the seed data for the suite, including the Business Partners.
				
        <script file='{@global.scriptsdir}/modules/lib/Create_Business_partner.xml'/>
		-->
		
        <div id="themeTabGroup_All">
			<link text="Opportunities" />
		</div>
		
		<link text="Create Opportunity" />
   
		<wait timeout="3" />
		
		<button id="btn_assigned_user_name" click="true" />
		
		<radio id='EmployeeOrBPRadio_input_bp' set='true'/>
		
		<!-- Verify the Search only favorite is default -->
		<checkbox id='favorites_only_ctm_advanced' assert='true'/>
		
		<checkbox id='favorites_only_ctm_advanced' set='false'/>
		
		<textfield id="address_country_advanced" set="USA" />
		
		<button id="search_form_submit" click="true" />
		<!-- Verify two records are found with just Yes (GPP) -->
		
		<wait timeout="3" />
		
		<browser assert="Yes (GPP)" />
		<browser assertnot="Yes (SFA only)" />
		<browser assert="(1 - 2 of 2)" />
		
		<textfield id="address_country_advanced" set="UK" />
		
		<button id="search_form_submit" click="true" />
		<!-- Verify two records are found with just Yes (SFA only)  -->		
		<wait timeout="3" />
		
		<browser assertnot=" Yes (GPP) " />
		<browser assert="Yes (SFA only)" />
		<browser assert="(1 - 2 of 2)" />
		 							 											
        <puts text="Test: Opportunity_13106.xml finished."/>
		
</soda>
