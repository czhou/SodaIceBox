<soda>

	<!--
				This test ensures that the user can Create an Opportunity using
				the full form. The verify search results needs to be updated 
				pending the extraction of the Opportunity Number which is being 
				syste generated for IBM
	-->		
	
   <puts text="Test: Opportunity_12327.xml starting." />
   <timestamp />
   <div id="themeTabGroup_All">
    <link text="Opportunities" />
   </div>
   <link text="Create Opportunity" />
   
   <wait timeout="8" />
   
   <button id="Opportunities_subpanel_full_form_button" />
   
	<csv file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.csv" var="opp_record">
      <textfield id="description" set="{@opp_record.description}" />
	  <select id="sales_stage" set="{@opp_record.sales_stage}" />
	  <select id="lead_source" set="{@opp_record.lead_source}" />

  	  <!--Primary Contact Select-->
      <button id="btn_pcontact_id_c" />
      <browser assert="Contact Search" />
	  <button id="search_form_clear" />
      <textfield id="name_advanced" set="{@pre_contact_last_name}" /> 
      <button id="search_form_submit" />
      <link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	  
	  <!--Client Select-->
      <button id="btn_account_name" />
      <browser assert="Client Search" />
      <textfield id="name_advanced" set="{@pre_account_name}" /> 
      <button id="search_form_submit" />
      <link text="{@pre_account_name}" />
	  	  
	  <textfield id="offering_1-input" click="true" />
      <textfield id="offering_1-input" set="{@opp_record.offering}" /> 
	  <textfield id="offering_1-input" click="true" />
	  <wait timeout="1" />
	  
      <li text="Level 15: Core Consulting" click="true" />
	  
      <textfield id="revenue_amount_1" set="{@opp_record.amount}" /> 
      <select id="probability_1" set="{@opp_record.probability}" />
      	  
	   <button value="Save" />
	   
	   <div id="themeTabGroup_All">
		<link text="Opportunities" />
		</div>
		
		<link text="View Opportunities" />
		
		<!-- The verify search results (using Basic Search) needs to be updated 
				pending the extraction of the Opportunity Number which is being 
				system generated for IBM.
		-->		
	
	</csv>
	  	  
   <puts text="Test: Opportunity_12327.xml finished." />
</soda>

