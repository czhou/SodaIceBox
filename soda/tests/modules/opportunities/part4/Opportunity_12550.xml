<soda>
		<!--
				This test verifies that both the Product and Solutions catalog can be searched
				The Solutions catalog is to be added - as of 11/28/11
		-->
		
		<!--	For IBM script creations, the dependencies of opportunity creation have
				been commented out until they have been written.
		-->

        <puts text="Test: Opportunity_12550.xml starting." />
		
		<!--	IBM - Commented out, next two lines, pending creation of the following script
				<script file="tests/modules/opportunities/part4/module_lib/setup-opportunity-part4.xml" />
				which crerates the seed data for the suite, including the @pre_opp_name variable.
				
        <script file='{@global.scriptsdir}/modules/lib/Opp_Create_Lib_NoDep.xml'/>
		<var var="pre_opp_name_a" set="{@pre_opp_name}" />
		-->
		
        <link id='moduleTab_Opportunities'/>
     
        <!-- <link text="Basic Search" required="false" /> -->
        <button id="search_form_clear" />
        
		<!--	To test the script prior to the create opportunity dependent scripts
				the opportunity variable name is hard coded, from an existing opportunity which
				needs to be manually created.
			
		-->
		
		<var var="pre_opp_name" set="41-5CUIZ98" />  
			
		<textfield id="name_basic" set="{@pre_opp_name}"/>
   
        <button id="search_form_submit"/>
        
        <table class="list view">
            <browser assert="{@pre_opp_name}"/>
            <link text="{@pre_opp_name}" click="true"/>             
        </table>

		<button id="opportunities_ibm_revenuelineitems_create_button" />
             
        <csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_12550.csv" var="opp_record">
		
			<!-- Top down search for a Hardware product -->
			
			<textfield id="level10-input" click="true" />
			<textfield id="level10-input" set="{@opp_record.level10_search}" /> 
			<textfield id="level10-input" click="true" />
			<wait timeout="1" />
	  
			<li text="{@opp_record.level10}" click="true" />
			
			<wait timeout="3" />
			
			<textfield id="level15-input" click="true" />
			<textfield id="level15-input" set="{@opp_record.level15_search}" /> 
			<textfield id="level15-input" click="true" />
			<wait timeout="1" />
	  
			<li text="{@opp_record.level15}" click="true" />
			
			<wait timeout="3" />
			
			<textfield id="level20-input" click="true" />
			<textfield id="level20-input" set="{@opp_record.level20_search}" /> 
			<textfield id="level20-input" click="true" />
			<wait timeout="1" />
	  
			<li text="{@opp_record.level20}" click="true" />
			
			<wait timeout="3" />
			
			<textfield id="level30-input" click="true" />
			<textfield id="level30-input" set="{@opp_record.level30_search}" /> 
			<textfield id="level30-input" click="true" />
			<wait timeout="1" />
	  
			<li text="{@opp_record.level30}" click="true" />
			
			<wait timeout="3" />
			
			<textfield id="level40-input" click="true" />
			<textfield id="level40-input" set="{@opp_record.level40_search}" /> 
			<textfield id="level40-input" click="true" />
			<wait timeout="1" />
	  
			<li text="{@opp_record.level40}" click="true" />
			
			<wait timeout="3" />
			
			<select id="probability" set="{@opp_record.probability}" />
			<select id="roadmap_status" set="Solid" />
	  		<textfield id="revenue_amount" set="{@opp_record.amount}" />

			<button value="Save" />
			
			<!--Assert that the RLI created is valid -->
			
			<div id="list_subpanel_opportun_revenuelineitems">
				<link class="listViewTdToolsS1" index="1" />
			</div>
			
			<textfield id="level10-input" assert="{@opp_record.level10}" />
			<textfield id="level15-input" assert="{@opp_record.level15}" />
			<textfield id="level20-input" assert="{@opp_record.level20}" />
			<textfield id="level30-input" assert="{@opp_record.level30}" />
			<textfield id="level40-input" assert="{@opp_record.level40}" />
			<select id="roadmap_status" assert="Solid" />
			<textfield id="revenue_amount" assert="{@opp_record.amount}" /> 
			<select id="probability" assert="{@opp_record.probability}" />
	
		</csv>
		
       
        <puts text="Test: Opportunity_12550.xml finished."/>
		
</soda>
