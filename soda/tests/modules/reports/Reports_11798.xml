
<soda>
	<!-- Verify that changes to the run-time filters are retained when a matrix report is sorted by a group by field (bug 44880). -->
	<puts text="Test: Report_11798.xml starting" />

	<csv file="{@global.scriptsdir}/csvs/reports/Reports_11798.csv" var="Reports_11798">
		<!--goto Reports module -->
		<link id="moduleTab_Reports" />
		<link text="Create Report" />
		<div class="moduleTitle">
			<link href="index.php?module=Reports&amp;action=index" click="false" />
			<browser assert="Report Wizard" />
		</div>

		<!-- Create matrix report. -->
		<image name="matrixImg" click="true" />
		<table id="Opportunities">
			<link text="Opportunities" />
		</table>

		<!-- Filters. -->
		<div text="Expected Close Date" click="true" />
		<wait timeout="2" />

		<div id="filter_designer_div">
			<browser assert="Opportunities &gt; Expected Close Date" />
			<row id="Filter.1_table_filter_row_1">
				<select name="qualify" set="Is Between" />
				<textfield id="jscal_field" set="{@Reports_11798.date_from}" />
				<textfield id="jscal_field2" set="{@Reports_11798.date_to}" />
				<!-- Mark Expected Close Date as a runtime filter. -->
				<checkbox id="runtime_filter_Filter.1_table_filter_row_1" set="true" />
			</row>
		</div>
		<button name="Next &gt;" />

		<!-- Group By  -->
		<div text="Month: Expected Close Date" click="true" />
		<wait timeout="2" />
		<div text="Opportunity Name" click="true" />
		<wait timeout="2" />
		<button name="Next &gt;" />

		<!-- Display Summaries -->
		<radio id="summary_order_by_radio_display_summaries_row_group_by_row_1" set="true" />
		<button name="Next &gt;" />

		<!-- Chart Options -->
		<button name="Next &gt;" />

		<!-- Report Details -->
		<textfield name="save_report_as" set="{@Reports_11798.report_name}" />
		<button name="Save and Run" />

		<select name="qualify" set="This Year" />
		<button value="Apply" />
		
		<select name="qualify" assert="This Year" />
		<select name="qualify" assertnot="Is Between" />

		<!-- Cleanup: Delete the created report. -->
		<link id="moduleTab_Reports" />

		<textfield name="name" set="{@Reports_11798.report_name}" />
		<button id="search_form_submit" />

		<checkbox name="massall" click="true" />
		<link id="actions_link" />
		<link text="Delete" alert="true" />
		<span class="pageNumbers" assert="(0 - 0 of 0)" />

		<button name="clear" />
		<button id="search_form_submit" />
	</csv>

	<puts text="Test: Report_11798.xml finished" />
</soda>
