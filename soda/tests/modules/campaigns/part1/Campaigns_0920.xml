
<soda>
	<!-- Mass update campaign: Verify that campaign's "Assigned to" can be mass 
		updated correctly using "Mass Update" sub-panel. -->
	<puts text="Test: Campaigns_0920.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv"
		var="campaign" />

	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_0920.csv" var="Campaign0920">
		<!-- Create a campaign record, assigned to Administrator by default. -->
		<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />

		<!-- Verify Assigned To user. -->
		<link id="moduleTab_Campaigns" />
		<div class="moduleTitle">
			<link href="index.php?module=Campaigns&amp;action=index" click="false" />
		</div>

		<form id="MassUpdate">
			<tr class="oddListRowS1">
				<td index="8"> <!-- User column -->
					<link text="{@Campaign0920.old_user}" exists="true" />
				</td>
			</tr>
		</form>

		<!-- Mass update the user -->
		<checkbox name="massall" set="true" />
		<table id="mass_update_table">
			<button value="Select" />
		</table>
		<browser assert="User Search" />
		<textfield name="user_name_advanced" set="{@Campaign0920.new_user}" />
		<button value="Search" />
		<link text="{@Campaign0920.last_name}" />

		<form id="MassUpdate">
			<tr class="oddListRowS1">
				<td index="8"> <!-- User column -->
					<link text="{@Campaign0920.old_user}" exists="true" />
				</td>
			</tr>
		</form>
	</csv>

	<!-- Cleanup all records created -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0920.xml finished." />
</soda>
