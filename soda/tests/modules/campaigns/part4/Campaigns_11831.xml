
<soda>
	<!-- Verify that adding a custom field in campaign doesn't break Campaign 
		ROI -->
	<puts text="Test: Campaigns_11831.xml starting." />

	<!-- Create one campaign records. -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />

	<!-- Click on Add Field in Studio for Campaign's module -->
	<link text="Admin" />
	<link text="Studio" />
	<link text="Campaigns" class="studiolink" assertPage="false" />
	<link text="Fields" class="studiolink" assertPage="false" />
	<button name="addfieldbtn" />
	<wait timeout="2" />
	<textfield id="field_name_id" set="test_field" />
	<textfield name="help" click="true" />
	<wait timeout="1" />
	<button name="fsavebtn" />
	<wait timeout="2" />

	<!-- Navigate to Campaign detail view and click on View ROI -->
	<link id="moduleTab_Campaigns" />
	<link text="{@Campaign_Name}" />
	<button value="View ROI" />

	<!-- Verify that the ROI page loaded -->
	<form id="form">
		<button value="  Delete Test Entries  " click="false" exist="true" />
	</form>


	<!--Delete the test data -->
	<link text="Admin" />
	<link text="Studio" />
	<link text="Campaigns" class="studiolink" assertPage="false" />
	<link text="Fields" class="studiolink" assertPage="false" />
	<link text="test_field_c" />
	<wait timeout="2" />
	<button name="fdeletebtn" alert="true" />
	<wait timeout="2" />

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_11758.xml finished." />
</soda>
