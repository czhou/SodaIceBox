
<soda>
	<puts text="Test: Campaigns_1242.xml starting." />
	<!--
	Action:
		1. Click "Create Contact" button, then enter contact information.

	Expected:
		1. The contact record is displayed in the contact list sub-panel.
	-->
	
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />
	<var var="camp1_name" set="{@Campaign_Name}" />
	
	
	<div id="list_subpanel_prospectlists">
		<link text="{@camp1_name} Test List" />
	</div>
	
	<button id="prospect_list_contacts_create_button" />
	
	<textfield id="last_name" set="Contact for {@camp1_name}" />
	<button id="Contacts_subpanel_save_button" />
	
	<wait timeout="5" />
	
	<div id="subpanel_contacts">
		<browser assert="Contact for {@camp1_name}" />
	</div>

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />	
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	
	<puts text="Test: Campaigns_1242.xml finished." />
</soda>	
