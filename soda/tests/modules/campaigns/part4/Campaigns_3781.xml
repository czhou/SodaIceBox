
<soda>
	<puts text="Test: Campaigns_3781.xml starting." />
	<!--
	Action:
		1. Login to SugarCRM as a valid user.
		2. Go to Campaigns module.
		3. Click "Targets" link in navigation shortcuts.
		4. Enter the first letter of a target's "FirstName"
			(the target exists).
		5. Click "Search" button in the "Target" sub-panel.
	Expected:
		5. The target records with first letter(FirstName) entered
			is displayed in the targets view.
	-->

	<script file="{@global.scriptsdir}/modules/lib/Target_Create_Lib.xml" />
	<var var="target1_name" set="{@Target_First_Name} {@Target_Last_Name}" />
	<var var="target1_first" set="{@Target_First_Name}" />
	<var var="target1_last" set="{@Target_Last_Name}" />
	
	<link id="moduleTab_Prospects" />
	
	<textfield id="search_name_basic" set="{@target1_first}" />
	<button id="search_form_submit" />
	<wait timeout="2" />
	
	<table class="list view">
		<browser assert="{@target1_name}" />
	</table>
	
	<script file="{@global.scriptsdir}/modules/lib/Target_Delete_Lib.xml" />
	
	<puts text="Test: Campaigns_3781.xml finished." />
</soda>	
