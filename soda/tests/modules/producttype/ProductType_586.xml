<soda>
    <puts text="---ProductTypes_586.xml: Product Types Create: Verify that product type can be created with required fields entered---Start!"/>
    <csv file="{@global.scriptsdir}/csvs/producttype/ProductType_586.csv" var="types_record_586">
        <link text="Admin"/>
        <link text="Product Types"/>
        <timestamp/>

        <form name="form">
            <button id="btn_create"/>
        </form>

        <table class="edit view">
            <textfield name="name" set="{@types_record_586.name} {@user.name} {@stamp}"/>
            <textfield name="list_order" set="{@types_record_586.order}"/>
        </table>
        <button value="Save"/>
        <hidden name="record" var="types_id"/>

        <table class="list view">
            <browser assert="{@types_record_586.name} {@user.name} {@stamp}"/>
            <browser assert="{@types_record_586.order}"/>
        </table>
    </csv>

    <!--Run Delete XML-->
    <script file='{@global.scriptsdir}/modules/lib/ProductType_Delete_Lib.xml'/>
    <puts text="---ProductCatalog_586.xml---Finished!"/>
</soda>
