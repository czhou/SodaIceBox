<soda>
    <puts text='---Quote_2482.xml: Create Quote: Verify that quote can be duplicated when using "Duplicate" function in the detail view of an existing quote.---Start!'/>
    <link id='moduleTab_Quotes'/>
    <browser assert='Quotes'/>
    <link text='Basic Search' required='false'/>
    <form id='search_form'>
        <button id='search_form_clear'/>
        <textfield id='name_basic' set='{@pre_Quote_name}'/>
        <button id='search_form_submit'/>
    </form>

    <table class='list view'>
        <browser assert='{@pre_Quote_name}'/>
        <link text='{@pre_Quote_name}'/>
    </table>
    <browser assert='Â»{@pre_Quote_name}'/>

    <form name='DetailView'>
        <button id='duplicate_button'/>
    </form>

    <form id='EditView'>
        <textfield id='name' set='{@pre_Quote_name}-dup'/>
        <button name='button' value='Save'/>
    </form>

    <div id='Quotes_detailview_tabs'>
      <browser assert='{@pre_Quote_name}-dup'/>
      <browser assert='{@Quote_Create_Lib.quote_stage}' />
      <browser assert='{@Quote_Create_Lib.date_quote_expected_closed}' />
    </div>
    <div class='detail view'>
        <browser assert='{@Quote_Create_Lib.bundle_stage_group}' />
    </div>
    <!-- The following three items are in '<div class='detail view'>', but
         somehow Soda can't find them.  Need to move out.  -->
    <browser assert='{@Quote_Create_Lib.bundle_name_group}' />
    <browser assert='{@pre_ProductCatalog_name}' />
    <browser assert='USD' />

    <!--Run Delete XML-->
    <link id='moduleTab_Quotes'/>

    <button id='search_form_clear'/>
    <form id='search_form'>
        <textfield id='name_basic' set='{@pre_Quote_name}-dup'/>
    </form>
    <button id='search_form_submit'/>
    <checkbox name='massall' click='true' />
    <link id='actions_link' />
    <link text='Delete' alert='true' />
    <puts text='---Quote_2482.xml---Finished!'/>
</soda>
