<soda>
	<!--
		Action:
			1. Login to system as a valid user.
			2. Click "Calendar" navigation tab.
			3. Click "Meetings" link on Navigation shortcuts.
			4. Click any meeting subject in "Meeting List" view.
			5. Search for users or contacts with 
				"first name or last name or with email" search condition
				in "Add Invitees" sub-panel.
			6. Click "Add" button on the right side of the search result.
			7. Click "Save" button on "Meeting Edit" page.
		Expectation:
			7. The added users or contacts are displayed in "Users" or
				"Contacts" sub-panel on "Meeting Detail View" page.
	-->
	<puts text="Test: Calendar_0701.xml starting." />
	
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />
	
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.xml" />
	
	<link id="moduleTab_Meetings" />
	
	<textfield id="name_basic" set="{@pre_meeting_name}" />
	<button id="search_form_submit" />
	
	<browser assert="{@pre_meeting_name}" />
	<link text="{@pre_meeting_name}" />
	
	<wait timeout="3" />
	
	<button id="edit_button" />
	
	<textfield name="search_last_name" set="{@pre_contact_last_name}" />
	<button value="Search" />

	<div id="list_div_win">
		<button value="Add" click="true" />
		<button value="Add" jscriptevent="onmouseup" />
	</div>
	
	<button value="Save" />
	
	<div id="list_subpanel_contacts">
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_0701.xml finished." />
</soda>
