<soda>
	<!--
		Action:
			1. Login to SugarCRM as a valid user.
			2. Click "Calendar" tab in navigation bar.
			3. Schedule a meeting that status is "Planned".
			4. Click the "Close and Create New" button in meeting's detail view.
		Expectation:
			4. The first meeting's status is "Held" in detail view.
	-->
	
	<puts text="Test: Calendar_3669.xml starting." />

	
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.xml" />
	<var var="meeting1_name" set="{@pre_meeting_name}" />
	
	<button id="edit_button" />
	
	<select id="status" set="Planned" />
	<button value="Save" />
	
	<button value="Close and Create New" />
	<button value="Cancel" />
	
	<link id="moduleTab_Meetings" />
	<link text="{@meeting1_name}" />
	
	<div id="LBL_MEETING_INFORMATION">
		<browser assert="Held" />
	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_3669.xml finished." />
</soda>