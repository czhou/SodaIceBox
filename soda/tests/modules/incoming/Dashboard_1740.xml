<soda>
	<puts text="Test: Dashboard_1740.xml starting." />
	<!--
	Action
		1. Login to system with valid user.
		2. Click home navigation tab and then click "Add Sugar Dashlets"
		3. Click "Charts" tab and then click "All Opportunities 
			By Lead Source By Outcome".
	Expected Results:
		3. "All Opportunities By Lead Source By Outcome" basic chart
			is displayed on  Home page.
	-->
	
	
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<timestamp />
	<link href="index.php?module=Opportunities&amp;action=index" />
	<link text="Create Opportunity" />

   <csv file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.csv" 
      var="opp_record" />
      <textfield id="name" set="{@opp_record.name} {@user.name} {@stamp}" /> 
      <textfield id="amount" set="10000" /> 
      <textfield id="date_closed" set="06/12/2011" /> 
      <textfield id="description" set="{@opp_record.description}" />
	  <select id="lead_source" set="Cold Call" />

      <!--Account Select-->
      <button id="btn_account_name" />
      <browser assert="Account Search" />
      <textfield id="name_advanced" set="{@pre_account_name}" /> 
      <button value="Search" />
      <link text="{@pre_account_name}" />
      
    <button value="Save" />
	
	
	<link id="moduleTab_Home" />
	
	<ul id="col_0_0">
		<browser assertnot="All Opportunities By Lead Source By Outcome" />
	</ul>
	
	<link id="add_dashlets" />
	
	<wait timeout="7" />
	
	<link id="chartCategoryAnchor" />
	<link text="All Opportunities By Lead Source By Outcome" />
	
	<div id="dashletsDialogHeader">
		<link index="1" />
	</div>
	
	<wait timeout="7" />
	
	<!-- chart? -->
	<ul id="col_0_0">
		<browser assert="All Opportunities By Lead Source By Outcome" />
		<div class="chartContainer" click="false" />
	</ul>
	
	<wait timeout="7" />
	
	<!-- delete -->
	<div class="dashletToolSet" index="1">
		<link index="3" alert="true" />
	</div>
	
	<wait timeout="7" />
	
	<ul id="col_0_0">
		<browser assertnot="All Opportunities By Lead Source By Outcome" />
	</ul>
	
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	
	<puts text="Test: Dashboard_1740.xml finished." />
</soda>	