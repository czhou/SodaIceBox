<soda>
	<!--
		Action:
			Verify that selected calls record information is not updated
				by Mass Update with non-existing record for fields.
				(Such as "Assigned to", "Team ID" fields.)
		Expectation:
			1. The selected calls record information is not updated.
	-->
	
	<puts text="Test: Calendar_3702.xml starting." />

	<script file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.xml" />
	<var var="call1_name" set="{@pre_call_name}" />
	
	<link id="moduleTab_Calls" />
	<checkbox id="massall" set="true" />
	<link id="actions_link" />
	<link text="Mass Update" />
	
	<textfield id="date_start_date" set="30/12/2012" />
	
	<button id="update_button" alert="true" />
	
	<div id="massupdate_form">
		<browser assert="Missing required field" />
		<browser assert="Invalid Value: Start Date" />
	</div>
	
	<button id="cancel_button" />
	
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_3702.xml finished." />
</soda>
