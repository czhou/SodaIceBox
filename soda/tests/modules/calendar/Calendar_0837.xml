<soda>
	<!--
		Action:
			1. Login to SugarCRM as a valid user.
			2. Go to Activities module.
			3. Schedule a call, leaving the "Related To:" field blank.
			4. Click "Edit" button in its detail view.
		Expectations:
			4. "Select" button is displayed next to "Related To" field.
	-->
	<puts text="Test: Calendar_0837.xml starting." />
	
	<script file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.xml" />
	
	<button id="edit_button" />
	
	<div id="LBL_CALL_INFORMATION">
		<browser assertnot="Warning" />
		<browser assertnot="Error" />
		<browser assertnot="Notice" />
		<textfield id="parent_name" click="false" />
		<button id="btn_parent_name" click="false" />
	</div>
	
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_0837.xml finished." />
</soda>