<soda>
	<!-- Verify that invitees can be added to a call -->
	<puts text="Test: Calendar_0677.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/calendar/CalendarAssertText.csv" var="calendar" />

	<!-- Create a call record. -->
	<script file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.xml" />

	<div id="Calls">
		<link text="View Calls" />
	</div>
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
	</div>
	
	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<form id="MassUpdate">
		<table class="list view">
			<link text="{@pre_call_name}" />
		</table>
	</form>
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
		<browser assert="{@pre_call_name}" />
	</div>

	<button id="edit_button" />

	<!-- Add Invitees -->
	<div id="scheduler">
		<textfield name="search_last_name" set="qauser" />
		<button value="Search" />
		<wait timeout="7" />
		<div id="list_div_win">
			<button value="Add" />
		</div>
	</div>
	<button value="Save" />
	<wait timeout="3" />

	<div id="list_subpanel_users">
		<link text="qauser" exist="true" click="false" />
		<browser assert="(1 - 2 of 2)" />
	</div>

	<!-- Delete the call record. -->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />

	<puts text="Test: Calendar_0677.xml finished." />
</soda>
