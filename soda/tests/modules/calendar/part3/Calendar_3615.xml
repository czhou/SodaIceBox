<soda>
	<!--
		Action:
			1. Login to system as a valid user.
			2. Click "Calendar" navigation tab.
			3. Click "Calls" on Navigation shortcuts.
			4. Click any call name link in "Call List" view.
			5. Click "Duplicate" button on "Call Detail View" page.
			6. Click "Cancel" button on "Edit Call" page.
			7. Go to "Call List" view and search for the duplicate call record.

		Expectation:
			7. The cancel duplicating contact record is not 
				displayed in "Contact List" view.
	-->
	<puts text="Test: Calendar_3615.xml starting." />
	
	<script file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.xml" />
	<var var="call1_name" set="{@pre_call_name}" />
	<var var="call2_name" set="{@call1_name}_Duplicate" />
	
	<link id="moduleTab_Calls" />
	
	<table class="list view">
		<link text="{@call1_name}" />
	</table>
	
	<button id="duplicate_button" />
	
	<textfield id="name" set="{@call2_name}" />
	<button id="CANCEL" alert="true" />
	
	<link id="moduleTab_Calls" />
	
	<table class="list view">
		<browser assert="{@call1_name}" />
		<browser assertnot="{@call2_name}" />
	</table>
	
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_3615.xml finished." />
</soda>
