<soda>
    <puts text="---User_7980:verify reminder ---Start!"/>
    <!--login in as nornal user-->
    <link text="Log Out"/>
    <csv file='{@global.scriptsdir}/modules/lib/SugarInit_Lib.csv' var='SugarInit7980'>
             <textfield id='user_name' set='{@SugarInit7980.last_name}' />
             <textfield id='user_password' set='{@SugarInit7980.pass}'/>
             <button id='login_button'/>
             <button value='  Next  ' required='false' timeout='3'/>
             <button value='  Next  ' required='false' timeout='3'/>
             <button value='  Next  ' required='false' timeout='3'/>
             <button value='  Finish  ' required='false' timeout='3'/>
     </csv>
     
    <div id='globalLinksModule'>
        <link text='{@SugarInit7980.last_name}'/>
    </div>
    <browser assert='Edit'/>
    <csv file='{@global.scriptsdir}/csvs/users/Users_7980.csv' var='User7980'>
        <link text='Advanced'/>
        <div id='settings'>            
            <select name='reminder_time' set='{@User7980.defaultreminder1}'/>
        </div>
        <button value='Save'/>
        <!--schedule meeting-->
        <link id='moduleTab_Activities'/>
        <link text='Log Call'/>
        <form id='EditView'>
            <textfield name='name' set='{@User7980.subject}'/>
            <checkbox name='reminder_checked' assert='true'/>
            <browser assert='{@User7980.defaultreminder}'/>
            <checkbox name='reminder_checked' click='true'/>
            <button value='Save'/>
        </form>
        <div id='Calls_detailview_tabs'>
            <row index='3'>
                <cell index='4' assert=''/>
            </row>
        </div>
    </csv>
    <!--delete call-->
    <script file='{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml'/>
    <div id='globalLinksModule'>
        <link text='{@SugarInit7980.last_name}'/>
    </div>
    <link text='Advanced'/>
    <select name='reminder_time' set='{@User7980.defaultreminder2}'/>
    <button value='Save'/>
    <!--log back as admin-->
    <link text='Log Out'/>
    <script file='{@global.scriptsdir}/modules/lib/login.xml'/>
    <puts text="---User_7980:verify default reminder time works---Finished!"/>
</soda>
