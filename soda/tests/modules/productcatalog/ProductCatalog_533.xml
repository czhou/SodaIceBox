<soda>
    <puts text="---ProductCatalog_533.xml: Product Catalog Duplicate: Verify that procuct catalog can be duplicated in detail view.---Start!"/>
    <csv file="{@global.scriptsdir}/csvs/productcatalog/ProductCatalog_533.csv" var="catalog_record_533">
        <script file='{@global.scriptsdir}/modules/lib/ProductCatalog_Create_Lib.xml'/>
        <link text="Admin"/>
        <link text="Product Catalog"/>
        <button id="search_form_clear"/>
        <form id="search_form">
            <textfield id="name_basic" set="{@pre_ProductCatalog_name}"/>
        </form>
        <button id="search_form_submit"/>

        <table class="list view">
            <link text="{@pre_ProductCatalog_name}"/>
        </table>

        <form name="DetailView">
            <button id="duplicate_button"/>
        </form>

        <form id="EditView">
            <textfield id="name" set="{@catalog_record_533.name_duplicate}" />
            <textfield id="mft_part_num" set="{@catalog_record_533.mft_part_num_duplicate}" />
            <textfield id="vendor_part_num" set="{@catalog_record_533.vendor_part_num_duplicate}" />
            <textfield id="qty_in_stock" set="{@catalog_record_533.qty_in_stock_duplicate}" />
            <button name="button" value="Save" />
        </form>

        <table id="detailpanel_1">
            <browser assert="{@catalog_record_533.name_duplicate}" />
            <browser assert="{@catalog_record_533.mft_part_num_duplicate}" />
            <browser assert="{@catalog_record_533.vendor_part_num_duplicate}" />
            <browser assert="{@catalog_record_533.qty_in_stock_duplicate}" />
            <browser assert="{@ProductCategory_Create_Lib}" />
            <browser assert="{@ProductCatalog_Create_Lib.status}" />
        </table>
    </csv>

    <!--Run Delete XML-->
    <script file='{@global.scriptsdir}/modules/lib/ProductType_Delete_Lib.xml'/>
    <script file='{@global.scriptsdir}/modules/lib/Manufacturer_Delete_Lib.xml'/>
    <script file='{@global.scriptsdir}/modules/lib/ProductCategory_Delete_Lib.xml'/>
    <script file='{@global.scriptsdir}/modules/lib/ProductCatalog_Delete_Lib.xml'/>
    <!-- [03/10/2010 Based on today's implementation, the following two statements
         are not needed.  But if ProductCatalog_Delete_Lib.xml is changed in the
         future, they may be needed.  It is no harm to include them here. -->
    <var var="pre_ProductCatalog_name" set="catalog_record_533.name_duplicate}" />
    <script file='{@global.scriptsdir}/modules/lib/ProductCatalog_Delete_Lib.xml'/>
    <puts text="---ProductCatalog_533.xml---Finished!"/>
</soda>
