
<soda>
	<!--
		Edit meeting_Verify that a related meeting can be closed from contact detail view
	-->
	<puts text="Test: Contacts_4413.xml starting." />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml"/>

	<!-- *1* Go to Contact module -->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>

	<!-- *2* Go to created record detail view-->
	<form id="search_form">
		<button name="clear" />
		<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>

	<!-- *3* Go to Activities subpanel and try to create meeting-->
	<csv file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.csv" var="Contact_4413">
		<div id="list_subpanel_activities">
			<button id="Activities_schedulemeeting_button" />
		</div>
		<div class="moduleTitle">
			<link href="index.php?module=Contacts&amp;action=index" click="false" />
			<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
		</div>
		<textfield id="name" set="{@Contact_4413.name}_{@user.name}_{@stamp}" />
		<textfield id="location" set="{@Contact_4413.location}" />
		<textfield id="description" set="{@Contact_4413.description}" />
		<select id="status" set="{@Contact_4413.status}" />
		<textfield id="date_start_date" set="{@Contact_4413.date_start_date}" />
		<select id="date_start_hours" set="{@Contact_4413.date_start_hours}" />
		<select id="date_start_minutes" set="{@Contact_4413.date_start_minutes}" />
		<textfield name="duration_hours" set="{@Contact_4413.duration_hours}" />
		<select name="duration_minutes" set="{@Contact_4413.duration_minutes}" />
		<checkbox name="reminder_checked" set="{@Contact_4413.reminder_checked}" />


		<button id="Meetings_subpanel_save_button" />

	</csv>
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Contact_4413.name}_{@user.name}_{@stamp}" click="false" />
			<browser assert="{@Contact_4413.status}" />
		</table>
	</div>

	<!-- *4*- Close the created meeting-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<row class="oddListRowS1">
				<link index="2" click="true" alert="true"/>
			</row>
		</table>
	</div>
	<div id="closeActivityDialog">
		<button class="default"  text="OK" click="true"/>
		<wait timeout="3" />
	</div>

	<!--wait page refresh-->
	<browser action="refresh"/>

	<!--Verify close action works-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Contact_4413.name}_{@user.name}_{@stamp}" click="false" exists="false"/>
			<browser assertnot="Held"/>
		</table>
	</div>
	<div id="list_subpanel_history">
		<table class="list view">
			<link text="{@Contact_4413.name}_{@user.name}_{@stamp}" click="false" exists="true"/>
			<browser assert="Held"/>
		</table>
	</div>

	<!--Clean actions-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_lib.xml" />

	<puts text="Test: Contacts_4413.xml finished." />
</soda>
