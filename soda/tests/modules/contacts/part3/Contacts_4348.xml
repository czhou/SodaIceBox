<soda>
	<!--
		Create note or attachment_Verify that a related note or attachment can be
		created from contact detail view
	-->
	<puts text="Test: Contacts_4348.xml starting." />

	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_lib_FULL.xml" />

	<!-- *1* Go to contact module -->
	<link id="moduleTab_Contacts" />
	<wait timeout="3" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>

	<!-- *2* Go to created contact detail view-->
	<form id="search_form">
		<button name="clear" />
		<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
		<button id="search_form_submit" />
	</form>
	<wait timeout="3" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<wait timeout="3" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>

	<!-- *3* Create note for this created contact record-->
	<csv file="{@global.scriptsdir}/csvs/Contacts/Contacts_4348.csv" var="Contacts_4348">
		<button id="History_createnoteorattachment_button"/>
		<wait timeout="3" />
		<div class="moduleTitle">
			<link href="index.php?module=Contacts&amp;action=index" click="false" />
			<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
		</div>

		<form id="form_SubpanelQuickCreate_Notes">
			<textfield id="name" set="{@Contacts_4348.subject}" />
			<textfield id="description" set="{@Contacts_4348.description}" />
		</form>

		<button id="Notes_subpanel_save_button" />

	</csv>
	<wait timeout="15" />
	<!--Expect results-->
	<!--Created note be saved rightly-->
	<div id="list_subpanel_history">
		<row class="oddListRowS1">
			<cell index="3">
				<browser assert="{@Contacts_4348.status}" />
			</cell>
		</row>
	</div>

	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_lib.xml" />

	<puts text="Test: Contacts_4348.xml finished." />
</soda>
