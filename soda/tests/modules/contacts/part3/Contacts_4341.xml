
<soda>
	<!--
		Schedule meeting_Verify that a related meeting can be scheduled from contact detail
		view.
	-->
	<puts text="Test: Contacts_4341.xml starting." />

	<!--Create contact record & task subpanel-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>

	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />

	<!--goto Activities subpanel & click "Schedule Meeting"-->
	<button id="Activities_schedulemeeting_button" />
	<wait timeout="3" />
	<button id="Meetings_subpanel_full_form_button" />
	<div class="moduleTitle">
		<link href="index.php?module=Meetings&amp;action=index" click="false" />
	</div>
	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1471.csv" var="contact_record_4341">
		<textfield id="name" set="{@contact_record_4341.name} {@user.name} {@stamp}" />
		<textfield id="description" set="{@contact_record_4341.description}" />

		<!--Start Date-->
		<textfield id="date_start_date" set="{@contact_record_4341.date_start_date}" />
		<select id="date_start_hours" set="{@contact_record_4341.date_start_hours}" />
		<select id="date_start_minutes" set="{@contact_record_4341.date_start_minutes}" />

		<!-- Search invitiees -->
		<div class="schedulerInvitees">
			<button value="Search" />
		</div>
		<wait timeout="3" />
		
		<div id="list_div_win">
			<button value="Add" />
		</div>
		<wait timeout="3" />
		
		<button value="Save" />
		<wait timeout="5" />

		<!--Verify the task record created in subpanel-->
		<div id="list_subpanel_activities">
			<table class="list view">
				<link text="{@contact_record_4341.name} {@user.name} {@stamp}" exist="true" click="false" />
			</table>
		</div>
	</csv>
	<div id="list_subpanel_activities">
		<table class="list view">
			<link class="listViewTdToolsS1" text="/rem/" alert="true" />
			<wait timeout="3" />
		</table>
	</div>

	<!--Verify remove action works-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@contact_record_4341.name} {@user.name} {@stamp}" exist="false" click="false" />
		</table>
	</div>

	<!--Delete contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<puts text="Test: Contacts_4341.xml finished." />
</soda>
