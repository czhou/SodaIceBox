<soda>
	<!--
		Edit lead_Verify that a related lead can be edited from contact detail view.
	-->
	<puts text="Test: Contacts_1490.xml starting." />
	<timestamp />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<!--Create Lead via subpanel-->
	<div id="list_subpanel_leads">
		<button id="contact_leads_create_button" />
	</div>

	<form id="form_SubpanelQuickCreate_Leads">
		<button id="Leads_subpanel_full_form_button" />
	</form>

	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1490.csv" var="contact_note_1490" />
	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<link id="tab1" />
	<select id="lead_source" set="{@contact_note_1490.lead_source}" />
	<select id="status" set="{@contact_note_1490.status}" />
	<link id="tab0" />
	<select id="salutation" set="{@contact_note_1490.salutation}" />
	<textfield name="first_name" clear="true"
		set="{@contact_note_1490.first_name} {@user.name} {@stamp}" />
	<textfield id="last_name" clear="true" set="{@contact_note_1490.last_name}" />
	<textfield id="title" set="{@contact_note_1490.title}" />
	<textfield id="phone_work" clear="true" set="{@contact_note_1490.phone_work}" />
	<textfield id="phone_mobile" set="{@contact_note_1490.phone_mobile}" />
	<textfield id="phone_fax" set="{@contact_note_1490.phone_fax}" />
	<textfield id="department" set="{@contact_note_1490.department}" />

	<textfield id="primary_address_street" set="{@contact_note_1490.primary_address_street}" />
	<textfield id="primary_address_street" set="{@contact_note_1490.primary_address_street}" />
	<textfield id="primary_address_city" set="{@contact_note_1490.primary_address_city}" />
	<textfield id="primary_address_state" set="{@contact_note_1490.primary_address_state}" />
	<textfield id="primary_address_postalcode" set="{@contact_note_1490.primary_address_postalcode}" />
	<textfield id="primary_address_country" set="{@contact_note_1490.primary_address_country}" />

	<textfield id="description" set="{@contact_note_1490.description}" />

	<button id="SAVE" />
	<wait timeout="3" />

	<!-- Verify creation of Lead via subpanel -->
	<div id="list_subpanel_leads">
	  <table class="list view">
		<link
			text="{@contact_note_1490.salutation} {@contact_note_1490.first_name} {@user.name} {@stamp} {@contact_note_1490.last_name}"
			click="false" />
	  </table>
	</div>

	<!-- Edit lead in subpanel via "edit" -->
	<div id="list_subpanel_leads">
		<link class="listViewTdToolsS1" text="edit" />
	</div>

	<div class="moduleTitle">
		<link href="{@global.url}/index.php?module=Leads&amp;action=index" click="false" />
		<browser
			assert="{@contact_note_1490.salutation} {@contact_note_1490.first_name} {@user.name} {@stamp} {@contact_note_1490.last_name}" />
	</div>

	<textfield name="first_name" clear="true"
		set="{@contact_note_1490.new_first} {@user.name}" />
	<textfield id="last_name" clear="true" set="{@contact_note_1490.new_last}" />
	<textfield id="description" clear="true" set="{@contact_note_1490.new_description}" />

	<button value="Save" />
	<wait timeout="3" />
	<!-- Verify edit -->
	<div id="list_subpanel_leads">
		<link
			text="{@contact_note_1490.salutation} {@contact_note_1490.new_first} {@user.name} {@contact_note_1490.new_last}"
			click="false" />
	</div>


	<!--Delete records-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Contacts_1490.xml finished." />
</soda>
