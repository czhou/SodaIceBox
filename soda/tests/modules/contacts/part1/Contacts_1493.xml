
<soda>
	<!--
		Select opportunities_Verify that the a related opportunity can be selected into a contact from contact detail view.
	-->
	<puts text="Test: Contacts_1493.xml starting." />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!-- Create an Opportunity -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<!--Select Opp via subpanel-->
	<div id="list_subpanel_opportunities">
		<button name="opportunities_contacts_select_button" />
	</div>
	<textfield id="name_advanced" set="{@pre_opp_name}"/>
	<form id="popup_query_form">
		<button value="Clear"/>
		<button value="Search"/>
	</form>
	<link text="{@pre_opp_name}"/>

	<!--Verify selected Opp show in subpanel-->
	<div id="list_subpanel_opportunities">
		<link text="{@pre_opp_name}" click="false"  exist="true"/>
		<browser assert="{@pre_opp_name}"/>
	</div>

	<!--Delete records-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Contacts_1493.xml finished." />
</soda>
