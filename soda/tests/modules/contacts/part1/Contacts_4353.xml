<soda>
	<!--
		Delete archive email_Verify that a related archived email can be deleted from contact detail view
	-->
	<puts text="Test: Contacts_4353.xml starting." />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Archive a new email from History subpanel and fill all mandatoy field-->
	<button id="ArchiveEmail_button"/>

	<textfield id="parent_name" assert="{@pre_contact_first_name} {@pre_contact_last_name}"/>
	<select id="parent_type" assert="Contacts"/>
	<image id="jscal_trigger" click="true"/>
	<link id="callnav_today"/>
	<link text="Close" class="container-close"/>
	<textfield name="time_start" set="12:00"/>
	<timestamp/>
	<textfield name="name" set="contacts_4353_archive_email_{@stamp}"/>
	
	<!--Save-->
	<button id="SAVE_HEADER"/>

	<!--Verify the in the History subpanel of contact-->
	<div id="list_subpanel_history">
		<browser assert="contacts_4353_archive_email_{@stamp}"/>
		<browser assert="Archived"/>
	</div>
	
	<!--Delete the archived email link-->
	<div id="list_subpanel_history">
		<link class="listViewTdToolsS1" index="2" alert="true"/>
	</div>
	<!--Verify the in the History subpanel of contact-->
	<div id="list_subpanel_history">
		<browser assertnot="contacts_4353_archive_email_{@stamp}"/>
		<browser assertnot="Archived"/>
	</div>

	<!--Delete records-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Contacts_4353.xml finished." />
</soda>
