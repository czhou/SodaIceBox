<soda>
	<!--Delete meeting_Verify that a related meeting can be deleted from contact list view-->
	<puts text="Test: Contacts_7887.xml starting." />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<link href="index.php?module=Contacts&amp;action=index" click="false" />
	<link id="basic_search_link" required="false" timeout="2"/>
	<textfield id="search_name_basic" set="{@pre_contact_first_name} {@pre_contact_last_name}" />
	<button id="search_form_submit" />

	<!--Go its detail view and use full form to create a new meeting -->
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<button id="Activities_schedulemeeting_button"/>
	<button id="Meetings_subpanel_full_form_button"/>
	<csv file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.csv" var="Contacts_7887_Meeting">
		<textfield id="name" set="{@Contacts_7887_Meeting.name} {@user.name} {@stamp}" />
		<textfield id="location" set="{@Contacts_7887_Meeting.location}" />
		<textfield id="description" set="{@Contacts_7887_Meeting.description}" />
		<select id="status" set="{@Contacts_7887_Meeting.status}" />
		<textfield id="date_start_date" set="{@Contacts_7887_Meeting.date_start_date}" />
		<select id="date_start_hours" set="{@Contacts_7887_Meeting.date_start_hours}" />
		<select id="date_start_minutes" set="{@Contacts_7887_Meeting.date_start_minutes}" />
		<textfield name="duration_hours" set="{@Contacts_7887_Meeting.duration_hours}" />
		<select name="duration_minutes" set="{@Contacts_7887_Meeting.duration_minutes}" />
		<checkbox name="reminder_checked" set="{@Contacts_7887_Meeting.reminder_checked}" />

		<button value="Save" />
		<wait timeout="3" />
	</csv>
	
	<!--Delete meeting from Activities subpanel-->
	<div id="list_subpanel_activities">
		<link class="listViewTdToolsS1" text="/rem/" alert="true"/>
	</div>

	<wait timeout="3"/>
	<div id="list_subpanel_activities">
		<browser assertnot="{@Contacts_7887_Meeting.name} {@user.name} {@stamp}" />
		<browser assertnot="{@Contacts_7887_Meeting.status}"/>
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" click="false" exists="false"/>
	</div>

	<!--Clean actions-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<puts text="Test: Contacts_7887.xml finished." />

</soda>
