<soda>
	<!--
		Edit contact_Verify that editing a contact from detail view can be canceled.
	-->
	<puts text="Test: Contacts_1455.xml starting." />
	<timestamp />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />

	<!--Go its detail view $ "Edit"-->
	<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	<button id="edit_button" />
	
	<!-- load csv -->
	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1449.csv" var="contact_record_1455">
		<!--user select-->
		<link id="tab2" />
		<button id="btn_assigned_user_name" />
		<!-- new window -->
		<attach title="SugarCRM">
		  <browser assert="User Search" />
		  <textfield id="last_name_advanced" set="{@contact_record_1455.assigned_user_name}" />
		  <button id="search_form_submit" />
		  <link text="{@contact_record_1455.assigned_user_name}" />
		</attach>

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<!-- new window -->
		<attach title="SugarCRM">
		  <browser assert="Team Search" />
		  <textfield name="name" set="{@contact_record_1455.team_name}" />
		  <button value="Search" />
		  <link text="{@contact_record_1455.team_name}" />
		</attach>

		<!--fill the fields and "Cancel"-->
		<link id="tab0" />
		<form id="EditView">
			<textfield name="first_name" clear="true"
				set="{@contact_record_1455.first_name} {@user.name} {@stamp}" />
			<textfield id="last_name" clear="true" set="{@contact_record_1455.last_name}" />
			<textfield id="title" clear="true" set="{@contact_record_1455.title}" />
			<textfield id="phone_work" clear="true" set="{@contact_record_1455.phone_work}" />
			<textfield id="phone_mobile" clear="true" set="{@contact_record_1455.phone_mobile}" />
			<textfield id="phone_fax" clear="true" set="{@contact_record_1455.phone_fax}" />
			<textfield id="Contacts0emailAddress0" clear="true" set="{@contact_record_1455.emailAddress0}" />
			<textfield id="description" clear="true" set="{@contact_record_1455.description}" />
			<!-- more information -->
			<link id="tab1" />
			<select id="lead_source" clear="true" set="{@contact_record_1455.lead_source}" />
			<checkbox id="do_not_call" clear="true" set="{@contact_record_1455.do_not_call}" />
			<checkbox id="sync_contact" clear="true" set="{@contact_record_1455.sync_contact}" />
			<!-- contact overview -->
			<link id="tab0" />
			<textfield id="primary_address_street" clear="true" set="{@contact_record_1455.primary_address_street}" />
			<textfield id="primary_address_city" clear="true" set="{@contact_record_1455.primary_address_city}" />
			<textfield id="primary_address_state" clear="true" set="{@contact_record_1455.primary_address_state}" />
			<textfield id="primary_address_postalcode" clear="true" set="{@contact_record_1455.primary_address_postalcode}" />
			<textfield id="primary_address_country" clear="true" set="{@contact_record_1455.primary_address_country}" />

			<textfield id="alt_address_street" clear="true" set="{@contact_record_1455.alt_address_street}" />
			<textfield id="alt_address_city" clear="true" set="{@contact_record_1455.alt_address_city}" />
			<textfield id="alt_address_state" clear="true" set="{@contact_record_1455.alt_address_state}" />
			<textfield id="alt_address_postalcode" clear="true" set="{@contact_record_1455.alt_address_postalcode}" />
			<textfield id="alt_address_country" clear="true" set="{@contact_record_1455.alt_address_country}" />
			<button id="CANCEL_FOOTER" alert="true" />
		</form>
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />

	</csv>

	<!--Delete contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Contacts_1455.xml finished." />
</soda>
