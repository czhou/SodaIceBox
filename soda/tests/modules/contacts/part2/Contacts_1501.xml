
<soda>
	<!--
		Edit case_Verify that related case can be edited from contact detail view
	-->
	<puts text="Test: Contacts_1501.xml starting." />

	<!--Create prepared record-->
	<script file='{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml'/>
	<script file='{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml'/>

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<wait timeout="2"/>

	<!--Select case via case subpanel-->
	<button id="contacts_cases_select_button"/>
	<textfield id="name_advanced" set="{@pre_case_name}"/>
	<button value="Search"/>
	<link text="{@pre_case_name}"/>

	<!--Verify selected case show in subpanel-->
	<div id="list_subpanel_cases">
		<link text="{@pre_case_name}" click="false"  exist="true"/>
		<browser assert="{@pre_case_name}"/>
	</div>

	<!--Edit related case-->
	<div id="list_subpanel_cases">
		<link class="listViewTdToolsS1" text="/edit/" alert="true"/>
	</div>

	<wait timeout="2"/>
	<!--Update related works-->
	<timestamp/>
	<link text="{@pre_case_name}" click="false" exist="true"/>
	<browser assert="Edit"/>
	<textfield id="name" set="{@pre_case_name}_{@stamp}"/>
	<button id="SAVE_HEADER"/>

	<!--Verify updating works-->
	<div id="list_subpanel_cases">
		<link text="{@pre_case_name}_{@stamp}" click="false" exist="true"/>
		<browser assert="{@pre_case_name}_{@stamp}"/>
	</div>

	<!--Delete records-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Contacts_1501.xml finished." />
</soda>
