<soda>
	<puts text="Test: Opportunity_2329.xml starting." />

	<!-- Ensure that cancelling a Meeting creation in Oppps subpanel does not cause 
		a meeting to be created unexpectedly. -->

	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2329.csv" var="Opportunity_2329">

		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>

		<table id="detailpanel_1">
			<browser assert="{@pre_opp_name}" />
		</table>
		
		<div id="list_subpanel_activities">
			<table class="list view">
				<button value="  Schedule Meeting  " />
			</table>
		</div>
		<!--teams select -->

		<wait timeout="10" condition="true">
   			<button name="teamSelect" />
		</wait>
		<div id="Default_Calls_Subpanel">
			<button name="teamSelect" />
		</div>
		
		<browser assert="Team Search" />
		<textfield name="name" set="{@Opportunity_2329.team_name}" />
		<button value="Search" />
		<link text="{@Opportunity_2329.team_name}" />


		<textfield id="name"
			set="{@Opportunity_2329.meeting_name} {@user.name} {@stamp}" />
		<textfield id="location" set="{@Opportunity_2329.meeting_location}" />
		<textfield id="description" set="{@Opportunity_2329.meeting_description}" />
		<select id="status" set="{@Opportunity_2329.meeting_status}" />

		<textfield id="date_start_date" set="{@Opportunity_2329.meeting_date_start_date}" />
		<select id="date_start_hours" set="{@Opportunity_2329.meeting_date_start_hours}" />
		<select id="date_start_minutes" set="{@Opportunity_2329.meeting_date_start_minutes}" />
		<!--select id="date_start_meridiem" set="{@Opportunity_2329.meeting_date_start_meridiem}"/ -->

		<textfield name="duration_hours" set="{@Opportunity_2329.meeting_duration_hours}" />
		<select name="duration_minutes" set="{@Opportunity_2329.meeting_duration_minutes}" />
		<checkbox name="reminder_checked" set="{@Opportunity_2329.meeting_reminder_checked}" />
		<button id="Meetings_subpanel_cancel_button" alert="true" />

		<wait />
		<div id="list_subpanel_activities">
			<table class="list view">
				<browser assertnot="{@Opportunity_2329.meeting_name} {@user.name} {@stamp}" />
			</table>
		</div>

	</csv>
	<!--Run Delete XML -->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<puts text="Test: Opportunity_2329.xml finished." />
</soda>
