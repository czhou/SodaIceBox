<soda>
	<puts text="Test: Opportunity_2328.xml starting." />
	<!-- Test to save a meeting in the Opportunity / Meeting subpanel -->

	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2328.csv" var="Opportunity_2328">

		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />
		<wait timeout="10" condition="true">
   			<link text="{@Opportunity_2328.name} {@user.name} {@stamp}" />
		</wait>
		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>

		<table id="detailpanel_1">
			<browser assert="{@pre_opp_name}" />
		</table>
		
		<div id="list_subpanel_activities">
			<table class="list view">
				<button value="  Schedule Meeting  " />
			</table>
		</div>
		<!--teams select -->
		<table id="form_SubpanelQuickCreate_Meetings_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Opportunity_2328.team_name}" />
		<button value="Search" />
		<link text="{@Opportunity_2328.team_name}" />

		<textfield id="name"
			set="{@Opportunity_2328.meeting_name} {@user.name} {@stamp}" />
		<textfield id="location" set="{@Opportunity_2328.meeting_location}" />
		<textfield id="description" set="{@Opportunity_2328.meeting_description}" />
		<select id="status" set="{@Opportunity_2328.meeting_status}" />

		<textfield id="date_start_date" set="{@Opportunity_2328.meeting_date_start_date}" />
		<select id="date_start_hours" set="{@Opportunity_2328.meeting_date_start_hours}" />
		<select id="date_start_minutes" set="{@Opportunity_2328.meeting_date_start_minutes}" />
		<!--select id="date_start_meridiem" set="{@Opportunity_2328.meeting_date_start_meridiem}"/ -->

		<textfield name="duration_hours" set="{@Opportunity_2328.meeting_duration_hours}" />
		<select name="duration_minutes" set="{@Opportunity_2328.meeting_duration_minutes}" />
		<checkbox name="reminder_checked" set="{@Opportunity_2328.meeting_reminder_checked}" />
		<button id="Meetings_subpanel_save_button" />

		<wait />
		<div id="list_subpanel_activities">
			<table class="list view">
				<browser assert="{@Opportunity_2328.meeting_name} {@user.name} {@stamp}" />
			</table>
		</div>

	</csv>
	<!--Run Delete XML -->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<puts text="Test: Opportunity_2328.xml finished." />
</soda>
