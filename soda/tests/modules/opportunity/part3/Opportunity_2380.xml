	<puts text="Test: Opportunity_2380.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2380.csv" var="Opportunity_2380">
		<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />
		<timestamp />
		<link id="moduleTab_Opportunities" />
		<link text="Create Opportunity" />

		<textfield id="name" set="{@Opportunity_2380.name} {@user.name} {@stamp}" />
		<textfield id="amount" set="{@Opportunity_2380.amount}" />
		<textfield id="probability" set="{@Opportunity_2380.probability}" />
		<textfield id="date_closed" set="{@Opportunity_2380.date_closed}" />
		<textfield id="next_step" set="{@Opportunity_2380.next_step}" />
		<textfield id="description" set="{@Opportunity_2380.description}" />
		<select id="opportunity_type" set="{@Opportunity_2380.opportunity_type}" />
		<select id="lead_source" set="{@Opportunity_2380.lead_source}" />
		<select name="currency_id" set="{@Opportunity_2380.currency_id}" />
		<select id="sales_stage" set="{@Opportunity_2380.sales_stage}" />

		<!--Account Select-->
		<button id="btn_account_name" />
		<browser assert="Account Search" />
		<textfield id="name_advanced" set="{@pre_account_name}" />
		<button value="Search" />
		<link text="{@pre_account_name}" />

		<!--Select Campaign record-->
		<button id="btn_campaign_name" />
		<browser assert="Campaign Search" />
		<textfield id="name_advanced" set="{@Campaign_Name}" />
		<button value="Search" />
		<link text="{@Campaign_Name}" />

		<button value="Save" />

		<browser assert="{@Opportunity_2380.name} {@user.name} {@stamp}" />
		<browser assert="{@Opportunity_2380.amount}" />

	</csv>
	<!--Run Delete XML-->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<puts text="Test: Opportunity_2380.xml finished" />
</soda>
