<soda>
	<puts text="Test Case 11511: Verify file header is detected correctly when import  file with head row."/>

	<link id="moduleTab_Contacts" />

	<link text="Import Contacts" />

	<!--Step1-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 1: Select Data Source" />
	</div>
	<button id="gonext"/>

	<!--Step2-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 2: Upload Import File" />
	</div>

	<filefield name="userfile" set="{@global.scriptsdir}/csvs/imports/Imports_11509.csv" />
	<button id="gonext" />
	<wait timeout="5" />

	<!--Step3-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 3: Confirm Import File Properties" />
	</div>
	
	<div id="confirm_table">
		<browser assert="first_name" />
	</div>
	
	

	<button id="toggleImportOptions" />
	<checkbox id="has_header" assert="true" />
	
	<button id="gonext" />

	<!--Step4-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 4: Confirm Field Mappings" />
	</div>
	<button id="gonext" />
	<wait timeout="5"/>
	
	<!--Step5-->
	<button id="importnow" />
	<wait timeout="10" />

	<!--Step6-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 6: View Import Results" />
	</div>

	<!--Search the record to assert import successfully -->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	
	<!--Search the record to assert import successfully -->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<csv file="{@global.scriptsdir}/export/Imports_11511.csv" var="import_11511">
		<textfield id="search_name_basic" set="{@import_11511.first_name}" />
		<button id="search_form_submit" />
		<table class="list view">
			<link text="{@import_11511.first_name} {@import_11511.last_name}" />
		</table>
	</csv>
	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Imports_11511.xml finished." />
</soda>
