
<soda>
	<puts text="Test Case 11509: Verify file head row is detected correctly when import no-head-row file."/>

	<link id="moduleTab_Contacts" />

	<link text="Import Contacts" />

	<!--Step1-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 1: Select Data Source" />
	</div>
	<button id="gonext"/>

	<!--Step2-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 2: Upload Import File" />
	</div>

	<filefield name="userfile" set="{@global.scriptsdir}/csvs/imports/Imports_11509.csv" />
	<button id="gonext" />
	<wait timeout="5" />

	<!--Step3-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 3: Confirm Import File Properties" />
	</div>
	
	<div id="confirm_table">
		<browser assert="No Header Row Found" />
	</div>
	
	

	<button id="toggleImportOptions" />
	<checkbox id="has_header" assert="false" />
	
	<button id="gonext" />

	<!--Step4-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 4: Confirm Field Mappings" />
	</div>
	<select name="colnum_0" set="first_name"/>
	<select name="colnum_1" set="last_name"/>
	<button id="gonext" />
	
	<!--Step5-->
	<button id="importnow" />
	<wait timeout="10" />

	<!--Step6-->
	<div id="importWizardDialogTitle">
		<browser assert="Step 6: View Import Results" />
	</div>

	<!--Search the record to assert import successfully -->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	
	<button id="search_form_clear" />
	<div id="pageNumIW_0_div">
		<browser assert="(1 - 2 of 2)" />
	</div>
	
	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Imports_11509.xml finished." />
</soda>
