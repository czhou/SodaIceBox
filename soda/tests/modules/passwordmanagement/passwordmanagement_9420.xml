<soda>
	<puts text="Test: PM_9420 verify password section" />
	
	
	<csv file="{@global.scriptsdir}/modules/lib/SugarInit_Lib.csv" var="SugarInit" />
	
	<link text="Log Out" />
	<textfield id="user_name" set="{@SugarInit.last_name}" />
	<textfield id="user_password" set="{@SugarInit.pass}" />
	<button id="login_button" />
	<div id="welcome">
		<link text="{@SugarInit.last_name}" />
	</div>
	<browser assert="User Profile" />
	<link text="Password" />
	<div id="generate_password">
		<browser assert="Current Password" />
		<browser assert="New Password " />
		<browser assert="Confirm Password" />
	</div>
	<button value="Cancel" />
	<div id="user_detailview_tabs">
		<browser assert="{@SugarInit.last_name}" />
		<browser assertnot="Password" />
	</div>
	
	
	<!--Login back to Admin-->
	<link text="Log Out" />
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />
	
	
	<puts text="Test: PM_9420.xml finished." />
</soda>
