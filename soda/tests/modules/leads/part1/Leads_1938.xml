<soda>
	<!-- Schedule Call_Verify that call with "Planned" status can be scheduled for a 
		lead in "Activities" sub-panel -->
	<puts text="Test: Leads_1938.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--go to the leads -->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--create a call -->
	<div id="list_subpanel_activities">
		<table class="list view">
			<button value="  Log Call  " />
		</table>
	</div>
	<wait timeout="5" />
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_1938.csv" var="Lead_1938_Call">
		<textfield id="name" set="{@Lead_1938_Call.name}" />
		<textfield id="date_start_date" set="{@Lead_1938_Call.date_start_date}" />
		<select id="date_start_hours" set="{@Lead_1938_Call.date_start_hours}" />
		<select id="date_start_minutes" set="{@Lead_1938_Call.date_start_minutes}" />

		<textfield name="duration_hours" set="{@Lead_1938_Call.duration_hours}" />
		<select name="duration_minutes" set="{@Lead_1938_Call.duration_minutes}" />

		<select id="direction" set="{@Lead_1938_Call.direction}" />
		<select id="status" set="{@Lead_1938_Call.status}" />

		<checkbox name="reminder_checked" set="{@Lead_1938_Call.reminder_checked}" />
		<textfield id="description" set="{@Lead_1938_Call.description}" />

		<!--user select -->
		<button id="btn_assigned_user_name" />
		<wait timeout="3" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@Lead_1938_Call.assigned_user_name}" />
		<button value="Search" />
		<link text="{@Lead_1938_Call.assigned_user_name}" />

		<!--teams select -->
		<table id="form_SubpanelQuickCreate_Calls_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Lead_1938_Call.team_name}" />
		<button value="Search" />
		<link text="{@Lead_1938_Call.team_name}" />
		<button value="Save" />
	</csv>
	<wait timeout="6" />

	<!--verify the call record -->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Lead_1938_Call.name}" click="false" exist="true" />
			<browser assert="{@Lead_1938_Call.status}" />
		</table>
	</div>


	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_1938.xml finished" />
</soda>
