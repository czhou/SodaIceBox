
<soda>
	<!--
		Covert a new lead with moving related task to contact
	-->
	<puts text="Test: Leads_11504.xml starting" />

	<!--Create three records and save its counter-->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>

	<!--Select a lead record-->
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<browser assert="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--Create a task from subpanel-->
	<timestamp/>
	<button id="Activities_createtask_button"/>
	<form id="form_SubpanelQuickCreate_Tasks">
		<csv file="{@global.scriptsdir}/modules/lib/Task_Create_Lib.csv" var="lead_11504_task">
			<textfield id="name" set="{@lead_11504_task.name} {@user.name} {@stamp}" />
			<select id="priority" set="{@lead_11504_task.priority}" />
			<select id="status" set="{@lead_11504_task.status}" />
			<textfield id="description" set="{@lead_11504_task.description}" />

			<!--Due Date-->
			<textfield id="date_due_date" set="{@lead_11504_task.date_due_date}" />
			<select id="date_due_hours" set="{@lead_11504_task.date_due_hours}" />
			<select id="date_due_minutes" set="{@lead_11504_task.date_due_minutes}" />
			<checkbox id="date_due_flag" set="{@lead_11504_task.date_due_flag}" />

			<!--Start Date-->
			<textfield id="date_start_date" set="{@lead_11504_task.date_start_date}" />
			<select id="date_start_hours" set="{@lead_11504_task.date_start_hours}" />
			<select id="date_start_minutes" set="{@lead_11504_task.date_start_minutes}" />
			<checkbox id="date_start_flag" set="{@lead_11504_task.date_start_flag}" />

			<button value="Save" />
			<var var="lead_11504_task_name" set="{@lead_11504_task.name} {@user.name} {@stamp}" />
		</csv>
	</form>
	<wait timeout="3"/>
	<div id="list_subpanel_activities">
		<link text="{@lead_11504_task_name}" click="false" exists="true"/>
	</div>

	<!--Covnert lead-->
	<button name="convert" value="Convert Lead"/>
	<textfield id="Accountsname" set="Leads_11504_Account_{@stamp}"/>
	<select id="lead_conv_ac_op_sel" set="Contact"/>
	<button name="button" value="Save"/>

	<!--Go to newly create account detail view-->
	<link text="Leads_11504_Account_{@stamp}" click="false" exists="true"/>
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&action=index" click="false" />
	</div>

	<!--Check contact activities subpanel-->
	<div id="list_subpanel_activities">
		<link text="{@lead_11504_task_name}" click="false" exists="true"/>
	</div>

	<!--Verify convert lead without task record related-->
	<link id="moduleTab_Leads" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<browser assert="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<div id="list_subpanel_activities">
		<link text="{@lead_11504_task_name}" click="false" exists="false"/>
	</div>

	<!--Verify convert account without task record related-->
	<link id="moduleTab_Accounts" />
	<textfield id="name_basic" set="Leads_11504_Account_{@stamp}" />
	<button id="search_form_submit" />

	<!--Go to account detail view of the first record-->
	<link text="Leads_11504_Account_{@stamp}" />
	<div id="list_subpanel_activities">
		<link text="{@lead_11504_task_name}" click="false" exists="false"/>
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />
	<puts text="Test: Leads_11504.xml finished" />
</soda>
