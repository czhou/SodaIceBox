
<soda>
	<!--
		Covert a new lead with copying related task to account
	-->
	<puts text="Test: Leads_11541.xml starting" />

	<!--Goto admin system setting to update coversion selection as copying-->
	<link text="Admin"/>
	<link text="System Settings"/>
	<select name="lead_conv_activity_opt" set="Copy"/>
	<button name="save" />

	<!--Create three records and save its counter-->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>

	<!--Select a lead record-->
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<browser assert="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--Create a task from subpanel-->
	<timestamp/>
	<button id="Activities_createtask_button"/>
	<form id="form_SubpanelQuickCreate_Tasks">
		<csv file="{@global.scriptsdir}/modules/lib/Task_Create_Lib.csv" var="lead_11541_task">
			<textfield id="name" set="{@lead_11541_task.name} {@user.name} {@stamp}" />
			<select id="priority" set="{@lead_11541_task.priority}" />
			<select id="status" set="{@lead_11541_task.status}" />
			<textfield id="description" set="{@lead_11541_task.description}" />

			<!--Due Date-->
			<textfield id="date_due_date" set="{@lead_11541_task.date_due_date}" />
			<select id="date_due_hours" set="{@lead_11541_task.date_due_hours}" />
			<select id="date_due_minutes" set="{@lead_11541_task.date_due_minutes}" />
			<checkbox id="date_due_flag" set="{@lead_11541_task.date_due_flag}" />

			<!--Start Date-->
			<textfield id="date_start_date" set="{@lead_11541_task.date_start_date}" />
			<select id="date_start_hours" set="{@lead_11541_task.date_start_hours}" />
			<select id="date_start_minutes" set="{@lead_11541_task.date_start_minutes}" />
			<checkbox id="date_start_flag" set="{@lead_11541_task.date_start_flag}" />

			<button value="Save" />
			<var var="lead_11541_task_name" set="{@lead_11541_task.name} {@user.name} {@stamp}" />
		</csv>
	</form>
	<wait timeout="3"/>
	<div id="list_subpanel_activities">
		<link text="{@lead_11541_task_name}" click="false" exists="true"/>
	</div>

	<!--Covnert lead-->
	<button name="convert" value="Convert Lead"/>
	<textfield id="Accountsname" set="Leads_11541_Account_{@stamp}"/>
	<select id="lead_conv_ac_op_sel"  clear="true"/>
	<select id="lead_conv_ac_op_sel" set="Account"/>
	<button name="button" value="Save"/>

	<!--Go to newly create account detail view-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" click="false" exists="true"/>
	<link text="Leads_11541_Account_{@stamp}" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&action=index" click="false" />
	</div>

	<!--Check account activities subpanel-->
	<div id="list_subpanel_activities">
		<link text="{@lead_11541_task_name}" click="false" exists="true"/>
	</div>

	<!--Verify convert lead without task record related-->
	<link id="moduleTab_Leads" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<browser assert="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<div id="list_subpanel_activities">
		<link text="{@lead_11541_task_name}" click="false" exists="true"/>
	</div>

	<!--Verify convert contact without task record related-->
	<link id="moduleTab_Contacts" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to contact detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<div id="list_subpanel_activities">
		<link text="{@lead_11541_task_name}" click="false" exists="false"/>
	</div>

	<!--Set admin back to move default value-->
	<link text="Admin"/>
	<link text="System Settings"/>
	<select name="lead_conv_activity_opt" set="Move"/>
	<button name="save" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />
	<puts text="Test: Leads_11541.xml finished" />
</soda>
