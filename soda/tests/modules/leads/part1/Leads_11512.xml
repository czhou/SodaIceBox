
<soda>
	<!--
		Covert a new lead with moving related call to contact
	-->
	<puts text="Test: Leads_11512.xml starting" />

	<!--Create three records and save its counter-->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>

	<!--Select a lead record-->
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<browser assert="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--Create a call from subpanel-->
	<timestamp/>
	<button id="Activities_logcall_button"/>
	<form id="form_SubpanelQuickCreate_Calls">
		<csv file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.csv" var="lead_11512_call">
			<textfield id="name" set="{@lead_11512_call.name} {@user.name} {@stamp}" />

			<textfield id="date_start_date" set="{@lead_11512_call.date_start_date}" />
			<select id="date_start_hours" set="{@lead_11512_call.date_start_hours}" />
			<select id="date_start_minutes" set="{@lead_11512_call.date_start_minutes}" />

			<textfield name="duration_hours" set="{@lead_11512_call.duration_hours}" />
			<select name="duration_minutes" set="{@lead_11512_call.duration_minutes}" />

			<select id="direction" set="{@lead_11512_call.direction}" />
			<select id="status" set="{@lead_11512_call.status}" />

			<checkbox name="reminder_checked" set="{@lead_11512_call.reminder_checked}" />
			<textfield id="description" set="{@lead_11512_call.description}" />
			<button id="Calls_subpanel_save_button"/>

			<var var="lead_11512_call_name" set="{@lead_11512_call.name} {@user.name} {@stamp}"/>
		</csv>
	</form>
	<wait timeout="3"/>
	<div id="list_subpanel_activities">
		<link text="{@lead_11512_call_name}" click="false" exists="true"/>
	</div>

	<!--Covnert lead-->
	<button name="convert" value="Convert Lead"/>
	<textfield id="Accountsname" set="Leads_11512_Account_{@stamp}"/>
	<select id="lead_conv_ac_op_sel" set="Contact"/>
	<button name="button" value="Save"/>

	<!--Go to newly create contact detail view-->
	<link text="Leads_11512_Account_{@stamp}" click="false" exists="true"/>
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}"/>
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&action=index" click="false" />
	</div>
	<link text="Leads_11512_Account_{@stamp}" click="false" exists="true"/>

	<!--Check contact activities subpanel-->
	<div id="list_subpanel_activities">
		<link text="{@lead_11512_call_name}" click="false" exists="true"/>
	</div>

	<!--Verify convert lead without call record related-->
	<link id="moduleTab_Leads" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<browser assert="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<div id="list_subpanel_activities">
		<link text="{@lead_11512_call_name}" click="false" exists="false"/>
	</div>

	<!--Verify convert account without call record related-->
	<link id="moduleTab_Accounts" />
	<textfield id="name_basic" set="Leads_11512_Account_{@stamp}" />
	<button id="search_form_submit" />

	<!--Go to detail view of the first record-->
	<link text="Leads_11512_Account_{@stamp}" />
	<browser assert="Leads_11512_Account_{@stamp}" />
	<div id="list_subpanel_activities">
		<link text="{@lead_11512_call_name}" click="false" exists="false"/>
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<puts text="Test: Leads_11512.xml finished" />
</soda>
