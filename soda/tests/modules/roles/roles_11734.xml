<soda>
	<!-- set read only of address field -->
	<puts text="Test: Role_11734.xml starting." />
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib_FULL.xml" />
	<csv file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.csv" var="account_record" />
	<link text="Admin" />
	<link text="Role Management" />
	<script file="{@global.scriptsdir}/modules/lib/Role_Create_Lib.xml" />
	<link text="List Roles" />
	<textfield id="name_basic" set="{@pre_role_name}" />
	<button value="Search" />
	<table class="list view">
		<link text="{@pre_role_name}" />
	</table>
	<table class="detail view">
		<browser assert="{@pre_role_name}" />	
	</table>
	
	<!--Set read only of address field-->
	
	<table id="contentTable">
		<link text="Accounts" />
	</table>
	<form id="ACLEditView">
		<browser assert="Field Permissions" />
		<select id="flc_guidshipping_address" set="Read Only" />
		<select id="flc_guidbilling_address" set="Read Only" />
		<button value="Save" />
	</form>
	<csv file="{@global.scriptsdir}/modules/lib/SugarInit_Lib.csv" var="SugarInit11734" />
	<div id="list_subpanel_users">
		<button id="acl_roles_users_select_button" />
	</div>
	<browser assert="User Search" />
	<textfield id="last_name_advanced" set="{@SugarInit11734.last_name}" />
	<button value="Search" />
	<link text="{@SugarInit11734.last_name}" />
	<!--login in a normal user -->
	<link text="Log Out" />
	<textfield id="user_name" set="{@SugarInit11734.last_name}" />
	<textfield id="user_password" set="{@SugarInit11734.pass}" />
	<button id="login_button" />
		
	<link id="moduleTab_Accounts" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>
	<div id="Accounts_detailview_tabs">
		<browser assert="{@pre_account_name}" />
	</div>	
	<button id="edit_button" />
	<table class="edit view">
		<textfield id="billing_address_street" assert="disabled" />
		<textfield id="shipping_address_street" assert="disabled" />
		<tr index="3">
			<td index="2">
				<browser assert="{@account_record.billing_address_street}" />
			</td>
			<td index="4">
				<browser assert="{@account_record.shipping_address_street}" />
			</td>
		</tr>
	</table>
	<button id="CANCEL" alert="true" />
	
	<!--Login back to Admin-->
	<link text="Log Out" />
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />
	
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<!--delete role-->
	<script file="{@global.scriptsdir}/modules/lib/Role_Delete_Lib.xml" />
	
	<puts text="Test: Role_11734.xml finished." />
</soda>
