<soda>
	<!-- Create record-Select multiple teams and remove team -->
	<puts text="Test: Teams_9442.xml starting." />
	<timestamp />

	<!--Go to modules that can edit team info-->        
	<link id="moduleTab_Notes" />
	

	<!--Create record with multi teams-->
	<csv file="{@global.scriptsdir}/csvs/teams/Teams_9442.csv" var="teams_9442">
		<link text="Create Note or Attachment" />
		<browser assert="Notes" />
		<!--Teams select-->
		<table id="EditView_team_name_table">
			<image id="remove_team_name_collection_0" click="true" />
			<button value="Select" />
		</table>
		<browser assert="Team Search" />

		<table class="list view">	
			<checkbox name="massall" click="true" />				
		</table>
		<button value="  Select  " />

		<!--Remove teams--> 
		<table id="EditView_team_name_table">
			<image id="remove_team_name_collection_0" click="true" /> 
			<radio id="primary_team_name_collection" click="true" />            

		</table>
		<form id="EditView">
			<textfield id="name" set="{@teams_9442.subject} {@user.name} {@stamp}" />                            
		</form>
		<button value="Save" />
		<browser assert="{@teams_9442.subject} {@user.name} {@stamp}" />
		<browser assert="{@teams_9442.team0}, {@teams_9442.team1}" />           
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Note_delete_Lib.xml" />


	<puts text="Test: Teams_9442.xml finished." />
</soda>
