<soda>
   <!-- Verify the replace function of team id mass update(update more than one record) -->
   <puts text="Test: Teams_9408.xml starting." />

   <!-- Create two opportunities. -->
   <script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />
   <var var="opp1" set="{@pre_opp_name}" />
   <script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />
   <var var="opp2" set="{@pre_opp_name}" />  

   <!-- Go to modules that can mass update team info -->
   <link id="moduleTab_Opportunities" />
   <browser assert="Opportunities" />

   <csv file="{@global.scriptsdir}/csvs/teams/Teams_9408.csv" var="Teams_9408">
      <!-- Select record -->
      <form id="MassUpdate">
         <checkbox name="massall" click="true" />
      </form>

      <!-- Set teams info --> 
      <link id="actions_link" />
      <link text="Mass Update" />
      <table id="MassUpdate_team_name_table">
         <button value="Select" />
      </table> 

      <attach title="SugarCRM">
         <browser assert="Team Search" /> 
         <!-- Team search window -->   
         <table class="list view">  
            <checkbox name="massall" click="true" />           
         </table>
         <button value="  Select  " />
      </attach>      

      <!--radio name="primary_team_name_collection" set="{@Teams_9409.team0}"/-->
      <radio id="primary_team_name_collection_0" set="true" />

      <!-- Mass update -->
      <button value="Update" alert="true" />            

      <!-- Check teams info in detail view page -->
      <table class="list view">
         <link text="{@opp1}" />    
      </table>
      <browser assert="{@opp1}" />
      <browser assert="{@Teams_9408.team0}, {@Teams_9408.team1}, {@Teams_9408.team2}" />

      <link text="Opportunities" />

      <table class="list view">
         <link text="{@opp2}" />    
      </table>
      <browser assert="{@opp2}" />
      <browser assert="{@Teams_9408.team0}, {@Teams_9408.team1}, {@Teams_9408.team2}" />
   </csv>

   <!-- Delete record -->
   <script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
   <script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

   <puts text="Test: Teams_9408.xml finished." />
</soda>
