<soda>

	<!--
		Verify  module name in Quick Create form sync with updating module  name
	-->

	<puts text="Test: Admin_11597.xml starting" />

	<!--Go to Admin page-->
	<link text="Admin"/>

	<!--Go to Rename module name page-->
	<link text="Rename Modules"/>
	
	<!--Update one module singular name, such as "Leads"-->
	<span id="slot10b">
		<image index="1"/>
	</span>

	<!--Update string "Account" as "Acct" and save-->
	<textfield id="slot10_stext" set="LD"/>
	<textfield id="slot10_text" set="LDs"/>
	<table id="contentTable">
		<button name="Save" value="Save"/>
	</table>

	<!--Create a new contact and go to its detail view-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml"/>
	<div id="subpanel_title_leads">
		<span>
			<browser assert="LDS"/>
		</span>
	</div>
	<button id="contact_leads_create_button"/>
	<div id="LBL_CONTACT_INFORMATION">
		<table class="edit view">
			<tr index="1">
				<browser assert="LD Overview"/>
			</tr>
		</table>
	</div>
	<td id="lead_source_label" >
		<browser assert="LD Source"/>
	</td>
	<!--Cancel the creation-->
	<button id="Leads_subpanel_cancel_button" alert="true"/>

	<!--Set back to default module name-->
	<!--Go to Admin page-->
	<link text="Admin"/>

	<!--Go to Rename module name page-->
	<link text="Rename Modules"/>
	
	<!--Update one module singular name, such as "Leads"-->
	<span id="slot10b">
		<image index="1"/>
	</span>

	<!--Update string "LD" as "Lead" and "LDS" as "Leads" then save-->
	<textfield id="slot10_stext" set="Lead"/>
	<textfield id="slot10_text" set="Leads"/>
	<table id="contentTable">
		<button name="Save" value="Save"/>
	</table>

	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml"/>
	<puts text="Test: Admin_11597.xml finished" />
</soda>
