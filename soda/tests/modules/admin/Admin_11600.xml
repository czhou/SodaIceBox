
<soda>

	<!--
		Verify  account module name Account detail view and edit sync with updating module  name
	-->

	<puts text="Test: Admin_11600.xml starting" />

	<!-- Create a case. -->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />

	<!--Go to Admin page-->
	<link text="Admin"/>

	<!--Go to Rename module name page-->
	<link text="Rename Modules"/>
	
	<!--Update one module singular name, such as "Accounts"-->
	<span id="slot2b">
		<image index="1"/>
	</span>

	<!--Update string "Account" as "Acc" and save-->
	<textfield id="slot2_stext" set="Acc" />
	<textfield id="slot2_stext" jscriptevent="onchange" />
	<textfield id="slot2_text" set="Accs" />
	<textfield id="slot2_text" jscriptevent="onchange" />
	<table id="contentTable">
		<button name="Save" value="Save" />
	</table>

	<!-- Navigate to a Cases DetailView. -->
	<link id="moduleTab_Cases" />
	
	<table class="list view">
		<link text="{@pre_case_name}" />
	</table>
	
	<table id="detailpanel_1">
		<browser assert="Acc Name" />
	</table>

	<!--Goto case's edit view-->
	<button id="edit_button" />
	<td id="account_name_label">
		<browser assert="Acc Name" />
	</td>

	<!--Cancel the edit action-->
	<button id="CANCEL_HEADER" />

	<!--Set back to default module name-->
	<!--Go to Admin page-->
	<link text="Admin" />

	<!--Go to Rename module name page-->
	<link text="Rename Modules" />
	
	<!--Update one module singular name, such as "Accounts"-->
	<span id="slot2b">
		<image index="1" />
	</span>

	<!--Update string "Acc" as "Account" and "Accs" as "Accounts" then save-->
	<textfield id="slot2_stext" set="Account" />
	<textfield id="slot2_stext" jscriptevent="onchange" />
	<textfield id="slot2_text" set="Accounts" />
	<textfield id="slot2_text" jscriptevent="onchange" />
	<table id="contentTable">
		<button name="Save" value="Save" />
	</table>

	<!--Clean actions-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml"/>
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml"/>
	<puts text="Test: Admin_11600.xml finished" />
</soda>
