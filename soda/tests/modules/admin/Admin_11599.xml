
<soda>

	<!--
		Verify  module name in global search result sync with updating module  name
	-->

	<puts text="Test: Admin_11599.xml starting." />

	<!--Create a new contact -->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.xml" />

	<!--Go to Admin page-->
	<link text="Admin" />

	<!--Go to Rename module name page-->
	<link text="Rename Modules" />
	
	<!--Update one module singular name, such as "Meetings"-->
	<span id="slot8b">
		<image index="1" />
	</span>

	<!--Update string "Account" as "Acct" and save-->
	<textfield id="slot8_stext" set="Ming" />
	<textfield id="slot8_stext" jscriptevent="onchange" />
	<textfield id="slot8_text" set="Mings" />
	<textfield id="slot8_text" jscriptevent="onchange" />
	<table id="contentTable">
		<button name="Save" value="Save" />
	</table>

	<!--Do global search from top right-->
	<textfield id="sugar_spot_search" set="{@pre_meeting_name}" />
	<div id="glblSearchBtn">
		<link index="1" click="true" />
	</div>

	<!--Check the results-->
	<div id="SpotResults">
		<browser assert="Mings" />
	</div>
	<div id="dcboxbody">
		<button text="Show All" />
	</div>

	<!--Check the advanced enable module list-->
	<link text="Advanced" required="false" />
	<div id="enabled_div">
		<browser assert="Mings" />
	</div>
	<table id="contentTable">
		<table class="formHeader h3Row" index="7">
			<browser assert="Mings" />
		</table>
	</table>

	<!-- Set back to default module name -->
	<!-- Go to Admin page -->
	<link text="Admin" />

	<!-- Go to Rename module name page -->
	<link text="Rename Modules" />
	
	<!-- Update one module singular name, such as "Meetings" -->
	<span id="slot8b">
		<image index="1" click="true" />
	</span>

	<!-- Update string "Ming" as "Meeting" and "Mings" as "Meetings" then save -->
	<textfield id="slot8_stext" set="Meeting" />
	<textfield id="slot8_stext" jscriptevent="onchange" />
	<textfield id="slot8_text" set="Meetings" />
	<textfield id="slot8_text" jscriptevent="onchange" />
	<table id="contentTable">
		<button name="Save" value="Save" />
	</table>

	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />

	<puts text="Test: Admin_11599.xml finished." />
</soda>
