<soda>
	<!-- Merge Duplicates_Verify that "Assigned to" information is displayed as filled for creating them. -->
	<puts text="Test: Bug Tracker_3593.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	<timestamp />

	<!--Create two bug tracker records-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!--merge these two records-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<checkbox name="massall" set="true" />
	<link id="actions_link" />
	<link text="Merge" />

	<!--verify the assigned user field is not null-->
	<textfield id="assigned_user_link" assert="" exist="false" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />

	<puts text="Test: Bug Tracker_3593.xml finished." />
</soda>
