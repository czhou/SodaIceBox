<soda>
	<!-- Detail View: Verify that the edited records are displayed in the detail view. -->
	<puts text="Test: BugTracker_0633.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	<timestamp />

	<!--Create bug tracker record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!--Search the bug tracker record-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<textfield id="name_basic" set="{@pre_bug_name}" /> 
	<button id="search_form_submit" />

	<table class="list view">
		<link text="{@pre_bug_name}" />
	</table>
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />

	<!--Go its detail view $ "Edit"-->
	<button id="edit_button" />

	<csv file="{@global.scriptsdir}/csvs/bugtracker/Bug Tracker_0633.csv" var="bug_tracker_record_633">
		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@bug_tracker_record_633.assigned_user_name}" />
		<button value="Search" />
		<link text="{@bug_tracker_record_633.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@bug_tracker_record_633.team_name}" /> 
		<button value="Search" />
		<link text="{@bug_tracker_record_633.team_name}" />

		<!-- Fill the fields and "Save". -->
		<form id="EditView">
			<textfield name="name" set="{@bug_tracker_record_633.name} {@user.name} {@stamp}" />
			<select id="priority" set="{@bug_tracker_record_633.priority}" />
			<select id="source" set="{@bug_tracker_record_633.source}" />
			<select id="type" set="{@bug_tracker_record_633.type}" />
			<select id="product_category" set="{@bug_tracker_record_633.product_category}" />
			<textfield id="description" set="{@bug_tracker_record_633.description}" />
			<select id="status" set="{@bug_tracker_record_633.status}" />
			<select id="resolution" set="{@bug_tracker_record_633.resolution}" />
			<button value="Save" />
		</form>
	</csv>
	<browser assert="{@bug_tracker_record_633.name} {@user.name} {@stamp}" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />

	<puts text="Test: BugTracker_0633.xml starting." />
</soda>
