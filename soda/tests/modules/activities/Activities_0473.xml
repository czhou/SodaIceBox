<soda>
	<!--
		Mass Update Note_Verify that note can be modified by Mass Update function.
	-->
	<puts text="Test: Activities_0473.xml starting." />

	<!--create note record-->
	<script file="{@global.scriptsdir}/modules/lib/Note_Create_Lib.xml" />
	<var var="first_note" set="{@pre_note_name}" />
	<script file="{@global.scriptsdir}/modules/lib/Note_Create_Lib.xml" />
	<var var="second_note" set="{@pre_note_name}" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<link id="moduleTab_Activities" />
	<browser assert="Task List" />
	<link text="View Notes" />

	<button id="search_form_clear" />

	<checkbox name="massall" click="true" />
	<link id="actions_link" />
	<link text="Mass Update" />

	<select id="mass_parent_type" set="Account" />
	<button name="button_parent_name" />
	<browser assert="Account Search" />
	<textfield id="name_advanced" set="{@pre_account_name}" />
	<button value="Search" />
	<link text="{@pre_account_name}" />
	<wait timeout="1" />
	<button id="update_button" alert="true" />
	<wait timeout="3" />
	<!--first note record-->
	<link id="moduleTab_Activities" />
	<browser assert="Task List" />
	<link text="View Notes" />

	<textfield id="name_basic" set="{@first_note}" />
	<button id="search_form_submit" />
	<wait timeout="2" />
	<table class="list view">
		<link text="{@first_note}" />
	</table>
	<wait timeout="2" />
	<browser assert="{@pre_account_name}" />

	<!--create note record-->
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Activities_0473.xml finished." />
</soda>
