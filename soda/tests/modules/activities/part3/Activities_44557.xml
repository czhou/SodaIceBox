<soda>
	<!-- User who created a meeting is invited even if he is not in the invited 
		list -->
	<puts text="Test: Activities_44557.xml starting" />

	<link text="Log Out" />
	<browser assert="Please enter your user name and password" />

	<textfield id="user_name" set="{@SugarInit.last_name}" />
	<textfield id="user_password" set="{@SugarInit.password}" />
	<button id="login_button" />

	<!-- Create meeting with QAuser -->
	<timestamp />
	<link id="moduleTab_Meetings" />
	<link text="Schedule Meeting" />
	<csv file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.csv"
		var="meeting_record">
		<textfield id="name"
			set="{@meeting_record.name} {@SugarInit.last_name} {@stamp}" />
		<textfield id="location" set="{@meeting_record.location}" />
		<textfield id="description" set="{@meeting_record.description}" />
		<select id="status" set="{@meeting_record.status}" />
		<textfield id="date_start_date" set="{@meeting_record.date_start_date}" />
		<select id="date_start_hours" set="{@meeting_record.date_start_hours}" />
		<select id="date_start_minutes" set="{@meeting_record.date_start_minutes}" />
		<textfield name="duration_hours" set="{@meeting_record.duration_hours}" />
		<select name="duration_minutes" set="{@meeting_record.duration_minutes}" />
		<checkbox name="reminder_checked" set="{@meeting_record.reminder_checked}" />
		
		<!-- Remove self from invitee list -->
		<table id="schedulerTable">
			<link text="rem" />
		</table>
		
		<!-- Find more invitees -->
		<textfield name="search_last_name" set="Administrator" />
		<button value="Search" />
		<wait timeout="2" />
		<div id="list_div_win">
			<button value="Add" />
		</div>
		<wait timeout="1" />
		<button value="Send Invites" />
		<div id="list_subpanel_users" assertnot="{@SugarInit.last_name}" />
		<form name="DetailView">
			<hidden name="record" var="pre_meeting_id" />
		</form>
		<var var="pre_meeting_name" set="{@meeting_record.name} {@user.name} {@stamp}" />
	</csv>
	
	<!--Delete created Meeting -->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	
	<puts text="Test: Activities_44557.xml finished" />
</soda>