<soda>
	<!-- View Tasks -->
	<puts text="Test: Activities_0499.xml starting" />

	<!--Create a  contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />
	<timestamp />

	<link id="moduleTab_Activities" />
	<browser assert="Task List" />
	<link text="Create Task" />

	<csv file="{@global.scriptsdir}/modules/lib/Task_Create_Lib.csv" var="activitiy_record_0499">
		<textfield id="name" set="{@activitiy_record_0499.name} {@stamp}" />
		<select id="priority" set="{@activitiy_record_0499.priority}" />
		<select id="status" set="{@activitiy_record_0499.status}" />
		<textfield id="description" set="{@activitiy_record_0499.description}" />

		<!--Due Date-->
		<textfield id="date_due_date" set="{@activitiy_record_0499.date_due_date}" />
		<select id="date_due_hours" set="{@activitiy_record_0499.date_due_hours}" />
		<select id="date_due_minutes" set="{@activitiy_record_0499.date_due_minutes}" />
		<checkbox id="date_due_flag" set="{@activitiy_record_0499.date_due_flag}" />

		<!--Start Date-->
		<textfield id="date_start_date" set="{@activitiy_record_0499.date_start_date}" />
		<select id="date_start_hours" set="{@activitiy_record_0499.date_start_hours}" />
		<select id="date_start_minutes" set="{@activitiy_record_0499.date_start_minutes}" />
		<checkbox id="date_start_flag" set="{@activitiy_record_0499.date_start_flag}" />

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@activitiy_record_0499.assigned_user_name}" />
		<button value="Search" />
		<link text="{@activitiy_record_0499.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@activitiy_record_0499.team_name}" />
		<button value="Search" />
		<link text="{@activitiy_record_0499.team_name}" />

		<!--select contact-->
		<select id="parent_type" set="Contact" />
		<button id="btn_parent_name" />
		<browser assert="Contact Search" />
		<textfield id="first_name_advanced" set="{@pre_contact_first_name}" />
		<textfield id="last_name_advanced" set="{@pre_contact_last_name}" />
		<button value="Search" />
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />

		<button value="Save" />
	</csv>


	<!--Search the record-->
	<link id="moduleTab_Activities" />
	<browser assert="Task List" />
	<link text="View Tasks" />
	<wait timeout="3" />
	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@activitiy_record_0499.name} {@stamp}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@activitiy_record_0499.name} {@stamp}" click="false" />
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />




	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />
	<puts text="Test: Activities_0499.xml finished." />
</soda>
