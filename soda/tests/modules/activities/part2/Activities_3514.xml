<soda>
	<!-- Create Note_Verify that note is created for call/meeting from -->
	<puts text="Test: Activities_3514.xml starting." />

	<!--create call record-->
	<script file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.xml" csv="{@global.scriptsdir}/csvs/activities/Activities_3514.csv" />

	<link id="moduleTab_Notes" />
	<link text="Create Note or Attachment" />

	<csv file="{@global.scriptsdir}/modules/lib/Note_Create_Lib.csv" var="note_record_3514">
		<textfield id="name" set="{@note_record_3514.name}" />
		<textfield id="description" set="{@note_record_3514.description}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@note_record_3514.team_name}" />
		<button value="Search" />
		<link text="{@note_record_3514.team_name}" />

		<select id="parent_type" set="Call" />
		<button id="btn_parent_name" />
		<browser assert="Call Search" />
		<textfield id="name_advanced" set="{@pre_call_name}" />
		<button value="Search" />
		<link text="{@pre_call_name}" />
		<button value="Save" />
		<browser assert="{@note_record_3514.name}" />
	</csv>
	<link id="moduleTab_Calls" />
	<link text="View Calls" />

	<textfield id="name_basic" set="{@pre_call_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_call_name}" />
	</table>

	<div id="list_subpanel_history">
		<link text="{@note_record_3514.name}" click="false" />
	</div>

	<!-- Cleanup: Reset search form. -->
	<link id="moduleTab_Calls" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<!-- Cleanup: Delete test data. -->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />

	<puts text="Test: Activities_3514.xml finished." />
</soda>
