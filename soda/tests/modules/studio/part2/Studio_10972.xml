
<soda>
    
    <!-- translateLabel function test -->
    <puts text="Test: Studio_10972.xml starting" />
    <!-- set description field as calculated field and define formula -->
    <timestamp />
    <link text="Admin" />
    <link text="Studio" assertPage="false" />
    <link text="Accounts" class="studiolink" assertPage="false" />
    <link text="Fields" class="studiolink" assertPage="false" />
    <link text="description" class="mbLBLL" assertPage="false" />
    <checkbox id="calculated" set="true" />
    <wait timeout="1" />
    <button value="Edit Formula" />
    <wait timeout="3" />
    <browser assert="Formula Builder" />
    <div id="formulaBuilderWindow" >
      <textfield id="formulaInput" set="valueAt(number($phone_fax),enum($billing_address_city,$billing_address_state,$billing_address_country))"/>
      <button value="Save" />
    </div>
    <wait timeout="3" />
    <form id="popup_form_id" >
      <button name="fsavebtn" assertPage="false" />
    </form>
    <wait timeout="10" />
    <browser assert="Add Field" />
    <!--create account record and check calculated field-->
    <link id="moduleTab_Accounts" />
	      
     <csv file="{@global.scriptsdir}/csvs/studio/Studio_10972.csv" var="studio10972">
        <link text="Create Account" />
        <browser assert="Account Overview" />
        <form id="EditView">
        <textfield id="name" set="{@studio10972.name} {@user.name} {@stamp}" />
        <textfield id="phone_fax" set="{@studio10972.fax}" />
        <textfield id="phone_fax" click="false" jscriptevent="onchange" />
        <textfield id="billing_address_city" set="{@studio10972.city}" />
        <textfield id="billing_address_city" click="false" jscriptevent="onchange" />
        <textfield id="billing_address_state" set="{@studio10972.state}" />
        <textfield id="billing_address_state" click="false" jscriptevent="onchange" />
        <textfield id="billing_address_country" set="{@studio10972.country}" />
        <textfield id="billing_address_country" click="false" jscriptevent="onchange" />
        <textfield id="description" assert="{@studio10972.des}" />
        <button value="Save" />
      </form>
      <wait timeout="3" />
      <browser assert="{@studio10972.name} {@user.name} {@stamp}" />
      <table id="detailpanel_1">
        <span id="description" assert="{@studio10972.des}" />
      </table>
    </csv>
    
    <!-- Now uncalculated the field -->
    <link text="Admin" />
    <link text="Studio" assertPage="false" />
    <link text="Accounts" class="studiolink" assertPage="false" />
    <link text="Fields" class="studiolink" assertPage="false" />
    <link text="description" class="mbLBLL" assertPage="false" />
    <checkbox id="calculated" set="false" />
    <form id="popup_form_id" >
      <browser assertnot="Formula Builder" />
      <button name="fsavebtn" assertPage="false" />
    </form>
    <wait timeout="3" />
    
    <!-- Delete account record -->
    <script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
    
    <puts text="Test: Studio_10972.xml finished." />
</soda>
