<soda>
    
    <!-- auto updating calculated field that contain rollupMax function when related record changes -->
    <puts text="Test: Studio_10599.xml starting" />
        
     <!-- set description field as calculated field and define formula -->
    <timestamp />
    <link text="Admin" />
    <link text="Studio" assertPage="false" />
    <link text="Contacts" class="studiolink" assertPage="false" />
    <link text="Fields" class="studiolink" assertPage="false" />
    <link text="description" class="mbLBLL" assertPage="false" />
    <checkbox id="calculated" set="true" />
    <wait timeout="1" />
    <button value="Edit Formula" />
    <wait timeout="3" />
    <browser assert="Formula Builder" />
    <div id="formulaBuilderWindow" >
      <textfield id="formulaInput" set="rollupMax($meetings,&quot;duration_hours&quot;)"/>
      <button value="Save" />
    </div>
    <wait timeout="3" />
    <form id="popup_form_id" >
      <button name="fsavebtn" assertPage="false" />
    </form>
    <wait timeout="10" />
    <browser assert="Add Field" />
    
    <!--create account record and calls-->
    <script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib_MIN.xml" />       
    <csv file="{@global.scriptsdir}/csvs/studio/Studio_10599.csv" var="studio10599">
   		<script file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.xml" />
   		<button id="edit_button" />
   		<textfield name="duration_hours" set="{@studio10599.durhour1}" />
   		<select id="parent_type" set="Contact" />
   		<button id="btn_parent_name" />  	
		<browser assert="Contact Search" />
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}"/>
		<button value="Save" />
		<div id="LBL_MEETING_INFORMATION">
			<browser assert="{@pre_meeting_name}" />
			<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
    	</div>    	
    </csv>
    <link id="moduleTab_Contacts" />
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<div id ="LBL_CONTACT_INFORMATION">
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>
	<button id="edit_button" />
	<textfield id="description" assert="{@studio10599.max1}" />
	<button id="SAVE_HEADER" />
	<div id="LBL_CONTACT_INFORMATION">
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
    	<span id="description" assert="{@studio10599.max1}" />
  	</div>
    
    <!-- change the related field value -->    
	<link id='moduleTab_Meetings'/>
	<textfield id="name_basic" set="{@pre_meeting_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_meeting_name}" />
	</table>
	<div id="LBL_MEETING_INFORMATION">
		<browser assert="{@pre_meeting_name}" />
    </div>  
	<button id="edit_button" />
	<wait timeout="5" />
	<textfield name="duration_hours" set="{@studio10599.durhour2}" />
	<button value="Save" />
	<div id="LBL_MEETING_INFORMATION">
		<browser assert="{@pre_meeting_name}" />
		<browser assert="{@studio10599.durhour2}h" />
    </div>  
    	
	<!-- check the calculation result -->
	<link id="moduleTab_Contacts" />
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>
	<div id ="LBL_CONTACT_INFORMATION">
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>
	<button id="edit_button" />
	<textfield id="description" assert="{@studio10599.max2}" />
	<button id="SAVE_HEADER" />
	<table id="detailpanel_1">
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
    	<span id="description" assert="{@studio10599.max2}" />
  	</table>
    
    
    <!-- Now uncalculated the field -->
    <link text="Admin" />
    <link text="Studio" assertPage="false" />
    <link text="Contacts" class="studiolink" assertPage="false" />
    <link text="Fields" class="studiolink" assertPage="false" />
    <link text="description" class="mbLBLL" assertPage="false" />
    <checkbox id="calculated" set="false" />
    <form id="popup_form_id" >
      <browser assertnot="Formula Builder" />
      <button name="fsavebtn" assertPage="false" />
    </form>
    <wait timeout="3" />
    
    <!-- Delete account record -->
    <script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
    <script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
    
    <puts text="Test: Studio_10599.xml finished." />
</soda>
