
<soda>
	<!-- Verify the package can be disabled/enabled successfully -->
	<puts text="Test: ModuleLoader_8389.xml starting." />

	<!--Upload a custom module zip file -->
	<script file="{@global.scriptsdir}/modules/lib/ModuleLoader_Upload_Lib.xml" />
	<link id="moduleTab_Eric_b1" click="false" />

	<button value="Uninstall" />

	<radio id="remove_tables_true" set="true" />
	<button value="Commit" />
	<browser assert="Module Uninstalled Successfully" />
	
	<link text="Display Log" />
	<wait timeout="2" />
	<!-- Verify that there are no errors in display log -->
	<browser assert="Module Uninstalled Successfully" />

	<button value="Back to Module Loader" />
	
	<!-- Verify that the package has been successfully uninstalled -->
	<browser assert="The following extensions are installed on this system" />
	<div id="patch_downloads">
		<browser assert="P_Eric" />
	</div>
	<button value="Delete Package" alert="true" />

	<puts text="Test: ModuleLoader_8389.xml finished." />
</soda>
