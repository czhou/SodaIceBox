<soda>
	<!-- Document_Create_document_with_mandatory_field -->
	<puts text="Test: Doc_7982.xml starting." />

	<link id="moduleTab_Documents" />
	<browser assert="Documents" />

	<link text="Create Document" />

	<csv file="{@global.scriptsdir}/modules/lib/Document_Create_Lib.csv" var="doc_record_7982">      
		<!--Teams select-->
		<table id="EditView_team_name_table">
			<textfield id="team_name_collection_0" set="" />
			<button value="Select" />
		</table>
		<browser assert="Team Search" />

		<textfield name="name" set="{@doc_record_7982.teamname}" /> 
		<button value="Search" />

		<link text="{@doc_record_7982.teamname}" />

		<table id="EditView_team_name_table">
			<radio id="primary_team_name_collection_0" set="true" />
		</table>
		<form id="EditView">
			<timestamp />
			<textfield name="document_name" set="{@doc_record_7982.document_name} {@user.name} {@stamp}" /> 
			<filefield name="uploadfile" set="{@global.scriptsdir}_60\Modules\Lib\{@doc_record_7982.attach_path}" />
			<textfield name="revision" set="{@doc_record_7982.revision}" /> 
			<select id="category_id" set="{@doc_record_7982.category}" />
			<select id="template_type" set="{@doc_record_7982.template_type}" />
			<select id="subcategory_id" set="{@doc_record_7982.subcategory}" />
			<select id="status_id" set="{@doc_record_7982.status_id}" />
			<textfield name="active_date" set="{@doc_record_7982.active_date}" />
			<textfield name="exp_date" set="{@doc_record_7982.exp_date}" />         
			<textfield name="description" set="{@doc_record_7982.description}" />         
			<button value="Save" />
		</form>
		<browser assert="{@doc_record_7982.document_name} {@user.name} {@stamp}" />
	</csv>

	<script file="{@global.scriptsdir}/modules/lib/Document_Delete_Lib.xml" />

	<puts text="Test: Doc_7982.xml finished." />
</soda>
